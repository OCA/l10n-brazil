						<field name="tipo_pessoa" select="1"/>
						<separator string="Recupera Impostos" colspan="4"/>
						<field name="icms"/>
						<field name="ipi"/>
					</form>
				</field>
			</record>
	
			<record model="ir.ui.view" id="view_l10n_br_partner_fiscal_type_tree">
				<field name="name">l10n_br.partner.fiscal.type</field>
