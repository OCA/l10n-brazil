<odoo noupdate="False">

    <record id="base.BRL" model="res.currency">
        <field name="name">Real</field>
        <field name="symbol">R$</field>
        <field name="rounding">0.01</field>
        <field name="active" eval="True"/>
        <field name="position">before</field>
    </record>

    <record id="base.EUR" model="res.currency">
        <field name="name">Euro</field>
        <field name="symbol">€</field>
        <field name="rounding">0.01</field>
        <field name="active" eval="True"/>
        <field name="position">before</field>
    </record>

    <record id="base.USD" model="res.currency">
        <field name="name">Dólar</field>
        <field name="symbol">US$</field>
        <field name="rounding">0.01</field>
        <field name="active" eval="True"/>
        <field name="position">before</field>
    </record>

</odoo>
