<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!-- Parceiro -->
        <record id="view_l10n_br_base_partner_filter" model="ir.ui.view">
            <field name="name">l10n_br_base.partner.filter</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_res_partner_filter"/>
            <field name="arch" type="xml">
                <field name="name" position="after">
                    <field name="legal_name"/>
                    <field name="cnpj_cpf"/>
                </field>
            </field>
        </record>

        <record id="view_l10n_br_base_partner_tree" model="ir.ui.view">
            <field name="name">l10n_br_base.partner.tree</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_tree"/>
            <field name="arch" type="xml">
                <field name="display_name" position="after">
                    <field name="legal_name"/>
                    <field name="cnpj_cpf"/>
                    <field name="inscr_est"/>
                </field>
            </field>
        </record>

        <record id="view_l10n_br_base_partner_form" model="ir.ui.view">
            <field name="name">l10n_br_base.partner.form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form" position="inside">
                    <field name="exige_cnpj_cpf" invisible="1" />
                    <field name="exige_endereco" invisible="1" />
                    <field name="tipo_pessoa" invisible="1" />
                </xpath>
                <xpath expr="//h1" position="after">
                     <h2>
                        <field name="cnpj_cpf" placeholder="CNPJ ou CPF" attrs="{'required': [('exige_cnpj_cpf', '=', True)]}" />
                    </h2>
                </xpath>
                <xpath expr="//div[@class='oe_title']" position="after">
                    <group>
                        <field name="legal_name" string="Nome completo Razão Social" attrs="{'required': [('exige_cnpj_cpf', '=', True)]}" />
                        <!--<field name="fantasia" attrs="{'invisible': [('tipo_pessoa', '=', 'F')]}" />-->
                    </group>
                </xpath>
                <field name="street2" position="replace"/>
                <field name="zip" position="replace"/>
                <field name="street" position="replace">
                    <field name="zip" placeholder="CEP" style="width:50%"/>
                    <field name="street" placeholder="Logradouro"/>
                    <field name="number" placeholder="Número"/>
                    <field name="street2" placeholder="Complemento"/>
                    <field name="district" placeholder="Bairro"/>
                </field>
                <field name="state_id" position="attributes">
                    <attribute name="domain">[('country_id','=',country_id)]</attribute>
                    <attribute name="style">width:100%</attribute>
                    <attribute name="invisible">1</attribute>
                </field>
                <field name="country_id" position="replace"/>
                <field name="state_id" position="before">
                    <field name="country_id" placeholder="País" invisible="1"/>
                </field>
                <field name="state_id" position="after">
                    <field name="l10n_br_city_id" placeholder="Cidade"/>
                </field>
                <field name="city" position="replace">
                    <field name="city" invisible="1"/>
                </field>
                <xpath expr="//div[@name='div_address']/field[@name='street']" position="after">
                    <field name="number" placeholder="Número"/>
                </xpath>
                <xpath expr="//div[@name='div_address']/field[@name='street2']" position="attributes">
                    <attribute name="placeholder">Complemento</attribute>
                </xpath>
                <xpath expr="//div[@name='div_address']/field[@name='street2']" position="after">
                    <field name="district" placeholder="Bairro"/>
                </xpath>
                <xpath expr="//div[@name='div_address']/field[@name='state_id']" position="after">
                    <field name="l10n_br_city_id" placeholder="Cidade" style="width: 40%%"/>
                </xpath>
                <xpath expr="//div[@name='div_address']/field[@name='city']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//div[@name='div_address']" position="replace">
                    <div name="div_address">
                        <field name="zip" placeholder="CEP" style="width: 20%"/>
                        <div class="address_format">
                            <field name="street" placeholder="Logradouro" style="width: 70%"/>
                            <field name="number" placeholder="Número" style="width: 20%"/>
                        </div>
                        <div class="address_format">
                            <field name="street2" placeholder="Complemento" style="width: 45%"/>
                            <field name="district" placeholder="Bairro" style="width: 45%"/>
                        </div>
                        <div class="address_format">
                            <field name="country_id" placeholder="País" class="oe_no_button"
                                   options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}"
                                   style="width: 30%"/>
                            <field name="state_id" class="oe_no_button" placeholder="Estado"
                                   style="width: 30%" options="{&quot;no_open&quot;: True}"
                                   domain="[('country_id','=',country_id)]"/>
                            <field name="l10n_br_city_id" placeholder="Cidade" style="width: 30%"/>
                        </div>
                    </div>
                </xpath>
                <xpath expr="//notebook/page" position="before">
                    <page name="inscricoes" string="Inscrições e registros" autofocus="autofocus" >
                        <group col="4">
                            <group col="4" colspan="4">
                                <separator string="Inscrição Estadual" colspan="4" />
                                <field name="contribuinte" colspan="2" required="1"/>
                                <field name="inscr_est" attrs="{'invisible': [('contribuinte', '!=', '1')], 'required': [('contribuinte', '=', '1')]}" colspan="2" />
                            </group>
                            <newline />
                            <group col="6" colspan="4" attrs="{'invisible': [('tipo_pessoa', '!=', 'F')]}">
                                <separator string="RG" colspan="6"  />
                                <field name="rg_numero" string="Número" colspan="2" />
                                <field name="rg_orgao_emissor" string="Órgão emissor" colspan="2" />
                                <field name="rg_data_expedicao" string="Data de emissão" colspan="2" />
                            </group>
                            <newline />
                            <group col="4" colspan="4" attrs="{'invisible': [('tipo_pessoa', '=', 'F')]}" >
                                <separator string="Outras inscrições" colspan="6" />
                                <separator string="Inscrição Municipal" colspan="2" />
                                <separator string="CEI" colspan="2" />
                                <field name="inscr_mun" colspan="2" nolabel="1" />
                                <field name="cei" colspan="2" nolabel="1" />
                                <separator string="SUFRAMA" colspan="2" />
                                <separator string="RNTRC" colspan="2" />
                                <field name="suframa" colspan="2" nolabel="1" />
                                <field name="rntrc" colspan="2" nolabel="1" />
                                <separator string="CRC" />
                                <newline />
                                <field name="crc" colspan="2" />
                                <field name="crc_uf" colspan="2" options="{'no_open': True, 'no_create': True}" />
                            </group>
                        </group>
                    </page>
                </xpath>
                <page position="after" name="sales_purchases">
                    <page name="fiscal" string="Fiscal">
                        <group col="4">
                            <field name="regime_tributario"/>
                            <newline/>
                            <field name="eh_consumidor_final"/>
                            <field name="eh_orgao_publico"/>
                            <field name="eh_transportadora"/>
                            <field name="employee"/>
                        </group>
                        <!--
                        <field name="eh_cooperativa" />
                        <field name="eh_convenio" />
                        <field name="eh_sindicato" />
                        -->
                    </page>
                </page>
            </field>
        </record>

    <menuitem
        id="menu_res_partner_customer"
        sequence="300"
        name="Clientes"
        parent="menu_cadastro_partner"
        action="base.action_partner_customer_form"
        />

    <menuitem
        id="menu_res_partner_supplier"
        sequence="400"
        name="Fornecedores"
        parent="menu_cadastro_partner"
        action="base.action_partner_supplier_form"
        />

    <menuitem
        id="menu_res_partner_employee"
        sequence="500"
        name="Empregados"
        parent="menu_cadastro_partner"
        action="base.action_partner_employee_form"
        />

    <menuitem
        id="menu_res_partner_other"
        sequence="800"
        name="Outros"
        parent="menu_cadastro_partner"
        action="base.action_partner_other_form"
        />

    <menuitem
        id="menu_res_partner_other"
        sequence="900"
        name="Categorias"
        parent="menu_cadastro_partner"
        action="base.action_partner_category_form"
        />

    </data>
</openerp>
