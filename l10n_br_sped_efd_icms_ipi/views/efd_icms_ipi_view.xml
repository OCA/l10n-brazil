        <field name="priority">1</field>
        <field name="arch" type="xml">
            <search string="Sped EFD - ICMS IPI"></search>
        </field>
    </record> -->

    <record model="ir.actions.act_window" id="sped_efd_icms_ipi_action">
        <field name="name">Sped EFD - ICMS IPI</field>
        <field name="res_model">sped.efd.icms.ipi</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        id="sped_efd_icms_ipi_menu"
        name="SPED EFD - ICMS IPI"
        parent="l10n_br_fiscal.accountant_menu"
        action="sped_efd_icms_ipi_action"
        groups="l10n_br_fiscal.group_manager"
        sequence="99"
    />

</odoo>
