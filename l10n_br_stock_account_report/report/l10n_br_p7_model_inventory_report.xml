<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <!-- Formato A4 com margens menores e para evitar o espaço em branco
     no cabeçalho( campo header_spacing )-->
    <record id="paperformat_lowmargin" model="report.paperformat">
        <field name="name">European A4 - Low Margin</field>
        <field name="default" eval="True" />
        <field name="format">A4</field>
        <field name="page_height">0</field>
        <field name="page_width">0</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">8</field>
        <field name="margin_bottom">13</field>
        <field name="margin_left">7</field>
        <field name="margin_right">7</field>
        <field name="header_line" eval="False" />
        <field name="header_spacing">0</field>
        <field name="dpi">90</field>
    </record>


    <!-- TODO o print_report_name por algum motivo não funciona -->
    <report
        id="l10n_br_p7_model_inventory_report"
        string="Brazilian P7 Model Invetory Report"
        model="l10n_br.p7.model.inventory.report.wizard"
        report_type="qweb-pdf"
        paperformat="l10n_br_stock_account_report.paperformat_lowmargin"
        file="l10n_br_stock_account_report.main_l10n_br_p7_model_inventory_report_view"
        name="l10n_br_stock_account_report.main_l10n_br_p7_model_inventory_report_view"
        menu="False"
        print_report_name="'Report Brazilian P7-%s' % (object.date)"
    />

</odoo>
