<?xml version="1.0"?>
<openerp>
    <data>

        <!-- Action to open Serasa -->
        <act_window id="action_serasa_form"
                    name="Consulta Serasa"
                    res_model="consulta.serasa"
                    view_mode="tree,form" />

        <record id="view_form_consulta_serasa" model="ir.ui.view">
            <field name="name">Consulta Serasa</field>
            <field name="model">consulta.serasa</field>
            <field name="arch" type="xml">

                <form>
                    <!--<header>-->
                        <!--<button name="do_consulta_serasa" type="object" icon="fa-lock" class="oe_inline oe_stat_button" string="Consultar" />-->
                    <!--</header>-->
                    <sheet>
                        <group name="group_top">
                            <group>
                              <field name="partner_id" string="Parceiro" />
                                <field name="data_consulta" string="Data da Consulta" />

                            </group>
                            <group>
                                <field name="status" string="Status Parceiro" />
                                <field name="partner_fundation" string="Fundação" />
                                <field name="partner_identification" string="Documento" />
                            </group>
                        </group>
                        <notebook>
                            <page string="Informaçoes">
                                <separator string="Protestos"/>
                                <field  name="protesto_ids" sum="valor">
                                    <tree>
                                        <field name="date"/>
                                        <field name="cartorio"/>
                                        <field name="city" />
                                        <field name="uf" />
                                        <field name="value"/>
                                    </tree>
                                </field>
                                <separator string="Pendências Financeiras"/>
                                <field name="pefin_ids" sum="valor">
                                    <tree>
                                        <field name="date"/>
                                        <field name="modalidade"/>
                                        <field name="origem" />
                                        <field name="avalista" />
                                        <field name="value"/>
                                    </tree>
                                </field>
                                <separator string="Cheques"/>
                                <field name="cheque_ids" sum="valor">
                                    <tree>
                                        <field name="date"/>
                                        <field name="num_cheque"/>
                                        <field name="alinea" />
                                        <field name="name_bank" />
                                        <field name="city" />
                                        <field name="uf" />
                                        <field name="value"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Retorno">
                                <field name="string_retorno" string="String Retorno"/>
                            </page>
                        </notebook>

                    </sheet>
                </form>

            </field>
        </record>

        <record	id="view_tree_consulta_serasa" model="ir.ui.view">
            <field	name="name">Consultas Serasa</field>
            <field	name="model">consulta.serasa</field>
            <field	name="arch"	type="xml">
                <tree>
                    <field name="partner_id" string="Parceiro"/>
                    <field name="data_consulta" string="Data da Consulta"/>
                    <field name="status" />
                </tree>
            </field>
        </record>

        <!-- Menu item to open serasa -->
        <menuitem id="menu _serasa"
                  name="Consulta Serasa"
                  parent="base.menu_sales"
                  sequence="20"
                  action="action_serasa_form" />


        <record id="view_serasa_crednet_partner_form" model="ir.ui.view">
			<field name="name">serasa_crednet.partner.form</field>
			<field name="model">res.partner</field>
			<field name="inherit_id" ref="base.view_partner_form" />
			<field name="arch" type="xml">
				<notebook>
					<page position="inside" string="Serasa">
                        <button name="do_consultar_serasa"
                                type="object"
                                icon="fa-search"
                                class="oe_inline oe_stat_button"
                                string="Consultar"
                                position="right" />
                        <field name="consulta_serasa" readonly="1">
                            <tree>
                                <field name="data_consulta"/>
                                <field name="protesto_count"/>
                                <field name="protesto_sum"/>
                                <field name="pefin_count"/>
                                <field name="pefin_sum"/>
                                <field name="cheque_count"/>
                                <field name="cheque_sum"/>
                                <field name="status"/>
                            </tree>
                        </field>
					</page>
				</notebook>
			</field>
        </record>

        <record id="view_account_config_settings_serasa" model="ir.ui.view">
            <field name="name">account.config.settings.serasa</field>
            <field name="model">account.config.settings</field>
            <field name="inherit_id" ref="account.view_account_config_settings" />
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//group[@name='bank_cash']" position="after">
                        <group name="serasa" string="Serasa">
                            <label for="id" string="Configuration"/>
                            <div>
                                <div>
                                    <label string="Login:"/>
                                    <field name="logon_serasa" class="oe_inline" />
                                </div>
                                <div>
                                    <label string="Senha:"/>
                                    <field name="senha_serasa" class="oe_inline" password="True"/>
                                </div>
                            </div>
                        </group>
                    </xpath>
                </data>
            </field>
        </record>

    </data>
</openerp>