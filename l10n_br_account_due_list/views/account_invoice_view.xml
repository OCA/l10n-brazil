<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="invoice_form" model="ir.ui.view">
        <field name="name">l10n_br_account_due_list.invoice.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">
            <notebook position="inside">
                <page
                    string="Financial"
                    attrs="{'invisible': [('financial_move_line_ids','=',True)]}"
                    name="financial_move_line_tab"
                >
                    <field name="financial_move_line_ids">
                        <tree>
                            <field name="account_id" />
                            <field name="name" />
                            <field name="debit" />
                            <field name="credit" />
                            <field name="date_maturity" />
                        </tree>
                    </field>
                </page>
                 <page string="Payments" name="payment_move_line_tab">
                    <field name="payment_move_line_ids" />
                </page>
            </notebook>
        </field>
    </record>

</odoo>
