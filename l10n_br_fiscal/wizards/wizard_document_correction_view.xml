<odoo>

    <record model="ir.ui.view" id="wizard_document_correction_form">
        <field name="name">l10n_br_fiscal.wizard_document_correction.form (in l10n_br_fiscal)</field>
        <field name="model">l10n_br_fiscal.wizard_document_correction</field>
        <field name="arch" type="xml">
            <form string="Carta de Correção">
                <group>
                    <field name="justificative"/>
                </group>
                <footer>
                    <button name="doit"
                            string="OK"
                            class="btn-primary"
                            type="object"/>
                    <button string="Cancel"
                            class="btn-default"
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="wizard_document_correction_action">
        <field name="name">Carta de Correção</field>
        <field name="res_model">l10n_br_fiscal.wizard_document_correction</field>
        <field name="view_mode">form</field>
        <field name="context">{}</field>
        <field name="target">new</field>
    </record>


</odoo>
