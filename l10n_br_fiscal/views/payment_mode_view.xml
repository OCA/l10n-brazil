        <field name="arch" type="xml">
            <search>
                <field name="name"/>
            </search>
        </field>
    </record>

    <record model="ir.ui.view" id="l10n_br_fiscal_payment_mode_tree_view">
        <field name="name">l10n_br_fiscal.payment.mode.tree (in l10n_br_fiscal)</field>
        <field name="model">l10n_br_fiscal.payment.mode</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="forma_pagamento"/>
            </tree>
        </field>
    </record>

