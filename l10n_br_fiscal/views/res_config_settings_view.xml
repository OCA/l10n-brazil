<?xml version="1.0"?>
<odoo>

    <record id="l10n_br_fiscal_res_config_settings_form" model="ir.ui.view">
        <field name="name">l10n_br_fiscal.res.config.settings.view.form</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="40"/>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div id="fiscal" class="app_settings_block" data-string="Fiscal" string="Fiscal" data-key="fiscal" groups="l10n_br_fiscal.group_manager">
                    <h2>Fiscal</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="ibpt_api"/>
                            </div>
                            <div class="o_setting_right_pane" id="ibpt_api_settings">
                                <label for="ibpt_api"/>
                                <span class="fa fa-lg fa-building-o" title="Values set here are company-specific."/>
                                <div class="text-muted">
                                    Use IBPT API to Update Estimate Taxes for products and services
                                </div>
                                <div attrs="{'invisible': [('ibpt_api', '=', False)]}">
                                    <div class="content-group mt16">
                                        <label for="ibpt_update_days" class="o_light_label"/>
                                        <field name="ibpt_update_days" attrs="{'required': [('ibpt_api', '=', True)]}"/> dias
                                    </div>
                                    <div class="content-group mt16">
                                        <label for="ibpt_token" class="o_light_label"/>
                                        <field name="ibpt_token" attrs="{'required': [('ibpt_api', '=', True)]}"/>
                                    </div>
                                    <div>
                                        <a href="https://deolhonoimposto.ibpt.org.br" class="oe_link" target="_blank">
                                            <i class="fa fa-arrow-right"/> Generate an Access Key
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                            </div>
                            <div class="o_setting_right_pane" id="max_qty_exceeded_perc_settings">
                                <label for="cert_expired_alert"/>
                                <div class="text-muted">
                                    Alert certificate expiration.
                                </div>
                                <div>
                                    <div class="content-group mt16">
                                        <field name="cert_expired_alert"/> Days Before
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
