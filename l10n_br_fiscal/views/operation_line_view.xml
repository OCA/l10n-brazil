<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="operation_line_tree" model="ir.ui.view">
        <field name="name">l10n_br_fiscal.operation.line.tree</field>
        <field name="model">l10n_br_fiscal.operation.line</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="operation_line_form" model="ir.ui.view">
        <field name="name">l10n_br_fiscal.operation.line.form</field>
        <field name="model">l10n_br_fiscal.operation.line</field>
        <field name="arch" type="xml">
            <form string="Fiscal Operation Line">
                <field name="fiscal_type" invisible="1"/>
                <field name="operation_type" invisible="1"/>
                <header>
                    <button name="action_review" type="object" states="draft" string="Review" class="oe_highlight" groups="l10n_br_fiscal.group_manager"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                    <notebook>
                      <page name="general" string="General">
                        <group string="Tax Framework" name="tax_framework">
                            <field name="partner_tax_framework"/>
                            <field name="company_tax_framework"/>
                            <field name="ind_ie_dest"/>
                        </group>
                        <group>
                            <field name="product_type"/>
                            <field name="icms_origin"/>
                            <field name="add_to_amount"/>
                        </group>
                      </page>
                      <page name="cfop" string="CFOPs" attrs="{'invisible': [('operation_type', '=', 'all')]}">
                          <group>
                            <field name="cfop_internal_id"/>
                            <field name="cfop_external_id"/>
                            <field name="cfop_export_id"/>
                          </group>
                      </page>
                      <page name="tax_definitions" string="Tax Definitions">
                          <field name="tax_definition_ids" nolabel="1" context="{'default_company_id': id}">
                              <tree>
                                  <field name="tax_group_id"/>
                                  <field name="is_taxed"/>
                              </tree>
                              <form string="Tax Definition">
                                  <field name="company_id" invisible="1"/>
                                  <field name="tax_domain" invisible="1"/>
                                  <field name="type_in_out" invisible="1"/>
                                  <group>
                                      <field name="tax_group_id"/>
                                      <field name="is_taxed"/>
                                      <field name="is_debit_credit" attrs="{'invisible': [('is_taxed', '=', False)]}"/>
                                      <field name="tax_retention"/>
                                      <field name="custom_tax"/>
                                      <field name="tax_id" attrs="{'invisible': [('custom_tax', '=', False)], 'required': [('custom_tax', '=', True)]}"/>
                                      <field name="cst_id" attrs="{'invisible': ['|', ('custom_tax', '=', False), ('tax_domain', 'not in', ('icmssn', 'icms', 'ipi', 'pis', 'pisst', 'cofins', 'cofinsst'))], 'required': [('custom_tax', '=', True), ('tax_domain', 'in', ('icms', 'ipi', 'pis', 'pisst', 'cofins', 'cofinsst'))]}"/>
                                  </group>
                              </form>
                          </field>
                      </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

</odoo>
