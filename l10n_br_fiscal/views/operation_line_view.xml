<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="operation_line_tree" model="ir.ui.view">
        <field name="name">l10n_br_fiscal.operation.line.tree</field>
        <field name="model">l10n_br_fiscal.operation.line</field>
        <field name="arch" type="xml">
            <tree string="Fiscal Operation Line">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="operation_line_form" model="ir.ui.view">
        <field name="name">l10n_br_fiscal.operation.line.form</field>
        <field name="model">l10n_br_fiscal.operation.line</field>
        <field name="arch" type="xml">
            <form string="Fiscal Operation Line">
                <field name="fiscal_type" invisible="1"/>
                <field name="operation_type" invisible="1"/>
                <header>
                    <button name="action_review" type="object" states="draft" string="Review" class="oe_highlight" groups="l10n_br_fiscal.group_manager"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="cfop_internal_id"/>
                        <field name="cfop_external_id"/>
                        <field name="cfop_export_id"/>
                    </group>
                    <group string="Tax Framework" name="tax_framework">
                        <field name="partner_tax_framework"/>
                        <field name="company_tax_framework"/>
                        <field name="ind_ie_dest"/>
                    </group>
                    <group>
                        <field name="product_type"/>
                        <field name="add_to_amount"/>
                    </group>
                    <notebook>
                        <page name="icms" string="ICMS" attrs="{'invisible': [('product_type', '=', '09')]}">
                            <group name="icms" string="ICMS">
                                <field name="icms_custom"/>
                                <field name="icms_tax_id" attrs="{'readonly': [('icms_custom', '=', False)]}"/>
                                <field name="icms_origin" attrs="{'readonly': [('icms_custom', '=', False)]}"/>
                                <field name="icms_cst_id" attrs="{'invisible': [('company_tax_framework', '!=', '3')], 'readonly': [('icms_custom', '=', False)]}"/>
                                <field name="icms_cst_csosn_id" attrs="{'invisible': [('company_tax_framework', '=', '3')], 'readonly': [('icms_custom', '=', False)]}"/>
                                <field name="icms_base_add_ipi"/>
                                <field name="icms_st_base_add_ipi"/>
                            </group>
                            <group name="icms" string="ICMS ST">
                            </group>
                            <group name="icms" string="ICMS DIFAL">
                            </group>
                        </page>
                        <page name="iss" string="ISSQN" attrs="{'invisible': [('product_type', '!=', '09')]}">
                            <group>

                            </group>
                        </page>
                        <page name="ipi" string="IPI">
                            <group>
                                <field name="ipi_custom"/>
                                <field name="ipi_tax_id" attrs="{'readonly': [('ipi_custom', '=', False)]}"/>
                                <field name="ipi_cst_id" attrs="{'readonly': [('ipi_custom', '=', False)]}"/>
                                <field name="ipi_guideline_id" attrs="{'readonly': [('ipi_custom', '=', False)]}"/>
                            </group>
                        </page>
                        <page name="pis_cofins" string="PIS/COFINS">
                            <group>
                                <field name="pis_cofins_custom"/>
                            </group>
                            <group name="pis" string="PIS">
                                <field name="pis_tax_id" attrs="{'readonly': [('pis_cofins_custom', '=', False)]}"/>
                                <field name="pis_cst_id" attrs="{'readonly': [('pis_cofins_custom', '=', False)]}"/>
                                <field name="pis_cofins_revenue_code" attrs="{'readonly': [('pis_cofins_custom', '=', False)]}"/>
                            </group>
                            <group name="cofins" string="COFINS">
                                <field name="cofins_tax_id" attrs="{'readonly': [('pis_cofins_custom', '=', False)]}"/>
                                <field name="cofins_cst_id" attrs="{'readonly': [('pis_cofins_custom', '=', False)]}"/>
                            </group>
                        </page>
                        <page name="retentions" string="Retentions">
                            <group>

                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

</odoo>
