<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="document_event_search" model="ir.ui.view">
        <field name="name">l10n_br_fiscal.event.search</field>
        <field name="model">l10n_br_fiscal.event</field>
        <field name="arch" type="xml">
            <search string="Fiscal Document Event">
                <field name="origin"/>
            </search>
        </field>
    </record>

    <record id="document_event_tree" model="ir.ui.view">
        <field name="name">l10n_br_fiscal.event.tree</field>
        <field name="model">l10n_br_fiscal.event</field>
        <field name="arch" type="xml">
            <tree edit="false" create="false">
                <field name="type"/>
                <field name="company_id"/>
                <field name="response"/>
                <field name="origin"/>
                <field name="write_date"/>
                <field name="date"/>
                <field name="status_code"/>
                <field name="message"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="document_event_form" model="ir.ui.view">
        <field name="name">l10n_br_fiscal.event.form</field>
        <field name="model">l10n_br_fiscal.event</field>
        <field name="arch" type="xml">
            <form string="Eventos Eletronicos" edit="false" create="false">
                <header>
                    <field name="state" widget="statusbar"/>
                </header>
                <group>
                    <field name="type"/>
                    <field name="company_id"/>
                    <field name="response"/>sta
                    <field name="origin"/>
                    <field name="write_date"/>
                    <field name="path_file_request"/>
                    <field name="date"/>
                    <field name="path_file_response"/>
                    <field name="status_code"/>
                    <field name="message"/>
                    <field name="state"/>
                </group>
            </form>
        </field>
    </record>

</odoo>
