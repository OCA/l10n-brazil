<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="tax_icms_regulation_search" model="ir.ui.view">
        <field name="name">l10n_br_fiscal.tax.icms.regulation.search</field>
        <field name="model">l10n_br_fiscal.tax.icms.regulation</field>
        <field name="arch" type="xml">
            <search string="ICMS Regulation">
                <field name="name"/>
            </search>
        </field>
    </record>

    <record id="tax_icms_regulation_tree" model="ir.ui.view">
        <field name="name">l10n_br_fiscal.tax.icms.regulation.tree</field>
        <field name="model">l10n_br_fiscal.tax.icms.regulation</field>
        <field name="arch" type="xml">
            <tree string="ICMS Regulation">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="tax_icms_regulation_form" model="ir.ui.view">
        <field name="name">l10n_br_fiscal.tax.icms.regulation.form</field>
        <field name="model">l10n_br_fiscal.tax.icms.regulation</field>
        <field name="arch" type="xml">
            <form string="ICMS Regulation">
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                    <notebook>
                        <page name="icms" string="ICMS Interno">
                            <field name="icms_ids" nolabel="1"/>
                        </page>
                        <page name="icms_st" string="ICMS ST">
                            <field name="icms_st_ids" nolabel="1"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
