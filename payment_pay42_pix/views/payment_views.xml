<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>

        <record id="acquirer_form_pay24pix" model="ir.ui.view">
            <field name="name">acquirer.form.pay24pix</field>
            <field name="model">payment.acquirer</field>
            <field name="inherit_id" ref="payment.acquirer_form" />
            <field name="arch" type="xml">
                <xpath expr='//group[@name="acquirer"]' position='inside'>
                    <group attrs="{'invisible': [('provider', '!=', 'pay24pix')]}">
                        <field
                            name="pay24pix_email_account"
                            attrs="{'required':[ ('provider', '=', 'pay24pix'), ('state', '!=', 'disabled')]}"
                        />
                        <field
                            name="pay24pix_api_key"
                            attrs="{'required':[ ('provider', '=', 'pay24pix'), ('state', '!=', 'disabled')]}"
                        />
                        <a
                            colspan="2"
                            href="https://documenter.getpostman.com/view/3616908/Szzq4F2k"
                            target="_blank"
                        >How to configure your pay24 account?</a>
                    </group>
                </xpath>
            </field>
        </record>

        <record id="transaction_form_pay24pix" model="ir.ui.view">
            <field name="name">acquirer.transaction.form.pay24pix</field>
            <field name="model">payment.transaction</field>
            <field name="inherit_id" ref="payment.transaction_form" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='acquirer_reference']" position="after">
                    <button
                        name="action_pay24pix_check_transaction_status"
                        string="Check Status"
                        type="object"
                    />
                    <field name="pay24pix_date_due" readonly="1" />
                    <field name="pay24pix_qrcode" readonly="1" />
                    <field name="pay24pix_currency" readonly="1" />
                    <field name="pay24pix_amount" readonly="1" />
                </xpath>
            </field>
        </record>

    </data>
</odoo>
