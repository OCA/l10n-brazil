<odoo>

    <record id="l10n_br_cnpj_res_partner_form" model="ir.ui.view">
        <field name="name">l10n_br_base.res.partner.form (in l10n_br_cnpj)</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="l10n_br_base.l10n_br_base_partner_form" />
        <field name="priority">105</field>
        <field name="arch" type="xml">

                <field name="cnpj_cpf" position="replace">
                     <div class="o_row" colspan="4">
                        <field name="cnpj_cpf" nolabel="1" />
                        <button
                        name="search_cnpj"
                        type="object"
                        attrs="{'invisible':
                                [
                                    ('country_id', '!=', %(base.br)d),
                                    ('is_company','!=', True),
                                ]}"
                        class="btn-sm btn-link mb4 fa fa-search oe_edit_only oe_inline"
                        aria-label="Pesquisar CNPJ"
                        title="Pesquisar CNPJ"
                    />
                    </div>
                </field>
        </field>
    </record>

</odoo>
