<odoo>

    <record id="l10n_br_cnpj_res_config_settings_form" model="ir.ui.view">
        <field name="name">res.config.settings.form (in l10n_br_cnpj)</field>
        <field name="model">res.config.settings</field>
        <field
            name="inherit_id"
            ref="l10n_br_base.l10n_br_base_res_config_settings_form"
        />
        <field name="arch" type="xml">
            <xpath expr="//div[@name='disable_ie_validation']" position="after">
                <div class="col-12 col-lg-6 o_setting_box" name="l10n_br_cnpj_api">
                    <div class="o_setting_left_pane" />
                    <div class="o_setting_right_pane">
                        <span class="o_form_label">Brazilian CNPJ service API</span>
                        <div class="text-muted">
                            Brazilian CNPJ service API to search partner information using cnpj code.
                        </div>
                        <div class="content-group mt16">
                            <label for="cnpj_provider" class="o_light_label" />
                            <field name="cnpj_provider" required="1" />
                        </div>
                        <div class="content-group mt16">
                            <label for="cnpj_update_days" class="o_light_label" />
                            <field name="cnpj_update_days" required="1" /> days
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
