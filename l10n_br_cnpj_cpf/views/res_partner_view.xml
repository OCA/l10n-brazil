<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <!--
    views: res.partner
    -->

    <record id="l10n_br_cnpj_cpf_partner_form" model="ir.ui.view">
        <field name="name">l10n_br_cnpj_cpf.res.partner.form</field>
        <field name="model">res.partner</field>
        <field name="priority">99</field>
        <field name="inherit_id" ref="l10n_br_base.l10n_br_base_partner_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button
                    name="action_consultar_cad"
                    type="object"
                    class="oe_stat_button"
                    icon="fa-search"
                    string="Consultar CNPJ/CPF/IE"
                ></button>
            </xpath>
        </field>
    </record>

</odoo>
