                    <field name="date_to"/>
                    <field name="state"/>
                    <field name="payslip_run_id" invisible="1"/>
                </tree>
            </field>
        </record>

        <record id="action_view_hr_calculo_medias_view_tree"
                model="ir.actions.act_window">
            <field name="name">Férias</field>
            <field name="res_model">hr.payslip</field>
