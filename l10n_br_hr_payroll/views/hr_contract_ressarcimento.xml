<openerp>
    <data>

        <!-- Ressarcimento de Contrato hr.contract.ressarcimento -->

        <!--Visão Form -->
        <record model="ir.ui.view" id="hr_contract_ressarcimento_form_view">
            <field name="name">hr.contract.ressarcimento.form (in l10n_br_hr_payroll)</field>
            <field name="model">hr.contract.ressarcimento</field>
            <field name="priority" eval="200"/>
            <field name="arch" type="xml">
                <form string="Contract" >
                    <header>
                        <button string="Submeter para Aprovação" name="button_confirm" type="object" class="oe_highlight" attrs="{'invisible':[('state', 'in', ['confirmado', 'aprovado'])]}"/>
                        <button string="Aprovar e Enviar email" name="button_aprovar" groups="base.group_hr_superintendente" type="object" class="oe_highlight" attrs="{'invisible':[('state', 'not in', ['provisionado','confirmado'])]}"/>
                        <!--button string="Não aprovar" name="button_reprovar" type="object" class="oe_highlight" groups="base.group_hr_superintendente" attrs="{'invisible':[('state', '!=', 'confirmado')]}"/-->
                        <field name="state" widget="statusbar" statusbar_visible="aberto,confirmado,provisionado,aprovado" statusbar_colors='{"aberto":"red","provisionado":"red","confirmado":"blue"}'/>
                    </header>
                    <sheet>
                        <div class="oe_title"></div>
                        <group>
                            <field name="valor_provisionado" attrs="{'readonly':[('state','!=','aberto')]}" />
                        </group>
                        <group>
                            <field name="account_period_provisao_id" options="{'no_create': 1}" attrs="{'readonly':[('state','!=','aberto')], 'required':[('valor_provisionado','=',True)], 'invisible':[('valor_provisionado','=', False)]}" />
                            <field name="account_period_id" options="{'no_create': 1}" attrs="{'readonly':[('state','not in', ['aberto', 'provisionado'])], 'required':[('valor_provisionado','=',False)], 'invisible':[('valor_provisionado','=', True), ('state', 'not in', ['provisionado', 'aprovado'])]}" />
                            <field name="partner_ids" options="{'no_create': 1}" required="1" widget="many2many_tags" />
                        </group>
                        <br /><br />
                        <h2 attrs="{'invisible':[('valor_provisionado','=', False)]}">Ressarcimento do contrato (provisionamento)</h2>
                        <field name="hr_contract_ressarcimento_provisionado_line_ids" nolabel="1" attrs="{'readonly':[('state','!=','aberto')], 'required':[('valor_provisionado','=',True)], 'invisible':[('valor_provisionado','=', False)]}" widget="one2many_list" >
                            <tree editable="bottom">
                                <field name="descricao" />
                                <field name="total" sum="Total de ressarcimento" />
                            </tree>
                        </field>
                        <h2 attrs="{'invisible':[('valor_provisionado','=', True), ('state', 'not in', ['confirmado', 'provisionado', 'aprovado'])]}">Ressarcimento do contrato</h2>
                        <field name="hr_contract_ressarcimento_line_ids" nolabel="1" attrs="{'readonly':[('state','not in', ['aberto', 'provisionado'])], 'required':['|', ('valor_provisionado','=',False), ('state', '=', 'provisionado')], 'invisible':[('valor_provisionado','=', True), ('state', 'not in', ['confirmado', 'provisionado', 'aprovado'])]}" widget="one2many_list" >
                            <tree editable="bottom">
                                <field name="descricao" />
                                <field name="total" sum="Total de ressarcimento Provisionado" />
                            </tree>
                        </field>

                        <group>
                            <field name="aprovado_por" attrs="{'invisible': [('aprovado_por','=', False)]}" readonly="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!--Visão Tree -->
        <record model="ir.ui.view" id="hr_contract_ressarcimento_tree_view">
            <field name="name">hr.contract.ressarcimento.tree (in l10n_br_hr_payroll)</field>
            <field name="model">hr.contract.ressarcimento</field>
            <field name="arch" type="xml">
                <tree string="Ressarcimento de Contrato">
                    <field name="account_period_provisao_id"/>
                    <field name="account_period_id"/>
                    <field name="total"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <!--Action do ressarcimento do contrato-->
        <record model="ir.actions.act_window" id="hr_contract_ressarcimento_action">
            <field name="name">Ressarcimentos do Contrato</field>
            <field name="res_model">hr.contract.ressarcimento</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record model="ir.actions.act_window.view" id="hr_contract_ressarcimento_action_tree">
            <field eval="1" name="sequence"/>
            <field name="view_mode">tree</field>
            <field name="act_window_id" ref="hr_contract_ressarcimento_action"/>
            <field name="view_id" ref="hr_contract_ressarcimento_tree_view"/>
        </record>

        <record model="ir.actions.act_window.view" id="hr_contract_ressarcimento_action_form">
            <field eval="2" name="sequence"/>
            <field name="view_mode">form</field>
            <field name="act_window_id" ref="hr_contract_ressarcimento_action"/>
            <field name="view_id" ref="hr_contract_ressarcimento_form_view"/>
        </record>

        <menuitem
            action="hr_contract_ressarcimento_action"
            id="menu_hr_contract_ressarcimento"
            name="Ressarcimentos do Contrato"
            parent="hr.menu_hr_configuration"
            sequence="99"
        />


    </data>
</openerp>
