<openerp>
    <data>

        <!-- Ressarcimento de Contrato hr.contract.ressarcimento -->

        <!--Visão Form -->
        <record model="ir.ui.view" id="hr_contract_ressarcimento_form_view">
            <field name="name">hr.contract.ressarcimento.form (in l10n_br_hr_payroll)</field>
            <field name="model">hr.contract.ressarcimento</field>
            <field name="priority" eval="200"/>
            <field name="arch" type="xml">
                <form string="Contract">
                    <header>
                        <button string="Submeter para Aprovação" name="button_confirm" type="object" class="oe_highlight" attrs="{'invisible':[('state', '!=', 'aberto')]}"  />
                        <button string="Aprovar e Enviar email" name="button_aprovar" groups="abgf_purchase_contract.group_contract_purchase_superintendente" type="object" class="oe_highlight" attrs="{'invisible':[('state', 'not in', ['provisionado','confirmado'])]}"  />
                        <button string="Enviar e-mail" name="button_send_mail" type="object" class="oe_highlight"/>
                        <field name="state" widget="statusbar" statusbar_visible="aberto,confirmado,aprovado" statusbar_colors='{"aberto":"red","provisionado":"red","confirmado":"blue"}'/>
                    </header>
                    <sheet>
                        <div class="oe_title"></div>

                        <group>
                            <field name="account_period_id" required="1"/>
                        </group>

                        <group>
                            <field name="valor_provisionado" />
                            <field name="partner_ids" required="1" widget="many2many_tags" />
                        </group>

                        <group>
                            <field name="hr_contract_ressarcimento_line_ids" required="1" nolabel="1" widget="one2many_list" >
                                <tree editable="bottom">
                                    <field name="descricao" />
                                    <field name="total" sum="Total de ressarcimento" />
                                </tree>
                            </field>
                        </group>

                        <group>
                            <field name="aprovado_por" attrs="{'invisible': [('aprovado_por','=', False)]}"/>
                        </group>

                    </sheet>
                </form>
            </field>
        </record>

        <!--Visão Tree -->
        <record model="ir.ui.view" id="hr_contract_ressarcimento_tree_view">
            <field name="name">hr.contract.ressarcimento.tree (in l10n_br_hr_payroll)</field>
            <field name="model">hr.contract.ressarcimento</field>
            <field name="arch" type="xml">
                <tree string="Ressarcimento de Contrato">
                    <field name="account_period_id"/>
                    <field name="total"/>
                    <field name="valor_provisionado"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <!--Action do ressarcimento do contrato-->
        <record model="ir.actions.act_window" id="hr_contract_ressarcimento_action">
            <field name="name">Ressarcimentos do Contrato</field>
            <field name="res_model">hr.contract.ressarcimento</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record model="ir.actions.act_window.view" id="hr_contract_ressarcimento_action_tree">
            <field eval="1" name="sequence"/>
            <field name="view_mode">tree</field>
            <field name="act_window_id" ref="hr_contract_ressarcimento_action"/>
            <field name="view_id" ref="hr_contract_ressarcimento_tree_view"/>
        </record>

        <record model="ir.actions.act_window.view" id="hr_contract_ressarcimento_action_form">
            <field eval="2" name="sequence"/>
            <field name="view_mode">form</field>
            <field name="act_window_id" ref="hr_contract_ressarcimento_action"/>
            <field name="view_id" ref="hr_contract_ressarcimento_form_view"/>
        </record>

        <menuitem
            action="hr_contract_ressarcimento_action"
            id="menu_hr_contract_ressarcimento"
            name="Ressarcimentos do Contrato"
            parent="hr.menu_hr_configuration"
            sequence="99"
        />

    </data>
</openerp>
