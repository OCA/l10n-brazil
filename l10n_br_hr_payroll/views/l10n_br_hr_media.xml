<openerp>
<data>

    <record  model="ir.ui.view" id="l10n_br_hr_media_tree">
        <field name="name">l10n_br.hr.media.tree</field>
        <field name="model">l10n_br.hr.medias</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree string="Médias">
                <field name="contrato_id"/>
                <field name="data_inicio"/>
                <field name="data_fim"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="l10n_br_hr_media_form_view">
        <field name="name">l10n.br.hr.media</field>
        <field name="model">l10n_br.hr.medias</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button string="Calcular Médias" name="gerar_media_dos_proventos" type="object" class="oe_highlight"/>
                </header>
                <field name="contrato_id"/>
                <field name="data_inicio"/>
                <field name="data_fim"/>
                <field name="lines_id">
                    <tree>
                        <field name="nome_rubrica" />
                        <field name="mes_1" />
                        <field name="mes_2" />
                        <field name="mes_3" />
                        <field name="mes_4" />
                        <field name="mes_5" />
                        <field name="mes_6" />
                        <field name="mes_7" />
                        <field name="mes_8" />
                        <field name="mes_9" />
                        <field name="mes_10" />
                        <field name="mes_11" />
                        <field name="mes_12" />
                        <field name="soma" />
                        <field name="meses" />
                        <field name="media" />
                    </tree>
                </field>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="l10n_br_hr_media_action">
        <field name="name">Médias</field>
        <field name="res_model">l10n_br.hr.medias</field>
        <field name="view_type">form</field>
        <field name="view_id" ref="l10n_br_hr_media_tree"/>
        <field name="view_mode">tree,form</field>
    </record>

        <menuitem
            action="l10n_br_hr_media_action"
            id="menu_l10n_br_hr_medias"
            name="Calcular Médias"
            parent="hr.menu_hr_configuration"
            sequence="41"
            />

        <record model="ir.actions.act_window.view" id="l10n_br_hr_income_tax_action_tree">
            <field eval="1" name="sequence"/>
            <field name="view_mode">tree</field>
            <field name="act_window_id" ref="l10n_br_hr_media_action"/>
            <field name="view_id" ref="l10n_br_hr_media_tree"/>
        </record>

        <record model="ir.actions.act_window.view" id="l10n_br_hr_media_action_form">
            <field eval="2" name="sequence"/>
            <field name="view_mode">form</field>
            <field name="act_window_id" ref="l10n_br_hr_media_action"/>
            <field name="view_id" ref="l10n_br_hr_media_form_view"/>
        </record>

</data>
</openerp>
