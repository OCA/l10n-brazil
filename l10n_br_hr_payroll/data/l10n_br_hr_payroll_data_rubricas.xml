<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!--CATEGORIAS DE REGRAS DE SALARIOS-->
        <record id="hr_payroll.BASES" model="hr.salary.rule.category">
            <field name="name">Bases</field>
            <field name="code">BASES</field>
        </record>

        <!--REGRAS DE SALARIOS-->

        <!--Ferias-->
        <record id="hr_salary_rule_FERIAS" model="hr.salary.rule">
            <field name="code">FERIAS</field>
            <field name="name">Rubrica de FERIAS</field>
            <field name="category_id" ref="hr_payroll.BASIC"/>
            <field name="amount_select">code</field>
            <field name="condition_select">none</field>
            <field name="amount_python_compute">result = worked_days.FERIAS.number_of_days * contract.wage / 30</field>
            <field name="sequence" eval="5"/>
        </record>

        <!--1/3 das ferias-->
        <record id="hr_salary_rule_1/3_FERIAS" model="hr.salary.rule">
            <field name="code">1/3_FERIAS</field>
            <field name="name">Rubrica de 1/3 FERIAS</field>
            <field name="category_id" ref="hr_payroll.BASIC"/>
            <field name="amount_select">code</field>
            <field name="condition_select">none</field>
            <field name="amount_python_compute">result = FERIAS / 3 </field>
            <field name="sequence" eval="6"/>
        </record>

        <!--Vale alimentação / vale refeição-->
        <record id="hr_salary_rule_VA_VR" model="hr.salary.rule">
            <field name="code">VA/VR</field>
            <field name="name">Vale alimentação/Refeição</field>
            <field name="category_id" ref="hr_payroll.DED"/>
            <field name="amount_select">code</field>
            <field name="condition_select">none</field>
            <field name="amount_python_compute">result = -1 * gitCALCULAR.get_specific_rubric_value(rubrica.id)</field>
            <field name="sequence" eval="7"/>
        </record>

        <!--INSS - Regra-->
        <record id="hr_salary_rule_INSS" model="hr.salary.rule">
            <field name="code">INSS</field>
            <field name="name">INSS</field>
            <field name="category_id" ref="hr_payroll.DED"/>
            <field name="condition_select">none</field>
            <field name="amount_select">code</field>
            <field name="amount_python_compute">result = -1 * CALCULAR.INSS(BASE_INSS)</field>
            <field name="sequence" eval="129"/>
        </record>

        <record id="hr_salary_rule_IRRF" model="hr.salary.rule">
            <field name="code">IRRF</field>
            <field name="name">IRRF</field>
            <field name="category_id" ref="hr_payroll.DED"/>
            <field name="condition_select">none</field>
            <field name="amount_select">code</field>
            <field name="amount_python_compute">result = -1 * CALCULAR.IRRF(BASE_IR, BASE_INSS)</field>
            <field name="sequence" eval="130"/>
        </record>

        <record id="hr_salary_rule_AUX_ALIMENTACAO_DI" model="hr.salary.rule">
            <field name="code">AADI</field>
            <field name="name">Auxilio Alimentação Diretoria</field>
            <field name="category_id" ref="hr_payroll.BASIC"/>
            <field name="amount_select">fix</field>
            <field name="condition_select">none</field>
            <field name="amount_fix">979.51</field>
            <field name="sequence" eval="6"/>
        </record>

        <record id="hr_salary_rule_REMBOLSO_PLANO_SAUDE" model="hr.salary.rule">
            <field name="code">REMSAUDE</field>
            <field name="name">Reembolso Plano de Saude</field>
            <field name="category_id" ref="hr_payroll.ALW"/>
            <field name="amount_select">code</field>
            <field name="condition_select">none</field>
            <field name="amount_python_compute">result = CALCULAR.get_specific_rubric_value(rubrica.id)</field>
            <field name="sequence" eval="6"/>
        </record>

        <record id="hr_salary_rule_FUNCAO_COMISSIONADA" model="hr.salary.rule">
            <field name="code">FUNC_COMISSIONADA</field>
            <field name="name">Função Comissionada</field>
            <field name="category_id" ref="hr_payroll.BASIC" />
            <field name="amount_select">code</field>
            <field name="condition_select">none</field>
            <field name="amount_python_compute">result = worked_days.DIAS_BASE.number_of_days * contract.wage/30</field>
            <field name="sequence" eval="1" />
        </record>

        <record id="hr_salary_rule_BASE_INSS" model="hr.salary.rule">
            <field name="code">BASEINSS</field>
            <field name="name">Base INSS</field>
            <field name="category_id" ref="hr_payroll.BASES" />
            <field name="amount_select">code</field>
            <field name="condition_select">none</field>
            <field name="amount_python_compute">result = BASE_INSS</field>
            <field name="sequence" eval="2" />
        </record>

        <record id="hr_salary_rule_BASE_IRRF" model="hr.salary.rule">
            <field name="code">BASEIRRF</field>
            <field name="name">Base IRRF</field>
            <field name="category_id" ref="hr_payroll.BASES" />
            <field name="amount_select">code</field>
            <field name="condition_select">none</field>
            <field name="amount_python_compute">result = BASE_IR</field>
            <field name="sequence" eval="3" />
        </record>

        <record id="hr_salary_rule_BASE_FGTS" model="hr.salary.rule">
            <field name="code">BASEFGTS</field>
            <field name="name">Base FGTS</field>
            <field name="category_id" ref="hr_payroll.BASES" />
            <field name="amount_select">code</field>
            <field name="condition_select">none</field>
            <field name="amount_python_compute">result = BASE_FGTS</field>
            <field name="sequence" eval="4" />
        </record>

        <record id="hr_salary_rule_FGTS" model="hr.salary.rule">
            <field name="code">FGTS</field>
            <field name="name">FGTS</field>
            <field name="category_id" ref="hr_payroll.BASES" />
            <field name="amount_select">percentage</field>
            <field name="amount_percentage_base">contract.wage</field>
            <field name="quantity">1.0</field>
            <field name="amount_percentage">8.00</field>
            <field name="sequence" eval="4" />
        </record>

        <record id="hr_salary_rule_TOTAL_DESCONTOS" model="hr.salary.rule">
            <field name="code">TOTALDESC</field>
            <field name="name">Total de Descontos</field>
            <field name="category_id" ref="hr_payroll.BASES" />
            <field name="amount_select">code</field>
            <field name="condition_select">none</field>
            <field name="amount_python_compute">result = categories.DED</field>
            <field name="sequence" eval="180" />
        </record>

        <!--ESTRUTURAS DE SALARIOS-->

        <!--Estrutura de salario para ferias-->
        <record id="hr_salary_structure_FERIAS" model="hr.payroll.structure">
            <field name="code">FERIAS</field>
            <field name="name">Estrutura de Salario de Férias</field>
            <field eval="[(6, 0, [ref('hr_salary_rule_FERIAS'), ref('hr_salary_rule_1/3_FERIAS')])]" name="rule_ids"/>
            <field name="company_id" ref="base.main_company"/>
            <field name="parent_id" eval="False" />
        </record>

        <record id="hr_salary_rule_HONORARIO_PRESIDENTE" model="hr.salary.rule">
            <field name="code">HON_PRESIDENTE</field>
            <field name="name">Honorário de Presidente</field>
            <field name="category_id" ref="hr_payroll.BASIC" />
            <field name="amount_select">code</field>
            <field name="condition_select">none</field>
            <field name="amount_python_compute">result = worked_days.DIAS_BASE.number_of_days * contract.wage/30</field>
            <field name="sequence" eval="1" />
        </record>

        <record id="hr_salary_structure_HONORARIO_PRESIDENTE" model="hr.payroll.structure">
            <field name="code">HON_PRESIDENTE</field>
            <field name="name">Estrutura de Honorário de Presidente</field>
            <field name="rule_ids" eval="[(6, 0, [ref('hr_salary_rule_HONORARIO_PRESIDENTE')])]" />
            <field name="company_id" ref="base.main_company" />
            <field name="parent_id" eval="False" />
        </record>

        <record id="hr_salary_structure_FUNCAO_COMISSIONADA" model="hr.payroll.structure">
            <field name="code">FUN_COMISSIONADA</field>
            <field name="name">Função Comissionada</field>
            <field name="rule_ids" eval="[(6, 0, [ref('hr_salary_rule_FUNCAO_COMISSIONADA'), ref('hr_salary_rule_BASE_INSS'), ref('hr_salary_rule_BASE_IRRF'), ref('hr_salary_rule_BASE_FGTS'), ref('hr_salary_rule_INSS'), ref('hr_salary_rule_IRRF'), ref('hr_salary_rule_FGTS'), ref('hr_payroll.hr_rule_taxable'), ref('hr_payroll.hr_rule_net'), ref('hr_salary_rule_TOTAL_DESCONTOS')])]" />
            <field name="company_id" ref="base.main_company" />
            <field name="parent_id" eval="False" />
        </record>

        <record id="hr_salary_rule_HONORARIO_CONSELHO" model="hr.salary.rule">
            <field name="code">HON_CONSELHO</field>
            <field name="name">Honorário Conselho</field>
            <field name="category_id" ref="hr_payroll.BASIC" />
            <field name="amount_select">code</field>
            <field name="condition_select">none</field>
            <field name="amount_python_compute">result = worked_days.DIAS_BASE.number_of_days * contract.wage/30</field>
            <field name="sequence" eval="1" />
        </record>

        <record id="hr_salary_structure_HONORARIO_CONSELHO" model="hr.payroll.structure">
            <field name="code">HON_CONSELHO</field>
            <field name="name">Honorário Conselho</field>
            <field name="rule_ids" eval="[(6, 0, [ref('hr_salary_rule_HONORARIO_CONSELHO')])]" />
            <field name="company_id" ref="base.main_company" />
            <field name="parent_id" eval="False" />
        </record>

        <record id="hr_salary_rule_HONORARIO_DIRETORIA" model="hr.salary.rule">
            <field name="code">HON_DIRETORIA</field>
            <field name="name">Honorário Conselho</field>
            <field name="category_id" ref="hr_payroll.BASIC" />
            <field name="amount_select">code</field>
            <field name="condition_select">none</field>
            <field name="amount_python_compute">result = worked_days.DIAS_BASE.number_of_days * contract.wage/30</field>
            <field name="sequence" eval="1" />
        </record>

        <record id="hr_salary_structure_HONORARIO_DIRETORIA" model="hr.payroll.structure">
            <field name="code">HON_DIRETORIA</field>
            <field name="name">Honorário Conselho</field>
            <field name="rule_ids" eval="[(6, 0, [ref('hr_salary_rule_HONORARIO_DIRETORIA')])]" />
            <field name="company_id" ref="base.main_company" />
            <field name="parent_id" eval="False" />
        </record>


    </data>
</openerp>
