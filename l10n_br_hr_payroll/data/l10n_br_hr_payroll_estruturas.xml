        </record>
        
        <record id="hr_salary_structure_COMPLEMENTO_JUSTA_CAUSA" model="hr.payroll.structure">
            <field name="code">COMPLEMENTO_JUSTA_CAUSA</field>
            <field name="name">Rescisão Complementar (dispensa com justa causa)</field>
            <field name="rule_ids" eval="[(6, 0, [ref('hr_salary_rule_PROPORCIONAL_13')])]" />
            <field name="company_id" ref="base.main_company" />
