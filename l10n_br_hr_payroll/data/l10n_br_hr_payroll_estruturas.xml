        <record id="hr_salary_structure_RESCISAO" model="hr.payroll.structure">
            <field name="code">RESCISAO</field>
            <field name="name">Rescisão</field>
            <field name="rule_ids" eval="[(6, 0, [ref('hr_salary_rule_PROPORCIONAL_13'), ref('hr_salary_rule_PROPORCIONAL_FERIAS'), ref('hr_salary_rule_PROPORCIONAL_UM_TERCO_FERIAS'), ref('hr_salary_rule_AVISO_PREVIO_INDENIZADO'), ref('hr_salary_rule_PROPORCIONAL_13_AVISO_PREVIO_INDENIZADO'), ref('hr_salary_rule_PROPORCIONAL_FERIAS_AVISO_PREVIO_INDENIZADO'), ref('hr_salary_rule_PROPORCIONAL_UM_TERCO_FERIAS_AVISO_PREVIO_INDENIZADO')])]" />
