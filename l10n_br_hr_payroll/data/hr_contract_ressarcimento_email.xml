        <!-- Template de Email quando o Ressarcimento for APROVADO -->
        <record id="email_template_hr_contract_ressarcimento_aprovado" model="email.template">
            <field name="name"><![CDATA[ Ressarcimento ${object.contract_id.name} - competência ${object.account_period_id.name or object.account_period_provisao_id.name} ]]></field>
            <field name="email_from"><![CDATA[${object.aprovado_por.name} <${(object.aprovado_por.login or user.email)|safe}>]]></field>
            <field name="email_to"><![CDATA[]]></field>
            <field name="subject"><![CDATA[ Ressarcimento do Contrato ${object.contract_id.name} competência ${object.account_period_id.name or object.account_period_provisao_id.name} ]]></field>
            <field name="model_id" ref="l10n_br_hr_payroll.model_hr_contract_ressarcimento"/>
            <field name="lang">${user.partner_id.lang}</field>
            <field name="body_html"><![CDATA[
            <div style="font-family: 'Lucica Grande', Ubuntu, Arial, Verdana, sans-serif; font-size: 15px; color: rgb(34, 34, 34); background-color: #FFF; ">
                <p>Ressarcimento de contrato Aprovado!</p>

                <p style="border-left: 1px solid #8e0000; margin-left: 30px;">
                    <p>Contrato: <strong> ${object.contract_id.display_name} </strong></p>
                    <p>Competência: <strong> ${object.account_period_id.name or object.account_period_provisao_id.name}  </strong></p>
                    <p>Valor total do Ressarcimento: <strong> ${object.total} </strong></p>
                </p>
            </div>
            ]]></field>
        </record>

