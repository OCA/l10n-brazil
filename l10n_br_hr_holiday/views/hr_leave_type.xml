<odoo>


    <record model="ir.ui.view" id="hr_holidays_status_form_view">
        <field name="name">hr.leave.type.form (in l10n_br_hr_holiday)</field>
        <field name="model">hr.leave.type</field>
        <field name="inherit_id" ref="hr_holidays.edit_holiday_status_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='calendar']/.." position="before">
                <group name="definition" string="Definições">
                    <field name="tipo" />
                    <field name="message" />
                    <field name="days_limit" />
                    <field name="hours_limit"/>
                    <field name="type_day" />
                    <field name="need_attachment" />
                    <field name="payroll_discount" />
                    <field name="descontar_DSR" />
                </group>
            </xpath>
        </field>
    </record>


</odoo>
