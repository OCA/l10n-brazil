        <record model="ir.ui.view" id="l10n_br_sped_fiscal_form_view">
            <field name="name">l10n_br.sped.fiscal.form</field>
            <field name="model">l10n_br.sped.fiscal</field>
            <field name="arch" type="xml">
                <form string="Sped Fiscal">
                    <separator string="Account Sped Fiscal" colspan="4"/>
                    <group colspan="4" col="4">
                    <group colspan="4" col="4" >
                        <field name="name" colspan="4"/>
                        <!--<field name="template_id" colspan="4"/>-->
                        <field name="start_date" colspan="2" />
                        <field name="end_date" colspan="2" />
                        <field name="file" colspan="2" />
                    </group>
                    <notebook colspan="4">
                        <page string="Out invoices">
                            <field name="out_invoice_ids" nolabel="1" />
                        </page>
                        <page string="In invoices">
                            <field name="in_invoice_ids" nolabel="1" />
                        </page>
                        <page string="Bloco 0">
                            <field name="bloco_zero" nolabel="1" />
                        </page>
                        <page string="Bloco C">
                            <field name="bloco_c" nolabel="1" />
                        </page>
                        <page string="Bloco D">
                            <field name="bloco_d" nolabel="1" />
                        </page>
                        <page string="Bloco E">
                            <field name="bloco_e" nolabel="1" />
                        </page>
                        <page string="Bloco G">
                            <field name="bloco_g" nolabel="1" />
                        </page>
                        <page string="Bloco H">
                            <field name="bloco_h" nolabel="1" />
                        </page>
                        <page string="Bloco K">
                            <field name="bloco_k" nolabel="1" />
                        </page>
                        <page string="Bloco 1">
                            <field name="bloco_um" nolabel="1" />
                        </page>
                        <page string="Bloco 9">
                            <field name="bloco_nove" nolabel="1" />
                        </page>
                    </notebook>
                    <group col="2" colspan="2">
                        <separator string="Filters" colspan="4" />
                         <field name="check_draft" colspan="2" />
                         <field name="check_proforma" colspan="2" />
                         <field name="check_open" colspan="2" />
                        <separator string="" colspan="4" />
                        <button name="button_calculate" class="oe_highlight"
                            string="Get Data" type="object" colspan="4"
                            confirm="This button will do some actions. First, removes all lines. Next, loads invoices by selected states and dates. If there is not any state checked, the system will not load any invoice. By last, loads template lines by dates or lines without date."/>
                    </group>
                    <!--<group col="2" colspan="2">-->
                        <!--<separator string="Calculate" colspan="2" />-->
                        <!--<field name="start_amount" colspan="2" />-->
                        <!--<field name="final_amount" colspan="2" />-->
                    <!--</group>-->
                    </group>
                </form>
            </field>
        </record>

