<?xml version="1.0" encoding="utf-8" ?>
<!-- pylint:disable=file-not-used -->
<odoo>

    <!-- l10n_br_fiscal.operation -->
    <!-- Vendas -->
    <record
        forcecreate="True"
        id="property_fo_venda_journal_empresa_lp"
        model="ir.property"
    >
        <field name="name">fiscal_operation_journal_id</field>
        <field
            name="fields_id"
            search="[('model','=','l10n_br_fiscal.operation'),('name','=','journal_id')]"
        />
        <field
            eval="'l10n_br_fiscal.operation,'+str(ref('l10n_br_fiscal.fo_venda'))"
            name="res_id"
        />
        <field
            eval="'account.journal,'+str(ref('l10n_br_coa_generic.sale_journal_empresa_lp'))"
            name="value"
        />
        <field name="company_id" ref="l10n_br_base.empresa_lucro_presumido" />
    </record>

