<?xml version="1.0" encoding="utf-8" ?>
<openerp>
    <data>

        <record model="ir.ui.view" id="sped_esocial_hr_payslip_form">
            <field name="name">Sped e-Social Hr Payslip Form</field>
            <field name="model">hr.payslip</field>
            <field name="inherit_id" ref="l10n_br_hr_payroll.hr_payslip_form_view" />
            <field name="arch" type="xml">
                <field name="mtv_deslig" position="replace">
                    <field name="mtv_deslig" attrs="{'invisible': [('tipo_de_folha', 'not in', ['rescisao'])], 'required': [('tipo_de_folha', '=', 'rescisao')]}" />
                </field>
                <button name="hr_verify_sheet" position="after">
                    <button name="%(sped_esocial.criar_s2299_desligamento)d" string="Criar Registro" type="action" class="oe_highlight" />
                </button>
            </field>
        </record>

    </data>
</openerp>