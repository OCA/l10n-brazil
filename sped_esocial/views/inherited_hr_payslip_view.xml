<?xml version="1.0" encoding="utf-8" ?>
<openerp>
    <data>

        <record model="ir.ui.view" id="sped_esocial_hr_payslip_form">
            <field name="name">Sped e-Social Hr Payslip Form</field>
            <field name="model">hr.payslip</field>
            <field name="inherit_id" ref="l10n_br_hr_payroll.hr_payslip_form_view" />
            <field name="arch" type="xml">
                <button name="hr_verify_sheet" position="after">
                    <button name="%(sped_esocial.criar_s2299_desligamento)d" string="Criar Registro e-Social" type="action" class="oe_highlight"
                    attrs="{'invisible': ['|','|',('tipo_de_folha','!=','rescisao'),('sped_s2299','!=',False),('state','in',['draft', 'cancel'])]}"/>
                </button>
                <field name="mtv_deslig" position="replace">
                    <field name="mtv_deslig" options="{'no_create': False, 'no_open': False}"
                           attrs="{'invisible': [('tipo_de_folha', 'not in', ['rescisao'])], 'required': [('tipo_de_folha', '=', 'rescisao')]}"
                    />
                </field>

                <xpath expr="//notebook[last()]" position="inside">
                    <page name="esocial" string="e-Social" groups="sped_tabelas.group_user">
                        <separator string="Registro S-2299 Desligamento" />
                        <group>
                            <group>
                                <field name="sped_s2299" />
                            </group>
                        </group>
                    </page>
                </xpath>

            </field>
        </record>

    </data>
</openerp>