<?xml version="1.0" encoding="UTF-8" ?>
<openerp>
    <data>

        <record model="ir.ui.view" id="sped_hr_contract">
            <field name="name">Adiciona e-Social no Contrato</field>
            <field name="model">hr.contract</field>
            <field name="inherit_id" ref="l10n_br_hr_payroll.hr_contract_form_view" />
            <field name="arch" type="xml">
                <xpath expr="//page[@string='Alterações Contratuais']" position="after">
                    <page name="esocial" string="e-Social">
                        <group colspan="4" col="4">
                            <group colspan="2" col="2">
                                <field name="sped_s2200" />
                                <field name="sped_s2200_registro" />
                                <field name="sped_s2200_situacao" />
                            </group>
                            <group colspan="2" col="2">
                                <field name="sped_s2200_data_hora" />
                                <button name="criar_s2200" colspan="4" type="object"
                                        string="Enviar S-2200 - Cadastro de Vínculo"
                                        attrs="{'invisible': [('sped_s2200_registro', '!=', False)]}" />
                            </group>
                        </group>
                    </page>
                </xpath>
                <field name="primeiro_emprego" position="before">
                    <field name="tp_admissao"
                           attrs="{'invisible': [('labor_regime_id.code', '!=', '1')], 'required': [('labor_regime_id.code', '=', '1')]}"
                    />
                    <field name="ind_admissao"
                           attrs="{'invisible': [('labor_regime_id.code', '!=', '1')], 'required': [('labor_regime_id.code', '=', '1')]}"
                    />
                    <field name="tp_reg_jor"
                           attrs="{'invisible': [('labor_regime_id.code', '!=', '1')], 'required': [('labor_regime_id.code', '=', '1')]}"
                    />
                    <field name="nat_atividade"
                           attrs="{'invisible': [('labor_regime_id.code', '!=', '1')], 'required': [('labor_regime_id.code', '=', '1')]}"
                    />
                    <field name="tp_reg_prev" required="1" />
                    <field name="cad_ini" required="1" />
                    <field name="opc_fgts"
                           attrs="{'invisible': [('labor_regime_id.code', '!=', '1')], 'required': [('labor_regime_id.code', '=', '1')]}"
                    />
                    <field name="dt_opc_fgts"
                           attrs="{'invisible': [('labor_regime_id.code', '!=', '1')]}"
                    />
                </field>
                <field name="salary_unit" position="after">
                    <field name="dsc_sal_var" attrs="{'required': [('salary_unit.code', 'in', ['6', '7'])]}" />
                </field>
                <field name="trial_date_start" position="before">
                    <field name="tp_contr" required="1" />
                    <field name="clau_assec" attrs="{'invisible': [('tp_contr', '!=', '2')], 'required': [('tp_contr', '=', '2')]}" />
                </field>
                <field name="weekly_hours" position="after">
                    <field name="tp_jornada" required="1" />
                    <field name="dsc_tp_jorn" attrs="{'invisible': [('tp_jornada', '!=', '9')], 'required': [('tp_jornada', '=', '9')]}" />
                    <field name="tmp_parc" required="1" />
                </field>
                <field name="admission_type_id" position="attributes">
                    <attribute name="invisible">1</attribute>
                </field>
                <field name="tipo_do_contrato" position="attributes">
                    <attribute name="invisible">1</attribute>
                </field>
                <field name="tipo_de_admissao" position="attributes">
                    <attribute name="invisible">1</attribute>
                </field>
                <field name="indicativo_de_admissao" position="attributes">
                    <attribute name="invisible">1</attribute>
                </field>
                <field name="welfare_policy" position="attributes">
                    <attribute name="invisible">1</attribute>
                </field>
            </field>
        </record>

    </data>
</openerp>
