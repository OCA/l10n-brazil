<?xml version="1.0" encoding="UTF-8" ?>
<openerp>
    <data>

        <!-- Contrato de Funcionarios -->
        <record model="ir.ui.view" id="sped_hr_contract">
            <field name="name">Adiciona e-Social no Contrato</field>
            <field name="model">hr.contract</field>
            <field name="inherit_id" ref="l10n_br_hr_payroll.hr_contract_form_view" />
            <field name="arch" type="xml">
                <!--<field name="categoria" position="before">-->
                    <!--<field name="evento_esocial" invisible="True" />-->
                <!--</field>-->

                <xpath expr="//page[@string='Alterações Contratuais']" position="after">

                    <!-- Esocial para trabalhadores com Vinculo Registro S2200-->
                    <page name="esocial" string="e-Social" groups="sped_tabelas.group_user"  attrs="{'invisible': [('evento_esocial', '!=', 's2200')]}" >
                        <field name="evento_esocial" invisible="1" />
                        <separator string="Ativação do Contrato" />
                        <group colspan="4" col="4">
                            <group colspan="2" col="2">
                                <field name="sped_contrato_id" />
                                <field name="situacao_esocial" />
                            </group>
                            <group colspan="2" col="2">
                                <button name="ativar_contrato" colspan="4" type="object"
                                        string="Ativar Contrato no e-Social"
                                        attrs="{'invisible': [('sped_contrato_id', '!=', False)]}" />
                            </group>
                        </group>
                        <separator string="Alteração do Contrato" />
                        <group colspan="4" col="4">
                            <group colspan="2" col="2">
                                <field name="sped_esocial_alterar_contrato_id" />
                                <field name="precisa_atualizar" />
                            </group>
                            <group colspan="2" col="2">
                                <button name="alterar_contrato" colspan="4" type="object"
                                        string="Alterar Contrato no e-Social"
                                        attrs="{'invisible': ['|', '|', ('situacao_esocial', '!=', '4'), ('sped_esocial_alterar_contrato_id', '=', False), ('precisa_atualizar', '=', False)]}" />
                            </group>
                        </group>
                    </page>

                    <!-- Esocial para trabalhadores sem Vinculo Registro S2300-->
                    <page name="esocial" string="e-Social" groups="sped_tabelas.group_user" attrs="{'invisible': [('evento_esocial', '!=', 's2300')]}">
                        <group colspan="4" col="4" string="Transmissão e-Social">
                            <group colspan="2" col="2">
                                <field name="sped_contrato_autonomo_id" />
                                <field name="situacao_esocial_autonomo" />
                            </group>
                            <group colspan="2" col="2">
                                <button name="atualizar_contrato_autonomo" colspan="4" type="object"
                                        string="Ativar/Atualizar Contrato"
                                        attrs="{'invisible': [('sped_contrato_autonomo_id', '!=', False)]}" />
                            </group>
                        </group>

                        <group>
                            <separator string="Alteração do Contrato Sem Vínculo" />
                            <group colspan="4" col="4">
                                <group colspan="2" col="2">
                                    <field name="sped_esocial_alterar_contrato_autonomo_id" string="Registros de alterações"/>
                                    <field name="precisa_atualizar_autonomo" />
                                </group>
                                <group colspan="2" col="2">
                                    <button name="alterar_contrato_autonomo" colspan="4" type="object"
                                            string="Gerar Registro de Alteração"
                                            class="oe_highlight"
                                            attrs="{'invisible': ['|', '|', ('situacao_esocial_autonomo', '!=', '4'), ('sped_esocial_alterar_contrato_autonomo_id', '=', False), ('precisa_atualizar_autonomo', '=', False)]}" />
                                </group>
                            </group>
                        </group>

                    </page>

                </xpath>
                <field name="partner_union" position="attributes">
                    <attribute name="required">1</attribute>
                </field>
                <field name="primeiro_emprego" position="before">
                    <!--<field name="tp_admissao"-->
                           <!--attrs="{'invisible': [('labor_regime_id.code', '!=', '1')], 'required': [('labor_regime_id.code', '=', '1')]}"-->
                    <!--/>-->
                    <field name="tp_reg_jor" required="1"/>
                           <!--attrs="{'invisible': [('labor_regime_id.code', '!=', '1')], 'required': [('labor_regime_id.code', '=', '1')]}"-->
                    <!--/>-->
                    <field name="nat_atividade" required="1"/>
                           <!--attrs="{'invisible': [('labor_regime_id.code', '!=', '1')], 'required': [('labor_regime_id.code', '=', '1')]}"-->
                    <!--/>-->
                    <field name="tp_reg_prev" required="1" />
                    <field name="cad_ini" required="1" />
                    <field name="opc_fgts" required="1"/>
                           <!--attrs="{'invisible': [('labor_regime_id.code', '!=', '1')], 'required': [('labor_regime_id.code', '=', '1')]}"-->
                    <!--/>-->
                    <field name="dt_opc_fgts" attrs="{'required': [('opc_fgts', '=', '1')]}"/>
                </field>
                <!--<field name="salary_unit" position="after">-->
                    <!--<field name="dsc_sal_var" />-->
                           <!--&lt;!&ndash;attrs="{'required': [('salary_unit.code', 'in', ['6', '7'])]}" />&ndash;&gt;-->
                <!--</field>-->
                <field name="working_hours" position="before">
                    <field name="tp_contr" required="1" />
                    <field name="clau_assec" attrs="{'invisible': [('tp_contr', '!=', '2')], 'required': [('tp_contr', '=', '2')]}" />
                </field>
                <field name="weekly_hours" position="after">
                    <field name="tp_jornada" required="1" />
                    <field name="dsc_tp_jorn" attrs="{'invisible': [('tp_jornada', '!=', '9')], 'required': [('tp_jornada', '=', '9')]}" />
                    <field name="tmp_parc" required="1" />
                </field>
                <field name="resignation_cause_id" position="replace">
                    <field name="resignation_cause_id" />
                </field>
                <field name="resignation_code" position="replace">
                    <field name="resignation_code" invisible="1"/>
                </field>
                <field name="resignation_cause_id" position="after">
                    <field name="nr_cert_obito" attrs="{'invisible': [('resignation_code', 'not in', ['09', '10'])]}" />
                </field>
            </field>
        </record>


        <!-- Contrato de Autnomos -->
        <record model="ir.ui.view" id="sped_hr_contrato_autonomo">
            <field name="name">Adiciona e-Social no Contrato do autonomo</field>
            <field name="model">hr.contract</field>
            <field name="inherit_id" ref="l10n_br_hr_payroll.hr_contrato_autonomo_form_view" />
            <field name="arch" type="xml">
                <xpath expr="//page[@name='information']" position="after">
                    <page name="esocial" string="e-Social" groups="sped_tabelas.group_user" >
                        <group colspan="4" col="4" string="Transmissão e-Social">
                            <group colspan="2" col="2">
                                <field name="sped_contrato_autonomo_id" />
                                <field name="situacao_esocial_autonomo" />
                            </group>
                            <group colspan="2" col="2">
                                <button name="atualizar_contrato_autonomo" colspan="4" type="object"
                                        string="Ativar/Atualizar Contrato"
                                        attrs="{'invisible': [('sped_contrato_autonomo_id', '!=', False)]}" />
                            </group>
                        </group>

                        <group>
                            <separator string="Alteração do Contrato Sem Vínculo" />
                            <group colspan="4" col="4">
                                <group colspan="2" col="2">
                                    <field name="sped_esocial_alterar_contrato_autonomo_id" />
                                    <field name="precisa_atualizar_autonomo" />
                                </group>
                                <group colspan="2" col="2">
                                    <button name="alterar_contrato_autonomo" colspan="4" type="object"
                                            string="Gerar Registro de Alteração"
                                            class="oe_highlight"/>
                                            <!--attrs="{'invisible': ['|', '|', ('situacao_esocial_autonomo', '!=', '4'), ('sped_esocial_alterar_contrato_autonomo_id', '=', False), ('precisa_atualizar_autonomo', '=', False)]}" />-->
                                </group>
                            </group>
                        </group>

                    </page>
                </xpath>
                <field name="wage" position="after">
                    <field name="salary_unit_code" invisible="1" />
                    <field name="dsc_sal_var"
                           attrs="{'invisible': [('salary_unit_code','not in',['6','7'])],
                                   'required': [('salary_unit_code','in',['6','7'])]}" />
                </field>
            </field>
        </record>

    </data>
</openerp>
