<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="sped_esocial_s1200_form" model="ir.ui.view">
            <field name="name">e-Social S-1200</field>
            <field name="model">sped.esocial.remuneracao</field>
            <field name="arch" type="xml">
                <form string="e-Social - Registro S-1200" edit="false" delete="false" create="false" duplicate="false">
                    <header>
                        <field name="situacao_esocial" widget="statusbar" select="1"
                               nolabel="1"
                               readonly="1" />
                    </header>
                    <div class="oe_title">
                        <h1>
                            <field name="codigo" readonly="1" />
                        </h1>
                    </div>
                    <group colspan="4" col="4">
                        <group colspan="4" col="4">
                            <field name="company_id" readonly="1"/>
                            <field name="trabalhador_id" colspan="4" readonly="1" />
                            <field name="periodo_id" readonly="1"/>
                        </group>
                        <notebook>
                            <page name="remuneracoes" string="Remunerações">
                                <group colspan="4" col="1">
                                    <field name="payslip_ids" nolabel="1" readonly="1">
                                        <tree>
                                            <field name="number" />
                                            <field name="tipo_de_folha" />
                                            <field name="contract_id" />
                                            <field name="date_from" />
                                            <field name="date_to" />
                                            <field name="state" />
                                        </tree>
                                    </field>
                                </group>
                            </page>
                            <page name="contratos" string="Contratos">
                                <group colspan="4" col="1">
                                    <field name="contract_ids" nolabel="1" readonly="1" />
                                </group>
                            </page>
                        </notebook>
                        <group colspan="4" col="2">
                            <field name="sped_registro" readonly="1"/>
                        </group>
                    </group>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="sped_esocial_s1200_tree">
            <field name="name">S-1200 (Remunerações RGPS)</field>
            <field name="model">sped.esocial.remuneracao</field>
            <field name="arch" type="xml">
                <tree string="S-1200 (Remunerações RGPS)" duplicate="false" edit="false" delete="false" create="false">
                    <field name="company_id"/>
                    <field name="periodo_id"/>
                    <field name="trabalhador_id"/>
                    <field name="contratos" />
                    <field name="remuneracoes" />
                    <field name="situacao_esocial"/>
                </tree>
            </field>
        </record>

        <record id="sped_esocial_s1200_search" model="ir.ui.view">
            <field name="name">S-1200 (Empregador)</field>
            <field name="model">sped.esocial.remuneracao</field>
            <field name="arch" type="xml">
                <search string="S-1200 (Remunerações RGPS)">
                    <field name="company_id" />
                    <field name="trabalhador_id"/>
                    <field name="periodo_id" />
                    <field name="situacao_esocial" />
		        </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="sped_esocial_s1200_action">
            <field name="name">S-1200 (Remunerações RGPS)</field>
            <field name="domain">[]</field>
            <field name="res_model">sped.esocial.remuneracao</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record model="ir.actions.act_window.view" id="sped_esocial_s1200_form_acao">
            <field eval="2" name="sequence"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="sped_esocial_s1200_form"/>
            <field name="act_window_id" ref="sped_esocial_s1200_action"/>
        </record>

        <record model="ir.actions.act_window.view" id="sped_esocial_s1200_tree_acao">
            <field eval="1" name="sequence"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="sped_esocial_s1200_tree"/>
            <field name="act_window_id" ref="sped_esocial_s1200_action"/>
        </record>

        <menuitem id="menu_sped_esocial_s1200"
                  name="S-1200 (Empregador)"
                  sequence="1200"
                  action="sped_esocial.sped_esocial_s1200_action"
                  parent="sped_esocial.menu_sped_esocial_intermediarios"
        />

    </data>
</openerp>
