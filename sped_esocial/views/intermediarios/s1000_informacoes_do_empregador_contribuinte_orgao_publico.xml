<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="sped_esocial_s1000_form" model="ir.ui.view">
            <field name="name">e-Social S-1000</field>
            <field name="model">sped.empregador</field>
            <field name="arch" type="xml">
                <form string="e-Social - Registro S-1000">
                    <header>
                        <field name="situacao_esocial" widget="statusbar" select="1"
                               nolabel="1"
                               readonly="1" />
                    </header>
                    <div class="oe_title">
                        <h1>
                            <field name="company_id" readonly="1"/>
                        </h1>
                    </div>
                    <group colspan="4" col="4">
                        <group colspan="4" col="2">
                            <field name="sped_inclusao" readonly="1"/>
                            <field name="sped_alteracao" readonly="1"/>
                            <field name="sped_exclusao" readonly="1"/>
                        </group>
                        <group colspan="4" col="2">
                            <field name="precisa_incluir" />
                            <field name="precisa_atualizar" />
                            <field name="precisa_excluir" />
                        </group>
                        <group colspan="4" col="2">
                            <field name="ultima_atualizacao" />
                        </group>
                    </group>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="sped_esocial_s1000_tree">
            <field name="name">S-1000 (Empregador)</field>
            <field name="model">sped.empregador</field>
            <field name="arch" type="xml">
                <tree string="S-1000 (Empregador)" duplicate="false">
                    <field name="company_id"/>
                    <field name="situacao_esocial"/>
                </tree>
            </field>
        </record>

        <record id="sped_esocial_s1000_search" model="ir.ui.view">
            <field name="name">S-1000 (Empregador)</field>
            <field name="model">sped.empregador</field>
            <field name="arch" type="xml">
                <search string="S-1000 (Empregador)">
                    <field name="company_id" />
		        </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="sped_esocial_s1000_action">
            <field name="name">S-1000 (Empregador)</field>
            <field name="domain">[]</field>
            <field name="res_model">sped.empregador</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record model="ir.actions.act_window.view" id="sped_esocial_s1000_form_acao">
            <field eval="2" name="sequence"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="sped_esocial_s1000_form"/>
            <field name="act_window_id" ref="sped_esocial_s1000_action"/>
        </record>

        <record model="ir.actions.act_window.view" id="sped_esocial_s1000_tree_acao">
            <field eval="1" name="sequence"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="sped_esocial_s1000_tree"/>
            <field name="act_window_id" ref="sped_esocial_s1000_action"/>
        </record>

        <menuitem id="menu_sped_esocial_s1000"
                  name="S-1000 (Empregador)"
                  sequence="10"
                  parent="sped_esocial.menu_sped_esocial_intermediarios"
        />

    </data>
</openerp>
