<odoo>

    <record id="l10n_br_nfe_import_xml_form" model="ir.ui.view">
        <field name="name">l10n_br_nfe.import_xml.form (in l10n_br_nfe_purchase)</field>
        <field name="model">l10n_br_nfe.import_xml</field>
        <field name="inherit_id" ref="l10n_br_nfe.l10n_br_nfe_import_xml_form" />
        <field name="arch" type="xml">
            <xpath expr="//group[@id='document_info']" position="after">
                <separator
                    string="Conciliar com uma ordem de compra"
                    attrs="{'invisible': [('nfe_xml', '=', False)]}"
                />
                <group attrs="{'invisible': [('nfe_xml', '=', False)]}">
                    <group>
                        <field name="purchase_link_type" />
                        <field
                            name="purchase_id"
                            attrs="{'invisible': [('purchase_link_type', '!=', 'choose')]}"
                        />
                    </group>
                </group>
            </xpath>
        </field>
    </record>

</odoo>
