<odoo>

    <record model="ir.ui.view" id="l10n_br_account_document_event_wizard_form_view">
        <field name="name">l10n_br_account.document_event.wizard.form (in l10n_br_account_product)</field>
        <field name="model">l10n_br_account.document_event.wizard</field>
        <field name="arch" type="xml">
            <form string="L10n_br_account Document_event Wizard">
                <h1>
                    Evento de <field name="event_type" readonly="1" nolabel="1"/>
                </h1>
                <group>

                    <field name="mensagem"/>
                </group>
                <footer>
                    <button name="doit"
                            string="OK"
                            class="btn-primary"
                            type="object"/>
                    <button string="Cancel"
                            class="btn-default"
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="l10n_br_account_document_event_wizard_act_window">
        <field name="name">Evento</field>
        <field name="res_model">l10n_br_account.document_event.wizard</field>
        <field name="view_mode">form</field>
        <field name="context">{}</field>
        <field name="target">new</field>
    </record>

