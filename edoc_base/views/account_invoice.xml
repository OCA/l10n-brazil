<odoo>

    <record id="account_invoice_form_view" model="ir.ui.view">
        <field name="name">account.invoice.form (in edoc_base)</field>
        <field name="model">account.invoice</field>
        <field name="priority">999</field>
        <field name="inherit_id"
               ref="l10n_br_account_product.l10n_br_account_product_nfe_form"/>
        <field name="arch" type="xml">
            <field name="state" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
            <button name="action_invoice_open" position="replace">
            </button>
            <xpath expr="//header" position="inside">
                <button name="action_edoc_confirm" string="Validate" class="oe_highlight"
                        groups="base.group_user"
                        type="object"/>
<!--                        states="sefaz_export,sefaz_exception,open"-->
                <button name="action_edoc_send" string="Enviar Fatura"
                        groups="base.group_user"
                        type="object"/>
<!--                        attrs="{'invisible':[('state','in', ['draft', 'proforma2'])]}"-->
                <button name="action_edoc_check" type="object"
                        string="Consultar no sefaz"
                        groups="base.group_no_one"/>
<!--                        attrs="{'invisible':['|',('issuer','!=','0'),-->
<!--                                                 ('state','not in',['open','paid'])]}"-->
                <button name="action_edoc_cce" type="object"
                        string="Carta de correção"/>
<!--                        states="draft,proforma2,sefaz_export,sefaz_exception,open,paid"-->
                <button name="action_edoc_cancel" string="Cancelar Fatura"
                        groups="base.group_user"
                        type="object"/>
                   <field name="state_edoc" widget="statusbar" nolabel="1" statusbar_visible="em_digitacao,a_enviar,autorizada"/>
            </xpath>


<!--                        attrs="{'invisible':['|',('nfe_export_date','=',False),('state_edoc','!=','sefaz_export')]}"-->

            <xpath expr="//button[@name='action_invoice_cancel']"
                   position="replace">
            </xpath>
            <group name="group_documentos_refernciados" position="after">
                    <group string="Cartas de correção" attrs="{'invisible': [('cce_document_ids','not in', [])]}">
                        <field name="cce_document_ids" nolabel="1"/>
                    </group>
            </group>
            <field name="edoc_version" position="after">
                <field name="processador_edoc"/>
            </field>
<!--            <xpath expr="//field[@name='ind_pres']" position="after">-->
<!--                <field name="is_edoc_printed"/>-->
<!--            </xpath>-->
<!--            <field name="nfe_protocol_number" position="after">-->
<!--                <field name="state_fiscal" colspan="2"/>-->
<!--            </field>-->
            <field name="account_document_event_ids" position="replace">
                <notebook name="notebook_edoc">
                    <page string="Eventos" name="edoc_events">
                        <field name="account_document_event_ids"/>
                    </page>
                    <page string="Arquivos" name="edoc_files">
                        <group>
                            <group>
                                <newline/>
                                <field name="file_xml_id"/>
                                <field name="file_xml_cancelamento_id"/>
                            </group>
                            <group>
                                <field name="file_pdf_id"/>
                                <field name="file_xml_autorizacao_id"/>
                                <field name="file_xml_autorizacao_cancelamento_id"/>
                            </group>
                        </group>
                    </page>
                </notebook>
            </field>
        </field>
    </record>


</odoo>
