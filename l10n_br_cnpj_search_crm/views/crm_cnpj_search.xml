<odoo>
    <record id="l10n_br_crm_leads_form_inherit" model="ir.ui.view">
          <field name="name">l10n_br.leads.form</field>
          <field name="model">crm.lead</field>
          <field name="inherit_id" ref="l10n_br_crm.l10n_br_crm_leads_form" />
          <field name="priority" eval="99" />
          <field name="arch" type="xml">
            <xpath
                expr="//page[@name='lead']//group/field[@name='cnpj']"
                position="replace"
            >
                <label for="cnpj_cpf" string="CNPJ" />
                <div class="o_row" colspan="1">
                    <field name="cnpj_cpf" />
                    <button
                        name="search_cnpj"
                        type="object"
                        class="btn-sm btn-link mb4 fa fa-search oe_edit_only oe_inline"
                        aria-label="Pesquisar CNPJ"
                        title="Pesquisar CNPJ"
                    />
                </div>
            </xpath>
          </field>
      </record>
  </odoo>
