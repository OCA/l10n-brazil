<odoo>

     <record id="l10n_br_cnpj_search_partner_form" model="ir.ui.view">
        <field name="name">l10n_br_base.partner.form (in l10n_br_cnpj_search)</field>
        <field name="model">res.partner</field>
        <field name="priority">99</field>
        <field name="inherit_id" ref="base.view_partner_form" />
        <field name="arch" type="xml">
            <field name="cnpj_cpf" position="after">
                <field name="equity_capital" widget="monetary" />
                <field name="legal_nature" />
            </field>

            <field name="cnpj_cpf" position="replace">
                     <div class="o_row" colspan="4">
                        <field name="cnpj_cpf" nolabel="1" />
                        <button
                        name="action_open_cnpj_search_wizard"
                        type="object"
                        attrs="{'invisible':
                                [   '|', '|',
                                    ('company_type', '!=', 'company'),
                                    ('country_id', '!=', %(base.br)d),
                                    ('is_company','!=', True)
                                ]}"
                        class="btn-sm btn-link mb4 fa fa-search oe_edit_only oe_inline"
                        aria-label="Search CNPJ"
                        title="Search CNPJ"
                    />
                    </div>
                </field>
        </field>
    </record>

</odoo>
