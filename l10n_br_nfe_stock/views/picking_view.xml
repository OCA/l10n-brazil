<?xml version="1.0" encoding="utf-8" ?>
<odoo>

  <record id="stock_picking_form_inherit" model="ir.ui.view">
    <field name="name">stock.picking.form (in l10n_br_nfe_stock)</field>
    <field name="model">stock.picking</field>
    <field name="inherit_id" ref="stock.view_picking_form" />
    <field name="priority">100</field>
    <field name="arch" type="xml">
      <xpath expr="//div[@name='button_box']" position="inside">
        <field name="linked_document_ids" invisible="1" />
        <button
                    type="object"
                    name="action_open_document"
                    class="oe_stat_button"
                    icon="fa-folder-open"
                    attrs="{'invisible':[('linked_document_ids', '=', [])]}"
                >
            <field
                        name="linked_document_count"
                        widget="statinfo"
                        string="Imported Documents"
                    />
        </button>
      </xpath>
    </field>
  </record>

  <record id="action_picking_tree_all" model="ir.actions.act_window">
      <field name="name">Pickings</field>
      <field name="res_model">stock.picking</field>
      <field name="type">form</field>
      <field name="view_mode">tree,kanban,form</field>
      <field name="view_id" ref="stock.vpicktree" />
  </record>

  <record id="action_picking_form_all" model="ir.actions.act_window">
      <field name="name">Picking</field>
      <field name="res_model">stock.picking</field>
      <field name="view_mode">form</field>
      <field name="view_id" ref="stock.view_picking_form" />
  </record>

</odoo>
