<?xml version="1.0" encoding="utf-8" ?>
<odoo>

  <record id="l10n_br_purchase_order_form_inherit" model="ir.ui.view">
    <field name="name">l10n_br_purchase.order.form (in l10n_br_nfe_stock)</field>
    <field name="model">purchase.order</field>
    <field name="inherit_id" ref="purchase.purchase_order_form" />
    <field name="priority">100</field>
    <field name="arch" type="xml">

      <xpath expr="//group[@name='other_info']" position="inside">
          <field name="imported" readonly="1" />
          <field
                    name="origin_document_id"
                    attrs="{'invisible': [('imported', '=', False)]}"
                />
      </xpath>

      <xpath expr="//div[@name='button_box']" position="inside">
        <field name="linked_document_ids" invisible="1" />
        <button
                    type="object"
                    name="action_open_document"
                    class="oe_stat_button"
                    icon="fa-folder-open"
                    attrs="{'invisible':[('linked_document_ids', '=', [])]}"
                >
            <field
                        name="linked_document_count"
                        widget="statinfo"
                        string="Imported Documents"
                    />
        </button>
      </xpath>

    </field>
  </record>

  <record id="action_purchase_tree_all" model="ir.actions.act_window">
      <field name="name">Purchases</field>
      <field name="res_model">purchase.order</field>
      <field name="type">form</field>
      <field name="view_mode">tree,kanban,form</field>
      <field name="view_id" ref="purchase.purchase_order_tree" />
  </record>

  <record id="action_purchase_form_all" model="ir.actions.act_window">
      <field name="name">Purchase</field>
      <field name="res_model">purchase.order</field>
      <field name="view_mode">form</field>
      <field name="view_id" ref="purchase.purchase_order_form" />
  </record>

</odoo>
