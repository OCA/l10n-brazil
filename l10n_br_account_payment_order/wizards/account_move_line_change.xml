<odoo>

    <record model="ir.ui.view" id="account_move_line_change_form_view">
        <field name="name">account.move.line.change.form (in l10n_br_account_payment_order)</field>
        <field name="model">account.move.line.change</field>
        <field name="arch" type="xml">
            <form string="Account Move Line Change">
                <field name="account_move_line_ids" nolabel="1"/>
                <group>
                    <field name="change_type" widget="radio"/>
                    <field name="date_maturity" attrs="{'invisible': [('change_type', '!=', 'change_date_maturity')], 'required': [('change_type', '=', 'change_date_maturity')]}"/>
                    <field name="payment_mode_id" attrs="{'invisible': [('change_type', '!=', 'change_payment_mode')], 'required': [('change_type', '=', 'change_payment_mode')]}"/>
                </group>
                <footer>
                    <button name="doit"
                            string="OK"
                            class="btn-primary"
                            type="object"/>
                    <button string="Cancel"
                            class="btn-default"
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="account_move_line_change_act_window">
        <field name="name">Change Account Move Line</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">account.move.line.change</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="account_move_line_change_form_view"/>
        <field name="target">new</field>
        <field name="multi">True</field>
        <field name="binding_model_id" ref="account.model_account_move_line"/>
    </record>

</odoo>
