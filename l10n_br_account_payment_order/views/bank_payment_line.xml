<odoo>

    <record id="bank_payment_line_form" model="ir.ui.view">
        <field name="name">bank.payment.line.form</field>
        <field name="model">bank.payment.line</field>
        <field name="inherit_id"
               ref="account_payment_order.bank_payment_line_form"/>
        <field name="arch" type="xml">
            <group name="main" position="after">
                <group>
                    <field name="own_number"/>
                    <field name="document_number"/>
                    <field name="company_title_identification"/>
                    <field name="last_state_cnab" invisible="1"/>
                    <field name="doc_finality_code"/>
                    <field name="ted_finality_code"/>
                    <field name="complementary_finality_code"/>
                    <field name="rebate_value"/>
                    <field name="discount_value"/>
                    <field name="interest_value"/>
                    <field name="fee_value"/>
                    <field name="favored_warning"/>
                </group>
                <xpath expr="//group[@name='payment-lines'"
                       position="after">
                    <group string="HistÃ³rico de Eventos CNAB Relacionados"
                           name="evento-lines">
                        <field name="event_id" nolabel="1"/>
                    </group>
                </xpath>
            </group>
        </field>
    </record>

</odoo>
