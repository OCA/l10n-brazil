<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_l10n_br_fci_tree" model="ir.ui.view">
            <field name="name">l10n_br_fci.tree</field>
            <field name="model">l10n_br.fci</field>
            <field name="arch" type="xml">
                <tree string="FCI_Empresa">
                    <field name="state" invisible="1"/>
                    <field name="company_id"/>
                    <field name="hash_code"/>
                    <field name="dt_recepcao"/>
                    <field name="dt_validacao"/>
                    <field name="in_validacao"/>
                    <field name="cod_recepcao"/>
                </tree>
            </field>
        </record>

        <record id="view_l10n_br_fci_form" model="ir.ui.view">
            <field name="name">l10n_br_fci.form</field>
            <field name="model">l10n_br.fci</field>
            <field name="arch" type="xml">
                <form string="FCI_Empresa">
                    <field name="state" invisible="1"/>
                    <header>
                        <button name="action_create_fci"
                                string="Confirmar"
                                states="draft"
                                type="object"
                                class="L10n_brFci">
                        </button>
                        <button name="gera_fci"
                                string="Gerar FCI"
                                type="object"
                                states="create_fci"
                                class="L10n_brFci">
                        </button>
                        <button name="action_cancel"
                                states="waiting_protocol,waiting_fci, create_fci"
                                string="Cancelar"
                                type="object">
                        </button>
                        <button name="importa_fci"
                                string="Importar FCI"
                                type="object"
                                states="waiting_fci"
                                class="L10n_brFci">
                        </button>
                        <button name="action_waiting_fci"
                                string="Validar Protocolo"
                                states="waiting_protocol"
                                class="L10n_brFci"
                                type="object">
                        </button>
                        <button name="action_aproved"
                                type="object"
                                string="Confirmar FCI"
                                states="waiting_fci">
                        </button>
                        <field name="state" select="1" readonly="1"
                               widget="statusbar"
                               statusbar_visible="draft, create_fci,
                                   waiting_protocol, waiting_fci, aproved"/>
                        <field name="fci_file_returned" states="waiting_fci"/>
                    </header>
                    <sheet>


                        <div class="oe_right oe_button_box"
                             name="import_buttons">
                            <button class="oe_inline oe_stat_button"
                                    name="%(action_view_l10n_br_fci_lines)d"
                                    string="Adicionar produtos"
                                    type="action"
                                    widget="statinfo" states="draft"
                                    icon="fa-pencil-square-o"
                                    position="inside"/>
                        </div>
                        <group>
                            <group>
                                <field name="company_id"/>
                                <field name="hash_code"/>
                                <field name="dt_recepcao"/>
                                <field name="fci_file_sent" states="create_fci"/>
                            </group>
                            <group>

                                <field name="cod_recepcao"/>
                                <field name="dt_validacao"/>
                                <field name="in_validacao"/>
                                <field name="protocol_number"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Produtos">
                                <field name="fci_line">
                                    <tree editable="bottom">
                                        <field name="product_id"/>
                                        <field name="default_code"
                                               invisible="1"/>
                                        <field name="name" invisible="1"/>
                                        <field name="ean13" invisible="1"/>
                                        <field name="product_uom"/>
                                        <field name="ncm_id"/>
                                        <field name="list_price"/>
                                        <field name="valor_parcela_importada"/>
                                        <field name="conteudo_importacao"/>
                                        <field name="fci"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_l10n_br_fci">
            <field name="name">FCI</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">l10n_br.fci</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>

            <field name="view_id" ref="view_l10n_br_fci_tree"/>
        </record>

        <menuitem name="FCI" id="menu_l10n_br_fci_root"
                  parent="account.menu_finance" sequence="3"/>

        <menuitem name="Criar FCI" id="menu_action_l10n_br_fci_form"
                  parent="menu_l10n_br_fci_root"
                  action="action_l10n_br_fci"/>

    </data>
</openerp>



