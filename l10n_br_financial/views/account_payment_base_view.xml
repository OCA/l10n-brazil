    <record model="ir.ui.view" id="account_payment_tree_view">
        <field name="name">account.payment.tree (in l10n_br_financial)</field>
        <field name="model">account.payment</field>
        <field name="priority">999</field>
        <field name="mode">primary</field>
        <field name="inherit_id" ref="account.view_account_payment_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//tree" position="replace">
                <tree decoration-info="debt_status == 'due'"  decoration-warning="debt_status == 'due_today'" decoration-danger="debt_status == 'overdue'" decoration-primary="debt_status == 'paid_partially'" decoration-success="debt_status == 'paid'" decoration-muted="debt_status in ['reconciled', 'cancelled']" edit="false">
                    <field name="payment_date" string="Date"/>
                    <field name="company_id" groups="base.group_multi_company"/>
                    <field name="journal_id"/>
                    <field name="name"/>
                    <field name="partner_id" string="Vendor"/>
<!--                    <field name="payment_method_id"/>-->
                    <field name="amount" sum="Amount"/>
                    <field name="state"/>
                    <field name="debt_status"/>
                    <field name="currency_id" invisible="1"/>
                    <field name="partner_type" invisible="1"/>
                </tree>
            </xpath>
        </field>
    </record>

