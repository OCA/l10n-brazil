    </record>

    <record model="ir.ui.view" id="account_payment_debt_2pay_tree">
        <field name="name">account.payment.debt.2pay.tree (in financial)</field>
        <field name="model">account.payment</field>
        <field name="mode">primary</field>
        <field name="priority">9999</field>
        <field name="inherit_id" ref="l10n_br_financial.account_payment_tree_view" />
        <field name="arch" type="xml">
            <xpath expr="//tree[1]" position="attributes">
                <attribute name="string">Payables</attribute>
            </xpath>
        </field>
    </record>

