    <record model="ir.ui.view" id="account_payment_debt_2pay_form">
        <field name="name">account.payment.debt.2pay.form (in financial)</field>
        <field name="model">account.payment</field>
        <field name="mode">primary</field>
        <field name="priority">9999</field>
        <field name="inherit_id" ref="l10n_br_financial.account_payment_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//form[1]" position="attributes">
                <attribute name="string">Payable</attribute>
            </xpath>
<!--            <field name="payment_ids" position="attributes">-->
