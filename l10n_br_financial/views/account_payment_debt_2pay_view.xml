    <record model="ir.actions.act_window" id="l10n_br_financial_2pay_action">
        <field name="name">Payable</field>
        <field name="res_model">account.payment</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('payment_type', '=', '2pay')]</field>
        <field name="context">{'default_payment_type': '2pay', 'default_partner_type': 'supplier'}</field>
    </record>

    <record model="ir.actions.act_window.view" id="l10n_br_financial_2pay_action_tree">
        <field eval="1" name="sequence"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="l10n_br_financial.account_payment_debt_2pay_tree"/>
        <field name="act_window_id" ref="l10n_br_financial_2pay_action"/>
    </record>

    <record model="ir.actions.act_window.view" id="l10n_br_financial_2pay_action_form">
        <field eval="2" name="sequence"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="l10n_br_financial.account_payment_debt_2pay_form"/>
        <field name="act_window_id" ref="l10n_br_financial_2pay_action"/>
    </record>

    <record model="ir.ui.menu" id="l10n_br_financial_2pay_menu">
        <field name="name">Payable</field>
        <field name="parent_id" ref="l10n_br_financial_payable_menu"/>
        <field name="action" ref="l10n_br_financial_2pay_action"/>
        <field name="sequence" eval="2"/>
    </record>

</odoo>
