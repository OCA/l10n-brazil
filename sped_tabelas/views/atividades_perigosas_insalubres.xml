        <field name="view_id" ref="atividades_perigosas_insalubres_form"/>
        <field name="act_window_id" ref="atividades_perigosas_insalubres_action"/>
    </record>

    <menuitem
        action="sped_tabelas.atividades_perigosas_insalubres_action"
