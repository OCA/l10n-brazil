<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="view_enviar_pagamento" model="ir.ui.view">
            <field name="name">l10n_br_fiscal.payment.form</field>
            <field name="model">l10n_br_fiscal.payment</field>
            <field name="inherit_id" ref="l10n_br_fiscal.l10n_br_fiscal_payment_form_view" />
            <field name="arch" type="xml">
                <xpath expr="//group[@name='payment_vals']" position="after">
                    <footer>
                        <button name="efetuar_pagamento" string="Pagar" type="object" class="btn-primary"/>
                        <button special="cancel" string="Cancelar" class="btn-default"/>
                    </footer>
                </xpath>
            </field>
        </record>

        <record id="action_enviar_pagamento" model="ir.actions.act_window">
            <field name="name">Pagamento</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">l10n_br_fiscal.payment</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
</odoo>
