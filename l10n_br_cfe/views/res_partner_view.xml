<odoo>

    <record model="ir.ui.view" id="res_partner_administradora_form">
        <field name="name">res.partner.administradora.form</field>
        <field name="model">res.partner</field>
        <field name="priority">1</field>
        <field name="mode">primary</field>
        <field name="inherit_id" ref="l10n_br_fiscal.partner_form" />
        <field name="arch" type="xml">
            <xpath expr="//form[1]" position="attributes">
                <attribute name="string">Administradora</attribute>
            </xpath>
            <field name="user_id" position="after">
                <field name="eh_administradora_cartao" />
            </field>
            <field name="ref" position="before">
               <field name="codigo_administradora_cartao"/>
            </field>
        </field>
    </record>

    <record model="ir.ui.view" id="res_partner_administradora_tree">
        <field name="name">res.partner.administradora.tree</field>
        <field name="model">res.partner</field>
        <field name="priority">1</field>
        <field name="mode">primary</field>
        <field name="inherit_id" ref="l10n_br_base.l10n_br_base_res_partner_tree" />
        <field name="arch" type="xml">
            <xpath expr="//tree[1]" position="attributes">
                <attribute name="string">Administradora</attribute>
            </xpath>
        </field>
    </record>

    <record model="ir.ui.view" id="res_partner_administradora_search">
        <field name="name">res.partner.administradora.search</field>
        <field name="model">res.partner</field>
        <field name="priority">1</field>
        <field name="mode">primary</field>
        <field name="inherit_id" ref="l10n_br_base.l10n_br_base_res_partner_filter" />
        <field name="arch" type="xml">
            <xpath expr="//search[1]" position="attributes">
                <attribute name="string">Administradora</attribute>
            </xpath>
        </field>
    </record>

    <record model="ir.actions.act_window" id="res_partner_administradora_acao">
        <field name="name">Administradora</field>
        <field name="domain">[('eh_administradora_cartao', '=', True)]</field>
        <field name="context">{'default_eh_administradora_cartao': True, 'eh_administradora_cartao': True, 'default_eh_consumidor_final': True, 'eh_consumidor_final': True}</field>
        <field name="res_model">res.partner</field>
        <field name="view_type">form</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="search_view_id" ref="res_partner_administradora_search" />
    </record>

    <record model="ir.actions.act_window.view" id="res_partner_administradora_tree_acao">
        <field eval="2" name="sequence"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="res_partner_administradora_tree"/>
        <field name="act_window_id" ref="res_partner_administradora_acao"/>
    </record>

    <record model="ir.actions.act_window.view" id="res_partner_administradora_form_acao">
        <field eval="3" name="sequence"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="res_partner_administradora_form"/>
        <field name="act_window_id" ref="res_partner_administradora_acao"/>
    </record>

    <menuitem
        id="menu_res_partner_administradora_cartao"
        sequence="3"
        name="Administradora CartÃ£o"
        parent="l10n_br_cfe_menu_config"
        action="res_partner_administradora_acao"
        />

</odoo>
