<odoo>
    <record id='pdv_config_form' model='ir.ui.view'>
        <field name='name'>l10n_br_fiscal.pos_config.form</field>
        <field name='model'>l10n_br_fiscal.pos_config</field>
        <field name="priority">1</field>
        <field name='arch' type='xml'>
            <form string='Configuração'>
                <sheet>
                    <group string="Configuração do Ponto de Venda">
                        <field name="name" />
                        <field name="code"/>
                        <field name="company_id"/>
                        <field name="company_state_code"/>
                        <field name="printer_config_id"/>
                        <field name="tipo"/>
                        <field name="pos_user_ids" widget="many2many_tags"/>
                    </group>
                    <group string="Configurações SAT" attrs="{'invisible': [('tipo', '!=', 'SAT')]}">
                        <field name="tipo_sat"/>
                        <field name="retaguarda_dll_caminho" attrs="{'invisible': [('tipo_sat', '!=', 'local')]}"/>
                        <field name="retaguarda_ip" attrs="{'invisible': [('tipo_sat', '!=', 'rede_interna')]}"/>
                        <field name="retaguarda_porta" attrs="{'invisible': [('tipo_sat', '!=', 'rede_interna')]}"/>
                        <field name="sat_codigo_ativacao"/>
                        <field name="sat_cnpj_empresa_dev"/>
                        <field name="sat_ie_empresa_dev"/>
                        <field name="sat_cnpj_software_house"/>
                        <field name="sat_assinatura"/>
                        <field name="site_consulta_qrcode"/>
                    </group>
                    <group string="Configurações de pagamento" attrs="{'invisible': [('tipo', '!=', 'SAT'),('company_state_code', '!=', 'CE')]}">
                        <field name="integrador_chave_acesso_validador"/>
                        <field name="integrador_chave_requisicao"/>
                        <field name="integrador_multiplos_pag"/>
                        <field name="integrador_anti_fraude"/>
                    </group>
                </sheet>

            </form>
        </field>
    </record>
    <record id="pdv_config_tree" model="ir.ui.view">
        <field name="name">l10n_br_fiscal.pos_config.tree</field>
        <field name="model">l10n_br_fiscal.pos_config</field>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <tree>
                <field name="code" />
                <field name="name"/>
                <field name="pos_user_ids" widget="many2many_tags"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="pdv_config_search">
        <field name="name">l10n_br_fiscal.pos_config.search</field>
        <field name="model">l10n_br_fiscal.pos_config</field>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <search string="Configuração do Ponto de Venda">
                <field name="name" />
                <field name="code" />
            </search>
        </field>
    </record>

    <record model="ir.actions.act_window" id="pdv_config_action">
        <field name="name">Configuração do Ponto de Venda</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="res_model">l10n_br_fiscal.pos_config</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>



    <record model="ir.actions.act_window.view" id="pdv_config_tree_action">
        <field eval="1" name="sequence"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="pdv_config_tree"/>
        <field name="act_window_id" ref="pdv_config_action"/>
    </record>

    <menuitem
        id="pdv_config_menuitem"
        sequence="1"
        name="PDV Configuração"
        parent="l10n_br_cfe_menu_config"
        action="pdv_config_action"
    />

</odoo>
