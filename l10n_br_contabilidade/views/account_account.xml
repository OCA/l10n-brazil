<openerp>
    <data>


        <!-- Conta Contábil -->
        <record id="abgf_view_conta_form" model="ir.ui.view">
            <field name="name">abgf.conta.form</field>
            <field name="model">account.account</field>
            <field name="arch" type="xml">
                <form string="Account">
                    <label for="code" class="oe_edit_only" string="Account Code and Name"/>
                    <h1>
                        <field name="code" class="oe_inline" placeholder="Account code" style="width: 6em"/> -
                        <field name="name" class="oe_inline" placeholder="Account name"/>
                    </h1>

                    <group>
                        <group>
                            <separator string="Parâmetros"/>
                            <newline/>
                            <field name="parent_id"/>
                            <field name="type"/>
                            <field name="natureza_conta_id" attrs="{'invisible':[('type','=','view')], 'required':[('type','!=','view')]}" widget="selection"/>
                            <field name="user_type"/>
                            <field name="active"/>
                            <field name="company_id" invisible="1" widget="selection" groups="base.group_multi_company"/>
                            <newline/>
                            <field name="precisa_ramo"/>
                        </group>
                        <group>
                            <newline/>
                        </group>
                    </group>

                    <group>
                        <group>
                            <separator string="Valores" />
                            <newline/>
                            <field name="debit" attrs="{'readonly':[('type','=','view')]}" style='text-align:right'/>
                            <field name="credit" attrs="{'readonly':[('type','=','view')]}" style='text-align:right'/>
                            <field name="balance" style='text-align:right' invisible="1"/>
                            <field name="saldo" style='text-align:right'/>
                        </group>
                        <group>
                            <newline/>
                        </group>
                    </group>
                    <notebook colspan="3">
                        <page string="Função">'
                            <field name="funcao"/>
                        </page>
                        <page string="Funcionamento">
                            <field name="funcionamento"/>
                        </page>
                        <page string="Observação">
                            <field name="observacao"/>
                        </page>
                    </notebook>

                </form>
            </field>
        </record>

        <record id="view_account_tree" model="ir.ui.view">
            <field name="name">account.account.tree</field>
            <field name="type">form</field>
            <field name="model">account.account</field>
            <field name="inherit_id" ref="account.view_account_tree"/>
            <field name="arch" type="xml">
               <data>
                    <xpath expr="//field[@name='company_id']" position="attributes">
                        <attribute name="invisible">1</attribute>
                    </xpath>
                   <xpath expr="//field[@name='type']" position="attributes">
                        <attribute name="invisible">1</attribute>
                    </xpath>
               </data>
            </field>
        </record>



        <record id="abgf_view_conta_tree" model="ir.ui.view">
            <field name="name">abgf.conta.tree</field>
            <field name="model">account.account</field>
            <field name="field_parent">child_id</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="code"/>
                    <field name="name"/>
                    <field name="parent_id" invisible="1"/>
                    <field name="user_type" invisible="1"/>
                    <field name="debit"/>
                    <field name="credit"/>
                    <field name="balance" invisible="1"/>
                    <field name="saldo"/>
                </tree>
            </field>
        </record>

        <record id="abgf_conta_form" model="ir.actions.act_window">
            <field name="name">Contas</field>
            <field name="res_model">account.account</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form,graph</field>
            <!--<field name="search_view_id" ref="account.view_account_search"/>-->
            <field name="view_id" ref="abgf_view_conta_tree"/>
            <field name="context">{'periods_special': False, 'all_fiscalyear': True}</field>
        </record>

        <menuitem
                id="abgf_menu_conta_form"
                action="abgf_conta_form"
                parent="abgf_contabilidade.abgf_menu_contas_contabilidade"
        />

    </data>
</openerp>
