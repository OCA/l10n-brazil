<openerp>
    <data>

    <record model="ir.ui.view" id="abgf_contabilidade_account_account_report_line_form">
        <field name="name">account_account_report_line_form (in abgf_contabilidade)</field>
        <field name="model">account.account.report.line</field>
        <field name="arch" type="xml">
            <form string="Contas de Apresentação">
                <sheet>
                    <label for="name" class="oe_edit_only"/>
                    <h1><field name="name" required="1" /></h1>

                    <group>
                        <group name="geral" colspan="2" col="2">
                            <label for="account_account_report_id" />
                            <field name="account_account_report_id" colspan="2" nolabel="1" required="1"/>
                        </group>
                    </group>

                    <group>
                        <group>
                            <field name="period_id" />
                            <field name="sequence" />
                        </group>

                        <group>
                            <field name="total" />
                        </group>
                    </group>

                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="abgf_contabilidade_account_account_report_line_tree">
        <field name="name">account_account_report_line_tree (in abgf_contabilidade)</field>
        <field name="model">account.account.report.line</field>
        <field name="arch" type="xml">
            <tree string="Contas de Apresentação">
                <field name="sequence" groups="base.group_no_one" />
                <field name="name" />
                <field name="account_account_report_id" invisible="1"/>
                <field name="period_id" invisible="1"/>
                <field name="total" />
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="abgf_contabilidade_account_account_report_line_search">
        <field name="name">account_account_report_line_search (in abgf_contabilidade)</field>
        <field name="model">account.account.report.line</field>
        <field name="arch" type="xml">
            <search string="Contas de Apresentação">
                <field name="name" />
                <field name="account_account_report_id" />
                <field name="period_id" />
            </search>
        </field>
    </record>

    <record model="ir.actions.act_window" id="abgf_contabilidade_account_account_report_line_action">
        <field name="name">Contas de Apresentação</field>
        <field name="res_model">account.account.report.line</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.actions.act_window.view" id="abgf_contabilidade_account_account_report_line_tree_action">
        <field eval="1" name="sequence"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="abgf_contabilidade_account_account_report_line_tree"/>
        <field name="act_window_id" ref="abgf_contabilidade_account_account_report_line_action"/>
    </record>

    <record model="ir.actions.act_window.view" id="abgf_contabilidade_account_account_report_line_form_action">
        <field eval="2" name="sequence"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="abgf_contabilidade_account_account_report_line_form"/>
        <field name="act_window_id" ref="abgf_contabilidade_account_account_report_line_action"/>
    </record>

    <menuitem
        action="abgf_contabilidade_account_account_report_line_action"
        id="menu_abgf_contabilidade_account_account_report_line"
        name="Contas de Apresentação"
        parent="abgf_contabilidade.abgf_configuracao_conta_menu"
        sequence="70"
    />

    </data>
</openerp>
