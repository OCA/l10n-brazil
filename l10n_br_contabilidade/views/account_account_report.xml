<openerp>
    <data>

    <record model="ir.ui.view" id="l10n_br_contabilidade_account_account_report_form">
        <field name="name">account_account_report_form (in l10n_br_contabilidade)</field>
        <field name="model">account.account.report</field>
        <field name="arch" type="xml">
            <form string="Contas Demonstrativas">
                <sheet>
                    <label for="name" class="oe_edit_only"/>
                    <h1><field name="name" required="1" /></h1>

                    <group name="geral">
                        <group colspan="2" col="2">
                            <label for="code" />
                            <field name="code" colspan="2" nolabel="1" required="1"/>
                        </group>
                    </group>

                    <group name="atributos">
                        <group>
                            <field name="active" />
                            <field name="sequence" invisible="1" />
                            <field name="sequence_execucao" required="1" />
                        </group>
                        <group>
                            <field name="mostrar_no_relatorio" />
                            <field name="type" required="True"/>
                        </group>
                    </group>

                    <group name="calculo" string="Cálculo da Conta">
                        <field name="tipo_calculo" />
                    </group>

                    <group>
                        <group string="Contas" attrs="{'invisible':[('tipo_calculo','!=','conta')]}">
                            <field name="account_account_id" nolabel="1" >
                                <tree>
                                    <field name="code" />
                                    <field name="name" />
                                    <field name="natureza_conta_id" />
                                </tree>
                            </field>
                        </group>

                        <group string="Fórmula" attrs="{'invisible':[('tipo_calculo','!=','formula')]}">
                            <field name="python_code" nolabel="1" />
                        </group>

                        <group string="Contas" attrs="{'invisible':[('tipo_calculo','!=','sintetico')]}" colspan="4">
                            <group attrs="{'invisible':[('child_ids','=',[])]}" colspan="4">
                                <label for="child_ids" colspan="4"/>
                                <field name="child_ids" nolabel="1" colspan="4" options="{'no_create': True}" >
                                    <tree>
                                        <field name="code" />
                                        <field name="name" />
                                    </tree>
                                </field>
                            </group>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="l10n_br_contabilidade_account_account_report_tree">
        <field name="name">account_account_report_tree (in l10n_br_contabilidade)</field>
        <field name="model">account.account.report</field>
        <field name="arch" type="xml">
            <tree string="Contas Demonstrativas">
                <field name="sequence" widget="handle"/>
                <field name="name" />
                <field name="code" />
                <field name="tipo_calculo" />
                <field name="sequence_execucao" />
                <field name="mostrar_no_relatorio" />
                <field name="active" />
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="l10n_br_contabilidade_account_account_report_search">
        <field name="name">account_account_report_search (in l10n_br_contabilidade)</field>
        <field name="model">account.account.report</field>
        <field name="arch" type="xml">
            <search string="Contas">
                <field name="code" />
                <field name="name" />
            </search>
        </field>
    </record>


    <!-- Menu de Contas de Apresentação do BALANÇO PATRIMONIAL-->
    <record model="ir.actions.act_window" id="l10n_br_contabilidade_account_account_report_action">
        <field name="name">Balanço Patrimonial</field>
        <field name="res_model">account.account.report</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('type','=','patrimonial')]</field>
        <field name="context">{'default_type': 'patrimonial'}</field>
    </record>

    <record model="ir.actions.act_window.view" id="l10n_br_contabilidade_account_account_report_tree_action">
        <field eval="1" name="sequence"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="l10n_br_contabilidade_account_account_report_tree"/>
        <field name="act_window_id" ref="l10n_br_contabilidade_account_account_report_action"/>
    </record>

    <record model="ir.actions.act_window.view" id="l10n_br_contabilidade_account_account_report_form_action">
        <field eval="2" name="sequence"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="l10n_br_contabilidade_account_account_report_form"/>
        <field name="act_window_id" ref="l10n_br_contabilidade_account_account_report_action"/>
    </record>

    <menuitem
        action="l10n_br_contabilidade_account_account_report_action"
        id="menu_l10n_br_contabilidade_account_account_report_patrimonial"
        name="Balanço Patrimonial"
        parent="l10n_br_contabilidade.menu_l10n_br_contabilidade_relatorios_account_account_report"
        sequence="10"
    />


    <!-- Menu de Contas de Apresentação da APURAÇÂO DE RESULTADOS-->
    <record model="ir.actions.act_window" id="l10n_br_contabilidade_account_account_report_resultado_action">
        <field name="name">Contas</field>
        <field name="res_model">account.account.report</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('type','=','resultado')]</field>
        <field name="context">{'default_type': 'resultado'}</field>
    </record>

    <menuitem
        action="l10n_br_contabilidade_account_account_report_resultado_action"
        id="menu_l10n_br_contabilidade_account_account_report_resultado"
        name="DRE"
        parent="l10n_br_contabilidade.menu_l10n_br_contabilidade_relatorios_account_account_report"
        sequence="20"
    />

    </data>
</openerp>
