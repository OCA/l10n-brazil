<openerp>
    <data>

    <record model="ir.ui.view" id="abgf_contabilidade_account_ramo_form">
        <field name="name">account_ramo_form (in abgf_contabilidade)</field>
        <field name="model">account.ramo</field>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <form string="Ramo">
                <sheet>
                    <h2>
                        <field name="name" class="oe_inline" style="width: 10em" placeholder="Nome do Ramo" />
                    </h2>
                    <group>
                        <field name="identificador" />
                        <field name="grupo_id" />
                        <field name="observacao" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="abgf_contabilidade_account_ramo_tree">
        <field name="name">account_ramo_tree (in abgf_contabilidade)</field>
        <field name="model">account.ramo</field>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <tree string="Ramo">
                <field name="code" />
                <field name="name" />
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="abgf_contabilidade_account_ramo_search">
        <field name="name">account_ramo_search (in abgf_contabilidade)</field>
        <field name="model">account.ramo</field>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <search string="Ramo">
                <field name="name" />
                <field name="code" />
                <field name="identificador" />
            </search>
        </field>
    </record>

    <record model="ir.actions.act_window" id="abgf_contabilidade_account_ramo_action">
        <field name="name">Ramo</field>
        <field name="res_model">account.ramo</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.actions.act_window.view" id="abgf_contabilidade_account_ramo_tree_action">
        <field eval="1" name="sequence"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="abgf_contabilidade_account_ramo_tree"/>
        <field name="act_window_id" ref="abgf_contabilidade_account_ramo_action"/>
    </record>

    <record model="ir.actions.act_window.view" id="abgf_contabilidade_account_ramo_form_action">
        <field eval="2" name="sequence"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="abgf_contabilidade_account_ramo_form"/>
        <field name="act_window_id" ref="abgf_contabilidade_account_ramo_action"/>
    </record>

    <menuitem
        action="abgf_contabilidade_account_ramo_action"
        id="menu_abgf_contabilidade_account_ramo"
        name="Ramo"
        parent="abgf_contabilidade.abgf_configuracao_lancamentos_contabeis_menu"
        sequence="19"
    />

    </data>
</openerp>
