<openerp>
    <data>

    <record model="ir.ui.view" id="l10n_br_contabilidade_account_saldo_form">
        <field name="name">account_saldo_form (in l10n_br_contabilidade)</field>
        <field name="model">account.saldo</field>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <form string="Saldo">
                <sheet>
                    <h2>
                        <field name="name" class="oe_inline" style="width: 10em" placeholder="Nome do Ramo" />
                    </h2>
                    <group>
                        <field name="account_account_id" />
                        <field name="identificacao_saldo" />
                        <field name="account_period_id" class="oe_inline"/>
                    </group>

                    <group col="6" string="Saldo">
                        <field name="saldo_inicial" />
                        <field name="debito_periodo" />
                        <field name="credito_periodo" />
                        <field name="saldo_periodo" />
                        <field name="saldo_final" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="l10n_br_contabilidade_account_saldo_tree">
        <field name="name">account_saldo_tree (in l10n_br_contabilidade)</field>
        <field name="model">account.saldo</field>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <tree string="Saldo">
                <field name="account_account_id" />
                <field name="identificacao_saldo" />
                <field name="account_period_id" />
                <field name="saldo_inicial" />
                <field name="debito_periodo" />
                <field name="credito_periodo" />
                <field name="saldo_periodo" />
                <field name="saldo_final" />
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="l10n_br_contabilidade_account_saldo_search">
        <field name="name">account_saldo_search (in l10n_br_contabilidade)</field>
        <field name="model">account.saldo</field>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <search string="Saldo">
                <field name="account_account_id" />
                <field name="name" />
                <field name="identificacao_saldo" />
                <field name="account_period_id" />
                <separator/>
                <filter string="período" name="period" context="{'period':'current_period'}" />
                <filter string="Credoras" name="credoras" context="{'identificacao_saldo':'C'}" />
                <filter string="Devedoras" name="devedoras" context="{'identificacao_saldo':'D'}" />
                <separator/>
                <group expand="1" string="Group By">
                    <filter string="Contas" name="group_account" context="{'group_by':'account_account_id'}"/>
                    <filter string="Períodos" name="group_periodo" context="{'group_by':'account_period_id'}"/>
                </group>
            </search>
        </field>
    </record>


    <record model="ir.actions.act_window" id="l10n_br_contabilidade_account_saldo_action">
        <field name="name">Saldo no Período</field>
        <field name="res_model">account.saldo</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.actions.act_window.view" id="l10n_br_contabilidade_account_saldo_tree_action">
        <field eval="1" name="sequence"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="l10n_br_contabilidade_account_saldo_tree"/>
        <field name="act_window_id" ref="l10n_br_contabilidade_account_saldo_action"/>
    </record>

    <record model="ir.actions.act_window.view" id="l10n_br_contabilidade_account_saldo_form_action">
        <field eval="2" name="sequence"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="l10n_br_contabilidade_account_saldo_form"/>
        <field name="act_window_id" ref="l10n_br_contabilidade_account_saldo_action"/>
    </record>

