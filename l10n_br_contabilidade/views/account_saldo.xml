    <record id="l10n_br_account_saldo_report_graph" model="ir.ui.view">
        <field name="name">account.saldo.report.graph (in l10n_br_contabilidade)</field>
        <field name="model">account.saldo</field>
        <field name="arch" type="xml">
         <graph string="Saldo dos Períodos" type="pivot">
            <field name="account_account_id" type="row"/>
            <field name="account_period_id" type="col"/>
            <field name="saldo_inicial" type="measure"/>
            <field name="debito_periodo" type="measure"/>
            <field name="credito_periodo" type="measure"/>
            <field name="saldo_periodo" type="measure"/>
            <field name="saldo_final" type="measure"/>
         </graph>
        </field>
    </record>

    <record id="l10n_br_contabilidade_account_saldo_graph_action" model="ir.actions.act_window">
        <field name="name">Saldo nos Períodos</field>
        <field name="res_model">account.saldo</field>
        <field name="view_type">form</field>
        <field name="view_mode">graph</field>
        <field name="search_view_id" ref="l10n_br_contabilidade_account_saldo_search"/>
        <field name="view_id" ref="l10n_br_account_saldo_report_graph"/>
