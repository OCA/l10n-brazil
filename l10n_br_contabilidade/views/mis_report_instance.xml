<openerp>
<data>

    <record model="ir.ui.view" id="mis_report_instance_view_form">
        <field name="name">mis.report.instance.view.form (in l10n_br_contabilidade)</field>
        <field name="model">mis.report.instance</field>
        <field name="inherit_id" ref="mis_builder.mis_report_instance_view_form"/>
        <field name="arch" type="xml">
            <field name="target_move" position="after">
                <newline/>
                <field name="accountant_id" colspan="4"/>
                <field name="administrator_id" colspan="4"/>
                <field name="considerations" colspan="4"/>
            </field>
            <sheet position="inside">
                <group>
                    <field name="attachment_ids" widget="many2many_binary"/>
                </group>
            </sheet>
        </field>
    </record>

    <template id="report_mis_report_instance" inherit_id="mis_builder.report_mis_report_instance">
        <table position="after">
            <table width="90%" style="margin-left:5%;margin-right:5%">
                <tr>
                    <td>
                        <div>
                            <t t-esc="' '.replace(' ', u'\xa0').encode('utf-8')"/>
                        </div>
                    </td>
                </tr>
                <t t-if="docs_computed[o.id]['considerations']">
                    <tr>
                        <td>
                            <div style="text-align:justify">
                                <t t-esc="docs_computed[o.id]['considerations']"/>
                            </div>
                        </td>
                    </tr>
                </t>
                <tr>
                    <td>
                        <div>
                            <t t-esc="' '.replace(' ', u'\xa0').encode('utf-8')"/>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>
                        <div style="text-align:center">
                            <p>
                                Bras√≠lia-DF, <t t-esc="docs_computed[o.id]['today']['day']"/> de
                                <t t-esc="docs_computed[o.id]['today']['month']"/> de
                                <t t-esc="docs_computed[o.id]['today']['year']"/>.
                            </p>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>
                        <div>
                            <t t-esc="' '.replace(' ', u'\xa0').encode('utf-8')"/>
                        </div>
                    </td>
                </tr>
            </table>
            <table width="100%">
                <tr>
                    <td>
                        <div>
                            <t t-esc="' '.replace(' ', u'\xa0').encode('utf-8')"/>
                        </div>
                    </td>
                </tr>
                <tr>
                    <t t-if="docs_computed[o.id]['footer']">
                        <t t-foreach="docs_computed[o.id]['footer']"
                           class="text-bottom" t-as="h">
                            <td>
                                <div style="text-align:center">
                                    <t t-esc="h_value['administrator']['signature']"/>
                                </div>
                                <div style="text-align:center">
                                    <t t-esc="h_value['administrator']['name']"/>
                                </div>
                                <div style="text-align:center">
                                    <t t-esc="h_value['administrator']['label']"/>
                                </div>
                            </td>
                            <td>
                                <div style="text-align:center">
                                    <t t-esc="h_value['accountant']['signature']"/>
                                </div>
                                <div style="text-align:center">
                                    <t t-esc="h_value['accountant']['name']"/>
                                </div>
                                <div style="text-align:center">
                                    <t t-esc="h_value['accountant']['label']"/>
                                </div>
                            </td>
                        </t>
                    </t>
                </tr>
            </table>
        </table>
        <h2 position="replace">
            <table width="100%">
                <tr>
                    <td>
                        <div style="text-align:center;border: 1 black"/>
                    </td>
                </tr>
            </table>
            <table width="85%" style="margin-left:5%;margin-right:10%">
                <tr>
                    <td>
                        <div style="text-align:center">
                            <strong t-field="o.report_id.description"/>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>
                        <div style="text-align:left">
                            <t t-esc="o.company_id.legal_name"/>
                        </div>
                        <div style="text-align:left">
                            <span>CNPJ: </span>
                            <t t-esc="o.company_id.cnpj_cpf"/>
                        </div>
                        <div style="text-align:left">
                            <span>NIRE: </span>
                        </div>
                    </td>
                </tr>
            </table>
        </h2>
    </template>

