<openerp>
    <data>

    <record model="ir.ui.view" id="abgf_contabilidade_account_fechamento_form">
        <field name="name">account_fechamento_form (in abgf_contabilidade)</field>
        <field name="model">account.fechamento</field>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <form string="fechamento">
                <header>
                    <button class="btn btn-primary" name="button_fechar_periodos" string='Fechar Períodos' type="object" />
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <h2>
                        <label for="name" string="Nome" class="oe_edit_only"/>
                        <field name="name" required="True" placeholder="Fechamento 1º Trimestre"/>
                    </h2>

                    <group>
                        <field name="account_journal_id" required="True" />
                        <field name="fiscalyear_id" />
                    </group>

                     <notebook>
                         <page string="Fechamento" >
                             <group col="4" string="Períodos para fechamento">
                                 <field name="account_period_ids" nolabel="1" required="1"/>
                             </group>
                             <button class="btn btn-primary" name="button_buscar_lancamentos_do_periodo" string='Buscar Lançamentos' type="object" />
                             <group col="4" string="Lançamentos dos Períodos">
                                 <group>
                                     <field name="account_move_ids" nolabel="1"/>
                                 </group>
                             </group>
                         </page>

                         <page string="ARE" attrs="{'invisible': [('state', '!=', 'draft')]}" >
                              <group col="4" string="Lançamentos de Fechamento">
                                  <field name="account_move_fechamento_ids" nolabel="1"/>
                              </group>
                         </page>

                     </notebook>

                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="abgf_contabilidade_account_fechamento_tree">
        <field name="name">account_fechamento_tree (in abgf_contabilidade)</field>
        <field name="model">account.fechamento</field>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <tree string="fechamento">
                <field name="name" />
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="abgf_contabilidade_account_fechamento_search">
        <field name="name">account_fechamento_search (in abgf_contabilidade)</field>
        <field name="model">account.fechamento</field>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <search string="fechamento">
                <field name="name" />
            </search>
        </field>
    </record>

    <record model="ir.actions.act_window" id="abgf_contabilidade_account_fechamento_action">
        <field name="name">Fechamento</field>
        <field name="res_model">account.fechamento</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.actions.act_window.view" id="abgf_contabilidade_account_fechamento_tree_action">
        <field eval="1" name="sequence"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="abgf_contabilidade_account_fechamento_tree"/>
        <field name="act_window_id" ref="abgf_contabilidade_account_fechamento_action"/>
    </record>

    <record model="ir.actions.act_window.view" id="abgf_contabilidade_account_fechamento_form_action">
        <field eval="2" name="sequence"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="abgf_contabilidade_account_fechamento_form"/>
        <field name="act_window_id" ref="abgf_contabilidade_account_fechamento_action"/>
    </record>

    <menuitem
        action="abgf_contabilidade_account_fechamento_action"
        id="menu_abgf_contabilidade_account_fechamento"
        parent="abgf_menu_lancamentos_contabilidade"
        sequence="80"
    />

    </data>
</openerp>
