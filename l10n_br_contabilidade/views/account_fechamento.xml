<openerp>
    <data>

    <record model="ir.ui.view" id="abgf_contabilidade_account_fechamento_form">
        <field name="name">account_fechamento_form (in abgf_contabilidade)</field>
        <field name="model">account.fechamento</field>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <form string="fechamento">
                <header>
                    <button class="oe_highlight"
                            name="button_reopen"
                            string='Cancelar Fechamento'
                            type="object"
                            states="close,investigated,completed,reclassified"
                            confirm="Esta ação irá retornar ao estágio inicial (Aberto). Deseja prosseguir?"
                    />

                    <button class="btn btn-primary"
                            name="button_goback"
                            string='Voltar estágio'
                            type="object"
                            states="close,investigated,completed,reclassified"
                            confirm="Esta ação irá retornar ao estágio anterior. Deseja prosseguir?"
                    />

                    <button class="btn btn-primary"
                            name="button_forward"
                            string='Avançar estágio'
                            type="object"
                            states="open,close,investigated,reclassified"
                    />

                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="alert alert-danger" role="alert"
                         attrs="{'invisible': [('vl_prejuizo', '=', 0)]}">
                        Encerramento com prejuízo de:
                        <strong><field name="vl_prejuizo" /></strong>
                    </div>
                    <h2>
                        <label for="name" string="Nome" class="oe_edit_only"/>
                        <field name="name" required="True" placeholder="Fechamento 1º Trimestre"/>
                    </h2>
                    <group>
                        <field name="account_journal_id" required="1"
                               domain="[('type', '=', 'situation')]"
                               options="{'no_quick_create': True, 'no_create_edit': True}" />
                        <field name="fiscalyear_id" options="{'no_quick_create': True, 'no_create_edit': True}"/>
                    </group>

                    <group col="6" string="Períodos para fechamento">
                        <field name="periodo_ini" required="1"
                               domain="[('state','=','draft'), ('fiscalyear_id', '=', fiscalyear_id), ('special', '=', False)]"
                               options="{'no_quick_create': True, 'no_create_edit': True}" />
                        <field name="periodo_fim" required="1"
                               domain="[('state','=','draft'), ('fiscalyear_id', '=', fiscalyear_id), ('special', '=', False)]"
                               options="{'no_quick_create': True, 'no_create_edit': True}" />
                        <button class="btn btn-primary" name="button_buscar_periodos" string='Buscar Períodos' type="object" />
                    </group>

                     <notebook>

                         <page string="Períodos">
                             <group col="4" string="Períodos do Fechamento">
                                 <group>
                                     <field name="account_period_ids" readonly="1" nolabel="1">
                                         <tree colors="blue:state == 'open';black:state in ('close')">
                                             <field name="name" invisible="1"/>
                                             <field name="date_start"/>
                                             <field name="date_stop"/>
                                             <field name="state"/>
                                         </tree>
                                     </field>
                                 </group>
                             </group>
                             <group>
                                 <field name="total_lancamentos_periodos" />
                             </group>
                         </page>

                         <page string="Lançamentos de Fechamento" attrs="{'invisible': [('account_move_ids', '=', [])]}">
                             <group string="Lançamentos desta Apuração">
                                <field name="account_move_ids" readonly="1" nolabel="1"
                                       context="{'form_view_ref': 'abgf_contabilidade.abgf_contabilidade_view_account_move_form'}">
                                    <tree colors="blue:state == 'draft';black:state == 'posted'" string="Journal Entries">
                                        <field name="sequencia" />
                                        <field name="name" string="Lançamento"/>
                                        <field name="date"/>
                                        <field name="period_id"/>
                                        <field name="state"/>
                                    </tree>
                                </field>
                             </group>
                         </page>

                         <page string="Reclassificação" attrs="{'invisible': [('account_move_reclassificacao_id', '=', [])]}">
                             <group string="Lançamentos da Reclassificação">
                                <field name="account_move_reclassificacao_id"  readonly="1" nolabel="1"
                                       context="{'form_view_ref': 'abgf_contabilidade.abgf_contabilidade_view_account_move_form'}">
                                    <tree>
                                        <field name="sequencia" />
                                        <field name="name" string="Lançamento"/>
                                        <field name="date"/>
                                        <field name="period_id"/>
                                        <field name="state"/>
                                    </tree>
                                </field>
                             </group>
                         </page>

                         <page string="Distribuição" attrs="{'invisible': [('account_move_distribuicao_id', '=', [])]}">
                             <group string="Lançamentos da Distribuição">
                                <field name="account_move_distribuicao_id" readonly="1" nolabel="1"
                                       context="{'form_view_ref': 'abgf_contabilidade.abgf_contabilidade_view_account_move_form'}">
                                    <tree>
                                        <field name="sequencia" />
                                        <field name="name" string="Lançamento"/>
                                        <field name="date"/>
                                        <field name="period_id"/>
                                        <field name="state"/>
                                    </tree>
                                </field>
                             </group>
                         </page>

                     </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="abgf_contabilidade_account_fechamento_tree">
        <field name="name">account_fechamento_tree (in abgf_contabilidade)</field>
        <field name="model">account.fechamento</field>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <tree string="fechamento" colors="blue:state == 'open';black:state in ('close')" >
                <field name="name" />
                <field name="periodo_ini" />
                <field name="periodo_fim" />
                <field name="fiscalyear_id" />
                <field name="state" />
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="abgf_contabilidade_account_fechamento_search">
        <field name="name">account_fechamento_search (in abgf_contabilidade)</field>
        <field name="model">account.fechamento</field>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <search string="fechamento">
                <field name="name" />
                <field name="periodo_ini" />
                <field name="periodo_fim" />
                <field name="fiscalyear_id" />
            </search>
        </field>
    </record>

    <!--Menu para fechar movimento-->
    <record model="ir.actions.act_window" id="abgf_contabilidade_account_fechamento_action">
        <field name="name">Fechar Movimento</field>
        <field name="res_model">account.fechamento</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('state','=','open')]</field>
    </record>

    <record model="ir.actions.act_window.view" id="abgf_contabilidade_account_fechamento_tree_action">
        <field eval="1" name="sequence"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="abgf_contabilidade_account_fechamento_tree"/>
        <field name="act_window_id" ref="abgf_contabilidade_account_fechamento_action"/>
    </record>

    <record model="ir.actions.act_window.view" id="abgf_contabilidade_account_fechamento_form_action">
        <field eval="2" name="sequence"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="abgf_contabilidade_account_fechamento_form"/>
        <field name="act_window_id" ref="abgf_contabilidade_account_fechamento_action"/>
    </record>

    <menuitem
        action="abgf_contabilidade_account_fechamento_action"
        id="menu_abgf_contabilidade_account_fechamento"
        parent="abgf_menu_encerramento_contabilidade"
        sequence="80"
    />


    <!--Menu para fechar movimento-->
    <record model="ir.actions.act_window" id="abgf_contabilidade_apuracao_resultado_action">
        <field name="name">Apurar Resultado</field>
        <field name="res_model">account.fechamento</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('state','=','close')]</field>
    </record>

    <menuitem
        action="abgf_contabilidade_apuracao_resultado_action"
        id="menu_abgf_contabilidade_apuracao_resultado"
        parent="abgf_menu_encerramento_contabilidade"
        sequence="90"
    />

    <!--Menu para Reclassificação-->
    <record model="ir.actions.act_window" id="abgf_contabilidade_reclassificacao_resultado_action">
        <field name="name">Reclassificar</field>
        <field name="res_model">account.fechamento</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('state','in',['investigated'])]</field>
    </record>

    <menuitem
        action="abgf_contabilidade_reclassificacao_resultado_action"
        id="menu_abgf_contabilidade_reclassificacao_resultado"
        parent="abgf_menu_encerramento_contabilidade"
        sequence="94"
    />


    <!--Menu para Encerramentos Concluídos -->
    <record model="ir.actions.act_window" id="abgf_contabilidade_encerramento_concluido_action">
        <field name="name">Concluídos</field>
        <field name="res_model">account.fechamento</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('state','=','completed')]</field>
    </record>

    <menuitem
        action="abgf_contabilidade_encerramento_concluido_action"
        id="menu_abgf_contabilidade_encerramento_concluido"
        parent="abgf_menu_encerramento_contabilidade"
        sequence="96"
    />


    </data>
</openerp>
