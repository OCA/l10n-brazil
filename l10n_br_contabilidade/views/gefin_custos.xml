<openerp>
    <data>

        <record model="ir.ui.view" id="gefin_custos_search_view">
            <field name="name">gefin.custos.search (in abgf_contabilidade)</field>
            <field name="model">gefin.custos</field>
            <field name="arch" type="xml">
                <search>
                    <field name="period_id"/>
                </search>
            </field>
        </record>

        <record model="ir.ui.view" id="gefin_custos_tree_view">
            <field name="name">gefin.custos.tree (in abgf_contabilidade)</field>
            <field name="model">gefin.custos</field>
            <field name="arch" type="xml">
                <tree string="Gefin Custos sobre a venda" editable="bottom">
                    <field name="period_id"/>
                    <field name="custo_fopag"/>
                    <field name="custo_outros"/>
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="gefin_custos_act_window">
            <field name="name">Gefin Diretos Sobre a Venda</field>
            <field name="res_model">gefin.custos</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>

        <menuitem
                id="abgf_configuracao_tabelas_menu"
                name="Tabelas"
                parent="abgf_contabilidade.abgf_menu_configuracao_contabilidade"
                sequence="50"
        />

        <record model="ir.ui.menu" id="gefin_custos_menu">
            <field name="name">Gefin Custos sobre a venda</field>
            <field name="parent_id" ref="abgf_contabilidade.abgf_configuracao_tabelas_menu"/>
            <field name="action" ref="gefin_custos_act_window"/>
            <field name="sequence" eval="366"/>
        </record>

    </data>
</openerp>
