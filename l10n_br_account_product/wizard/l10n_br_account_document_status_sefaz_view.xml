<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		<record id="l10n_br_account_product_document_status_sefaz_form" model="ir.ui.view">
			<field name="name">Verificar Status Sefaz</field>
			<field name="model">l10n_br_account_product.document_status_sefaz</field>
			<field name="arch" type="xml">
				<form string="Consultar chave de acesso" version="7.0">
					<field invisible="1" name="state"/>
					<group>
						<group states="init" string="Entre com a chave Click em consultar...">
							<field name="chNFe" />
						</group>
						<group states="done" string="Resultado da Consulta">
							<field name="version" />
							<field name="nfe_environment" attrs="{'readonly': True}"/>
							<field name="xMotivo" />
							<field name="cUF" />
							<field name="chNFe" attrs="{'readonly': True}" />
							<field name="protNFe" />
							<field name="retCancNFe" />
							<field name="procEventoNFe" />
						</group>
					</group>
					<footer states="init">
						<button name="nfe_status_sefaz" string="Consultar" type="object" class="oe_highlight" /> ou
						<button special="cancel" string="Cancel" type="object" class="oe_link"/>
					</footer>
					<footer states="done">
						<button special="cancel" string="Close" type="object"/>
					</footer>
				</form>	
			</field>
		</record>

		<record id="l10n_br_account_product_document_status_sefaz_action" model="ir.actions.act_window">
			<field name="name">Consultar Status Sefaz</field>
			<field name="res_model">l10n_br_account_product.document_status_sefaz</field>
			<field name="view_type">form</field>
			<field name="view_mode">form</field>
			<field name="target">new</field>
		</record>

		<menuitem id="menu_l10n_br_account_invoice_cancel" name="Consultar chave" parent="l10n_br_account.menu_l10n_br_account_fiscal" action="l10n_br_account_product_document_status_sefaz_action"/>
	</data>
</openerp>
