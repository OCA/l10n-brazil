<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record model="ir.ui.view" id="cadastro_unidade_peso_form" >
        <field name="name">cadastro.unidade.peso.form</field>
        <field name="model">cadastro.unidade</field>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <form string="Unidade de medida de peso">
            <sheet>
                <div class="oe_title">
                    <h1>
                        <field name="codigo" placeholder="Código" required="1" />
                        <field name="codigo_unico" invisible="1" />
                    </h1>
                    <h2>
                        <field name="nome" placeholder="Nome" required="1" />
                    </h2>
                </div>
                <group colspan="4" col="4">
                    <separator string="Conversão e extenso" colspan="4" />
                    <field name="genero_masculino" />
                    <newline />
                    <field name="nome_singular" />
                    <field name="nome_plural" />
                    <newline />
                    <field name="usa_virgula" />
                    <field name="usa_meio" />
                    <newline />
                    <field name="subunidade_id" attrs="{'invisible': [('usa_virgula', '!=', False)]}" options="{'no_open': True, 'no_create': True}" domain="[('tipo', '=', 'P'), ('codigo_unico', '!=', codigo_unico)]" />
                    <newline />
                    <field name="fator_relacao_decimal" />
                    <field name="precisao_decimal" />
                    <newline />
                    <separator string="Exemplos por extenso" colspan="4" />
                    <field name="extenso_singular_inteiro" colspan="4"  />
                    <field name="extenso_singular_um_decimo" colspan="4"  />
                    <field name="extenso_singular_meio" colspan="4" />
                    <field name="extenso_singular_decimal" colspan="4" />
                    <field name="extenso_plural_inteiro" colspan="4" />
                    <field name="extenso_plural_decimal" colspan="4" />
                </group>
            </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="cadastro_unidade_peso_tree">
        <field name="name">cadastro.unidade.peso.tree</field>
        <field name="model">cadastro.unidade</field>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <tree string="Unidades de medida de peso">
                <field name="codigo" />
                <field name="nome" />
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="cadastro_unidade_peso_search">
        <field name="name">cadastro.unidade.peso.search</field>
        <field name="model">cadastro.unidade</field>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <search string="Unidade de medida de peso">
                <field name="codigo" />
                <field name="nome" />
            </search>
        </field>
    </record>

    <record model="ir.actions.act_window" id="cadastro_unidade_peso_acao">
        <field name="name">Unidade de medida de peso</field>
        <field name="domain">[('tipo', '=', 'P')]</field>
        <field name="context">{'default_tipo': 'P'}</field>
        <field name="res_model">cadastro.unidade</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.actions.act_window.view" id="cadastro_unidade_peso_form_acao">
        <field eval="2" name="sequence"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="cadastro_unidade_peso_form"/>
        <field name="act_window_id" ref="cadastro_unidade_peso_acao"/>
    </record>

    <record model="ir.actions.act_window.view" id="cadastro_unidade_peso_tree_acao">
        <field eval="1" name="sequence"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="cadastro_unidade_peso_tree"/>
        <field name="act_window_id" ref="cadastro_unidade_peso_acao"/>
    </record>

    <menuitem
        id="menu_cadastro_unidade_peso"
        sequence="3"
        name="Peso"
        parent="menu_cadastro_produto_unidade"
        action="cadastro_unidade_peso_acao"
        />

</odoo>
