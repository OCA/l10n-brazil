    <record model="ir.actions.act_window" id="res_company_empresa_acao">
        <field name="name">Empresas</field>
        <field name="domain">[(1, '=', 1)]</field>
        <field name="context">{}</field>
        <field name="res_model">res.company</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.actions.act_window.view" id="res_company_empresa_form_acao">
        <field eval="2" name="sequence"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="res_company_empresa_form"/>
        <field name="act_window_id" ref="res_company_empresa_acao"/>
    </record>

    <record model="ir.actions.act_window.view" id="res_company_empresa_tree_acao">
        <field eval="1" name="sequence"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="res_company_empresa_tree"/>
        <field name="act_window_id" ref="res_company_empresa_acao"/>
    </record>

