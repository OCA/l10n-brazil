    <record model="ir.actions.act_window" id="res_partner_fornecedor_acao">
        <field name="name">Fornecedores</field>
        <field name="domain">[('eh_fornecedor', '=', True)]</field>
        <field name="context">{'default_eh_fornecedor': True, 'eh_fornecedor': True}</field>
        <field name="res_model">res.partner</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.actions.act_window.view" id="res_partner_fornecedor_form_acao">
        <field eval="2" name="sequence"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="res_partner_fornecedor_form"/>
        <field name="act_window_id" ref="res_partner_fornecedor_acao"/>
    </record>

    <record model="ir.actions.act_window.view" id="res_partner_fornecedor_tree_acao">
        <field eval="1" name="sequence"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="res_partner_fornecedor_tree"/>
        <field name="act_window_id" ref="res_partner_fornecedor_acao"/>
    </record>

