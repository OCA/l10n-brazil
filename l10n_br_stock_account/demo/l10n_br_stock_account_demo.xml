    <!-- Dados demo com a empresa Lucro Presumido para validar os impostos
         OBS.: necessário alterar a empresa do usuario para visualizar o Picking-->

    <!-- É preciso preencher o Diario na Operação -->
    <function model="ir.model.data" name="_update_xmlids">
        <value model="base" eval="[{
            'xml_id': 'l10n_br_stock_account.sale_journal',
            'record': obj().env['account.journal'].sudo().search([('type', '=', 'sale'), ('company_id', '=', obj().env.ref('l10n_br_base.empresa_lucro_presumido').id)], limit=1),
            'noupdate': True,
        }]"/>
    </function>

    <record forcecreate="True" id="property_journal_id" model="ir.property">
        <field name="name">property_journal_id</field>
        <field name="fields_id" search="[('model','=','l10n_br_fiscal.operation'),('name','=','journal_id')]"/>
        <field eval="'l10n_br_fiscal.operation,'+str(ref('l10n_br_fiscal.fo_venda'))" name="res_id"/>
        <field eval="'account.journal,'+str(ref('l10n_br_stock_account.sale_journal'))" name="value"/>
        <field name="company_id" eval="0"/>
    </record>

