<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="nbs_search" model="ir.ui.view">
        <field name="name">fiscal.nbs.search</field>
        <field name="model">fiscal.nbs</field>
        <field name="arch" type="xml">
            <search string="CST">
                <field name="code"/>
                <field name="name"/>
            </search>
        </field>
    </record>

    <record id="nbs_tree" model="ir.ui.view">
        <field name="name">fiscal.nbs.tree</field>
        <field name="model">fiscal.nbs</field>
        <field name="arch" type="xml">
            <tree string="NBS">
                <field name="code"/>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="nbs_form" model="ir.ui.view">
        <field name="name">fiscal.nbs.form</field>
        <field name="model">fiscal.nbs</field>
        <field name="arch" type="xml">
            <form string="NBS">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="get_ibpt" string="Update Tax Estimate" type="object" class="oe_stat_button" icon="fa-file"/>
                        <button type="action"
                                class="oe_stat_button"
                                id="product_tmpl_button"
                                icon="fa-bars"
                                name="%(product.product_template_action_all)d"
                                domain="['|', ('fiscal_type', '=', '09'), ('fiscal_type', '=', False), ('type', '=', 'service')]"
                                context="{'search_default_nbs_id': active_id, 'default_fiscal_type': '09', 'default_type': 'service'}"
                                attrs="{'invisible': [('product_tmpl_qty', '=', 0)]}">
                            <field string="Products" widget="statinfo" name="product_tmpl_qty"/>
                        </button>
                    </div>
                    <group>
                        <field name="code"/>
                        <field name="name"/>
                    </group>
                    <notebook>
                        <page string="Related Produts" name="tax_product_tmpl">
                            <field name="product_tmpl_ids"/>
                        </page>
                        <page string="Estimate Taxes" name="tax_estimate">
                            <field name="tax_estimate_ids"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

</odoo>
