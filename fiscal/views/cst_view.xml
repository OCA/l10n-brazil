<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="cst_search" model="ir.ui.view">
        <field name="name">l10n_br_account_product.cst.search</field>
        <field name="model">l10n_br_account_product.cst</field>
        <field name="arch" type="xml">
            <search string="CST">
                <field name="code"/>
                <field name="name"/>
                <field name="domain"/>
                <newline/>
                <group expand='0' string='Group By...' groups="base.group_extended">
                    <filter string='Domain' icon="terp-stock_symbol-selection" domain="[]" context="{'group_by' : 'domain'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="cst_tree" model="ir.ui.view">
        <field name="name">fiscal.cst.tree</field>
        <field name="model">fiscal.cst</field>
        <field name="arch" type="xml">
            <tree string="CST">
                <field name="code"/>
                <field name="name"/>
                <field name="type"/>
                <field name="tax_domain"/>
            </tree>
        </field>
    </record>

    <record id="cst_form" model="ir.ui.view">
        <field name="name">fiscal.cst.form</field>
        <field name="model">fiscal.cst</field>
        <field name="arch" type="xml">
            <form string="CST">
                <sheet>
                    <group>
                      <field name="code"/>
                      <field name="name"/>
                      <field name="type"/>
                      <field name="tax_domain"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
