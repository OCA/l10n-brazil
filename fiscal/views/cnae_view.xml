<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="cnae_form" model="ir.ui.view">
        <field name="name">fiscal.cnae.form</field>
        <field name="model">fiscal.cnae</field>
        <field name="arch" type="xml">
            <form string="CNAE">
                <sheet>
                    <group>
                        <field name="code"/>
                        <field name="name"/>
                        <field name="version"/>
                        <field name="internal_type"/>
                        <field name="parent_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="cnae_tree" model="ir.ui.view">
        <field name="name">fiscal.cnae.tree</field>
        <field name="model">fiscal.cnae</field>
        <field name="field_parent">children_ids</field>
        <field name="arch" type="xml">
            <tree string="CNAE">
                <field name="code"/>
                <field name="name"/>
                <field name="version"/>
                <field name="parent_id"/>
            </tree>
        </field>
    </record>

</odoo>
