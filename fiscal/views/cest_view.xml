<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="cest_search" model="ir.ui.view">
        <field name="name">fiscal.cest.search</field>
        <field name="model">fiscal.cest</field>
        <field name="arch" type="xml">
            <search string="CEST">
                <field name="code"/>
                <field name="name"/>
                <field name="item"/>
                <field name="segment"/>
                <group expand='0' string='Group By...'>
                    <filter string='Segment' name="segment" domain="[]" context="{'group_by' : 'segment'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="cest_tree" model="ir.ui.view">
        <field name="name">fiscal.cest.tree</field>
        <field name="model">fiscal.cest</field>
        <field name="arch" type="xml">
            <tree string="CEST">
                <field name="code"/>
                <field name="item"/>
                <field name="name"/>
                <field name="segment"/>
            </tree>
        </field>
    </record>

    <record id="cest_form" model="ir.ui.view">
        <field name="name">fiscal.cest.form</field>
        <field name="model">fiscal.cest</field>
        <field name="arch" type="xml">
            <form string="CEST">
                <sheet>
                    <group>
                      <field name="code"/>
                      <field name="item"/>
                      <field name="name"/>
                      <field name="segment"/>
                      <field name="ncms"/>
                      <field name="ncm_ids"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
