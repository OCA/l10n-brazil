<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="tax_search" model="ir.ui.view">
        <field name="name">fiscal.tax.search</field>
        <field name="model">fiscal.tax</field>
        <field name="arch" type="xml">
            <search string="Tax">
                <field name="name"/>
                <field name="tax_domain"/>
                <separator/>
                <group expand='0' string='Group By...'>
                    <filter string='Domain' name="tax_domain" domain="[]" context="{'group_by' : 'tax_domain'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="tax_tree" model="ir.ui.view">
        <field name="name">fiscal.tax.tree</field>
        <field name="model">fiscal.tax</field>
        <field name="arch" type="xml">
            <tree string="Tax">
                <field name="name"/>
                <field name="percent_amount"/>
                <field name="percent_reduction"/>
                <field name="tax_domain"/>
                <field name="cst_in_id"/>
                <field name="cst_out_id"/>
            </tree>
        </field>
    </record>

    <record id="tax_form" model="ir.ui.view">
        <field name="name">fiscal.tax.form</field>
        <field name="model">fiscal.tax</field>
        <field name="arch" type="xml">
            <form string="Tax">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="percent_amount"/>
                        <field name="percent_reduction"/>
                        <field name="tax_domain"/>
                        <field name="cst_in_id" attrs="{'invisible': [('tax_domain', 'not in', ['icms', 'ipi', 'pis', 'cofins'])]}"/>
                        <field name="cst_out_id" attrs="{'invisible': [('tax_domain', 'not in', ['icms', 'ipi', 'pis', 'cofins'])]}"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
