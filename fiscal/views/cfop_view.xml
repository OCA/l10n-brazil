<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="cfop_search" model="ir.ui.view">
        <field name="name">fiscal.cfop.search</field>
        <field name="model">fiscal.cfop</field>
        <field name="arch" type="xml">
            <search string="CFOP">
                <filter string="Entrada" icon="terp-accessories-archiver+" domain="[('type', '=', 'input')]"/>
                <filter string="SaÃ­da" icon="terp-accessories-archiver-minus" domain="[('type','=','output')]"/>
                <separator orientation="vertical"/>
                <field name="code"/>
                <field name="name"/>
                <field name="small_name"/>
                <newline/>
                <group expand='0' string='Group By...' groups="base.group_extended">
                    <filter string='Tipo' icon="terp-stock_symbol-selection" domain="[]" context="{'group_by' : 'type'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="cfop_tree" model="ir.ui.view">
        <field name="name">fiscal.cfop.tree</field>
        <field name="model">fiscal.cfop</field>
        <field name="arch" type="xml">
            <tree string="CFOP">
                <field name="code"/>
                <field name="name"/>
                <field name="type"/>
                <field name="destination"/>
            </tree>
        </field>
    </record>

    <record id="cfop_form" model="ir.ui.view">
        <field name="name">fiscal.cfop.form</field>
        <field name="model">fiscal.cfop</field>
        <field name="arch" type="xml">
            <form string="CFOP">
                <sheet>
                    <group>
                        <field name="code"/>
                        <field name="name"/>
                        <field name="small_name"/>
                        <field name="type"/>
                        <field name="destination"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
