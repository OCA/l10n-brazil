<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="ncm_search" model="ir.ui.view">
        <field name="name">fiscal.ncm.search</field>
        <field name="model">fiscal.ncm</field>
        <field name="arch" type="xml">
            <search string="NCM">
                <field name="code"/>
                <field name="name"/>
                <field name="exception"/>
                <group expand='0' string='Group By...'>
                    <filter string='IPI' name="tax_ipi_id" domain="[]" context="{'group_by' : 'tax_ipi_id'}"/>
                    <filter string='II' name="tax_ii_id" domain="[]" context="{'group_by' : 'tax_ii_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="ncm_tree" model="ir.ui.view">
        <field name="name">fiscal.ncm.tree</field>
        <field name="model">fiscal.ncm</field>
        <field name="arch" type="xml">
            <tree string="NCM">
                <field name="code"/>
                <field name="name"/>
                <field name="exception"/>
                <field name="tax_ipi_id"/>
                <field name="tax_ii_id"/>
                <field name="tax_uom_id"/>
            </tree>
        </field>
    </record>

    <record id="ncm_form" model="ir.ui.view">
        <field name="name">fiscal.ncm.form</field>
        <field name="model">fiscal.ncm</field>
        <field name="arch" type="xml">
            <form string="NCM">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="get_ibpt" string="Update Tax Estimate" type="object" class="oe_stat_button" icon="fa-file"/>
                        <button type="action"
                                class="oe_stat_button"
                                id="product_tmpl_button"
                                icon="fa-bars"
                                name="%(product.product_template_action_all)d"
                                context="{'search_default_ncm_id': active_id}"
                                attrs="{'invisible': [('product_tmpl_qty', '=', 0)]}">
                            <field string="Products" widget="statinfo" name="product_tmpl_qty"/>
                        </button>
                    </div>
                    <group>
                        <field name="code"/>
                        <field name="name"/>
                        <field name="exception"/>
                        <field name="tax_ipi_id"/>
                        <field name="tax_ii_id"/>
                        <field name="tax_uom_id"/>
                    </group>
                    <notebook>
                        <page string="Related Produts" name="tax_product_tmpl">
                            <field name="product_tmpl_ids"/>
                        </page>
                        <page string="Related CEST" name="cest">
                            <field name="cest_ids"/>
                        </page>
                        <page string="Estimate Taxes" name="tax_estimate">
                            <group>
                                <group>
                                    <field name="estimate_tax_national"/>
                                </group>
                                <group>
                                    <field name="estimate_tax_imported"/>
                                </group>
                            </group>
                            <field name="tax_estimate_ids"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

</odoo>
