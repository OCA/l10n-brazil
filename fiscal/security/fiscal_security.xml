<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data noupdate="1">

        <record id="group_user" model="res.groups">
            <field name="name">Fiscal User</field>
            <field name="category_id" ref="base.module_category_hidden"/>
        </record>

        <record id="group_manager" model="res.groups">
            <field name="name">Fiscal Manager</field>
            <field name="category_id" ref="base.module_category_hidden"/>
            <field name="implied_ids" eval="[(4, ref('fiscal.group_user'))]"/>
        </record>

        <record id="base.user_admin" model="res.users">
            <field name="groups_id" eval="[(4, ref('fiscal.group_manager'))]"/>
        </record>

        <record id="fiscal_tax_estimate_rule" model="ir.rule">
            <field name="name">Fiscal Tax Estimate multi-company</field>
            <field name="model_id" ref="model_fiscal_tax_estimate"/>
            <field eval="True" name="global"/>
            <field name="domain_force">['|',('company_id','=',False),('company_id','child_of',[user.company_id.id])]</field>
        </record>

    </data>

</odoo>
