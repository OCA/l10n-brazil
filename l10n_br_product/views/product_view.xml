<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

    <record id="product_template_form_view" model="ir.ui.view">
        <field name="name">product.template.common.form in (l10n_br_product)</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@class='oe_title']" position="after">
                <group name="grupo_superior">
                    <group name="grupo_superior_esquerdo">
                        <field name="tipo" required="1" />
                        <field name="org_icms" required="1" />
                    </group>
                    <group name="grupo_superior_direito">
                    </group>
                </group>
            </xpath>
            <field name="categ_id" position="after">
                <field name="marca"/>
            </field>

            <page name="general_information" position="after">
                <page name="estoque" string="Estoque">
                    <group col="4">
                        <field name="weight" />
                        <field name="weight_gross" />
                        <field name="volume" />
                    </group>
                    <separator string="Vendors"/>
                    <field name="seller_ids" context="{'default_product_tmpl_id': context.get('product_tmpl_id', active_id)}"/>
                    <group name="packaging" string="Packaging"
                        colspan="4"
                        attrs="{'invisible':[('type', 'not in', ['product', 'consu'])]}">
                        <field name="packaging_ids" nolabel="1"/>
                    </group>
                </page>
                <page name="estoque" string="Estoque">
                    <group col="4">
                        <field name="weight" />
                        <field name="weight_gross" />
                        <field name="volume" />
                    </group>
                    <separator string="Vendors"/>
                    <field name="seller_ids" context="{'default_product_tmpl_id': context.get('product_tmpl_id', active_id)}"/>
                    <group name="packaging" string="Packaging"
                        colspan="4"
                        attrs="{'invisible':[('type', 'not in', ['product', 'consu'])]}">
                        <field name="packaging_ids" nolabel="1"/>
                    </group>
                </page>
            </page>
        </field>
    </record>

