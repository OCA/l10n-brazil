<openerp>
    <data>

        <record id="vhr_view_employee_form_inherited" model="ir.ui.view">
            <field name="name">vhr_view_employee_form_inherited</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//div[@name='button_box']" position="inside">
                        <button name="open_ficha_registro"
                                class="oe_stat_button" icon="fa-list-alt"
                                type="object" string="Ficha Registro"/>
                    </xpath>
                </data>
            </field>
        </record>

    </data>
</openerp>
