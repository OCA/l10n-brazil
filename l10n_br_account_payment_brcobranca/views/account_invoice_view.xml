<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="l10n_br_account_payment_brcobranca_form" model="ir.ui.view">
        <field name="name">l10n_br_account.invoice.form</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_form"/>
        <field name="arch" type="xml">
            <button name="action_invoice_draft" position="after">
                <field name="payment_method_code" invisible="1"/>
                <!-- TODO - states="open" não funciona em conjunto com o attrs
                      o programa ignora, e o attrs abaixo só funciona no caso do
                      do payment_method_id, dessa forma o botão só é exibido nos
                      caso CNAB porém em todos os Status, parece ser melhor do que
                      aparecendo em todas as faturas
                 -->
                <button name="view_boleto_pdf" type="object" string="Imprimir Boleto"
                        class="btn-primary"
                        attrs="{'invisible': [('payment_method_code', 'not in', ('400', '240', '500'), ('state', 'not in', ['open']))]}"
                />
            </button>
        </field>
    </record>

</odoo>