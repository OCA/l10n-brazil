<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="l10n_br_account_payment_brcobranca_form" model="ir.ui.view">
        <field name="name">l10n_br_account.invoice.form</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_form"/>
        <field name="arch" type="xml">
            <field name="partner_id" position="before">
                <field name="button_print_boleto_invisible" invisible="1"/>
            </field>
            <button name="action_invoice_draft" position="after">
                <button name="view_boleto_pdf" type="object" string="Imprimir Boleto"
                        class="btn-primary"
                        attrs="{'invisible': [('button_print_boleto_invisible', '=', True)]}"
                />
            </button>
        </field>
    </record>

</odoo>