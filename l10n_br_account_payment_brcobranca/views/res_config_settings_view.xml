<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='account_followup']" position="after">
                <div class="col-xs-12 col-md-6 o_setting_box">
                    <div class="o_setting_left_pane"/>
                    <div class="o_setting_right_pane">
                        <label for="boleto_cnab_api"/>
                        <div class="text-muted">
                            Endere√ßo IP ou Nome para Boleto CNAB API / BRCobranca
                            <div class="content-group">
                                <div class="row mt16 ml4">
                                    https://  <field name="boleto_cnab_api"/>
                                </div>
                            </div>
                        </div>
                        <label for="cnab_return_method"/>
                        <div class="text-muted">
                            Metodo de Retorno do CNAB
                            <div class="content-group">
                                <div class="row mt16 ml4">
                                    <field name="cnab_return_method"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
