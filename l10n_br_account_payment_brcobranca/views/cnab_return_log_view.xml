<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="cnab_return_log_tree_view" model="ir.ui.view">
        <field name="name">cnab.return.log.tree</field>
        <field name="model">cnab.return.log</field>
        <field name="arch" type="xml">
            <tree string="CNAB Return Log">
                <field name="name"/>
                <field name="filename"/>
                <field name="cnab_date"/>
                <field name="sequential_file"/>
                <field name="move_id"/>
                <field name="number_lots"/>
                <field name="number_events"/>
            </tree>
        </field>
    </record>

    <record id="cnab_return_log_form_view" model="ir.ui.view">
        <field name="name">cnab.return.log.form.view</field>
        <field name="model">cnab.return.log</field>
        <field name="arch" type="xml">
            <form>
                <h1>
                    <field name="name" readonly="1"/>
                </h1>
                <group>
                    <group>
                        <field name="filename" readonly="1"/>
                        <field name="cnab_date" readonly="1"/>
                        <field name="sequential_file" readonly="1"/>
                        <field name="bank_account_id" readonly="1"/>
                        <field name="move_id" readonly="1"/>
                    </group>

                </group>
                <group>
                    <group>
                        <field name="number_lots" readonly="1"/>
                        <field name="number_events" readonly="1"/>
                    </group>
                </group>
                <group string="CNAB Return Log Lines" name="cnab.return.log.lines">
                    <field name="cnab_return_log_line_ids" nolabel="1" readonly="1"/>
                </group>

                <group class="oe_subtotal_footer oe_right" colspan="2" name="sale_total">
                    <field name="amount_total_received" widget='monetary' options="{'currency_field': 'currency_id'}"/>
                    <div class="oe_subtotal_footer_separator oe_inline o_td_label">
                    <label for="amount_total_title"/>
                    </div>
                    <field name="amount_total_title" nolabel="1" class="oe_subtotal_footer_separator" widget='monetary' options="{'currency_field': 'currency_id'}" readonly="1"/>
                </group>

                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="cnab_return_log_line_tree_view" model="ir.ui.view">
        <field name="name">cnab.return.log.line.tree</field>
        <field name="model">cnab.return.log.line</field>
        <field name="arch" type="xml">
            <tree string="CNAB Return Log Lines">
                <field name="cnab_lot"/>
                <field name="bank_payment_line_id"/>
                <field name="invoice_id"/>
                <field name="partner_id"/>
                <field name="occurrence_date"/>
                <field name="real_payment_date"/>
                <field name="segment"/>
                <field name="favored_id"/>
                <field name="favored_bank_account_id"/>
                <field name="own_number"/>
                <field name="your_number"/>
                <field name="currency_type"/>
                <field name="title_value"/>
                <field name="payment_value"/>
                <field name="tariff_charge"/>
                <field name="occurrences"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="cnab_return_log_action">
        <field name="name">CNAB Return Log</field>
        <field name="res_model">cnab.return.log</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_cnab_return_log"
              parent="account_payment_order.payment_root"
              name="CNAB Return Log" sequence="999"
              action="cnab_return_log_action"/>

</odoo>