<odoo>
    <record id="focus_nfse_res_company_form" model="ir.ui.view">
        <field name="name">l10n_br_fiscal.res.company.form (in l10n_br_nfse_focus)</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="l10n_br_fiscal.fiscal_res_company_form" />
        <field name="arch" type="xml">
            <xpath expr="//notebook/page[@name='fiscal']/notebook" position="inside">
                <page name="nfse-focus" string="NFS-e Focus" attrs="{'invisible': [('provedor_nfse', '!=', 'focusnfe')]}">
                    <group name="nfse_settings" string="General Settings">
                        <group name="global_nfse_settings">
                            <field name="token_focusnfe"  attrs="{'invisible': [('provedor_nfse', '!=', 'focusnfe')]}" />
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
