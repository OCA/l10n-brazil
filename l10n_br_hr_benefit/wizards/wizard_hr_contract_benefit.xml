<openerp>
<data>

    <record model="ir.ui.view" id="wizard_hr_contract_benefit_form_view">
        <field name="name">wizard.hr.contract.benefit.form (in l10n_br_hr_benefit)</field>
        <field name="model">wizard.hr.contract.benefit</field>
        <field name="arch" type="xml">
            <form string="Wizard Hr Contract Benefit">
                <group>
                    <field name="old_benfit_ids"/>
                    <field name="new_benefit_ids"/>
                </group>
                <footer>
                    <button name="doit"
                            string="OK"
                            class="oe_highlight"
                            type="object"/>
                    or
                    <button string="Cancel"
                            class="oe_link"
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="wizard_hr_contract_benefit_act_window">
        <field name="name">Adicionar Beneficios</field> <!-- TODO -->
        <field name="res_model">wizard.hr.contract.benefit</field>
        <field name="view_mode">form</field>
        <field name="context">{}</field>
        <field name="target">new</field>
    </record>

    <record model="ir.values" id="wizard_hr_contract_benefit_act_multi">
        <field name="name">Adicionar Beneficios</field>
        <field name="key2">client_action_multi</field>
        <field name="value" eval="'ir.actions.act_window,' +str(ref('wizard_hr_contract_benefit_act_window'))" />
        <field name="model">source.model</field> <!-- TODO -->
    </record>

</data>
</openerp>
