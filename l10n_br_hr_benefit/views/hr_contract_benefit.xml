<openerp>
    <data>

        <record model="ir.ui.view" id="hr_contract_benefit_form_view">
            <field name="name">hr.contract.benefit.form (in
                l10n_br_hr_benefit)
            </field>
            <field name="model">hr.contract.benefit</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="button_send_receipt" type="object" string="Enviar para aprovação" states="todo"/>
                        <button name="button_approve_receipt" type="object" string="Aprovar comprovante" states="waiting"/>
                        <button name="button_exception_receipt" type="object" string="Rejeitar comprovante" states="waiting"/>
                        <button name="button_back_todo" type="object" string="Voltar ao início" states="exception"/>
                        <field name="state" widget="statusbar" nolabel="1" readonly="1" />
                    </header>
                    <sheet>
                        <h1>
                            <field name="name"/>
                        </h1>
                        <h1 class="oe_title">
                            <field name="exception_message" attrs="{'invisible': [('state', 'not in', ['exception', 'todo'])]}"/>
                        </h1>
                        <group>
                            <group>
                                <field name="contract_id"/>
                                <field name="employee_id" invisible="1"/>
                                <field name="beneficiary_id"/>
                            </group>
                            <group>
                                <field name="benefit_type_id"/>
                                <field name="date_start"/>
                                <field name="date_stop"/>
                                <field name="active"/>
                            </group>
                        </group>
                        <group>
                            <field name="attachment_ids" widget="many2many_binary"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="hr_contract_benefit_search_view">
            <field name="name">hr.contract.benefit.search (in
                l10n_br_hr_benefit)
            </field>
            <field name="model">hr.contract.benefit</field>
            <field name="arch" type="xml">
                <search>
                    <field name="benefit_type_id"/>
                    <field name="date_start"/>
                    <field name="date_stop"/>
                    <field name="contract_id"/>
                    <field name="employee_id"/>
                    <field name="beneficiary_id"/>
                </search>
            </field>
        </record>

        <record model="ir.ui.view" id="hr_contract_benefit_tree_view">
            <field name="name">hr.contract.benefit.tree (in
                l10n_br_hr_benefit)
            </field>
            <field name="model">hr.contract.benefit</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="benefit_type_id"/>
                    <field name="date_start"/>
                    <field name="date_stop"/>
                    <field name="contract_id"/>
                    <field name="employee_id"/>
                    <field name="beneficiary_id"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window"
                id="hr_contract_benefit_act_window">
            <field name="name">Benefícios</field>
            <field name="res_model">hr.contract.benefit</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>

        <record model="ir.ui.menu" id="hr_contract_benefit_menu">
            <field name="name">Benefícios</field>
            <field name="parent_id" ref="hr_benefit_main_menu"/>
            <field name="action" ref="hr_contract_benefit_act_window"/>
            <field name="sequence" eval="16"/>
        </record>

    </data>
</openerp>
