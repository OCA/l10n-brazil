<openerp>
    <data>

        <record model="ir.ui.view" id="hr_contract_category_form_view">
            <field name="name">hr.contract.category.form (in l10n_br_hr_benefit)</field>
            <field name="model">hr.contract.category</field>
            <field name="arch" type="xml">
                <form>
                   <field name="name"/>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="hr_benefit_type_search_view">
            <field name="name">hr.contract.category.search (in l10n_br_hr_benefit)</field>
            <field name="model">hr.contract.category</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                </search>
            </field>
        </record>

        <record model="ir.ui.view" id="hr_benefit_type_tree_view">
            <field name="name">hr.contract.category.tree (in l10n_br_hr_benefit)</field>
            <field name="model">hr.contract.category</field>
            <field name="arch" type="xml">
                <tree editable="top">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="hr_contract_category_act_window">
            <field name="name">Categorias de Contrato</field>
            <field name="res_model">hr.contract.category</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>

        <record model="ir.ui.menu" id="hr_contract_category_menu">
            <field name="name">Categorias de Contrato</field>
            <field name="parent_id"
                   ref="l10n_br_hr_benefit.hr_benefit_config_menu"/>
            <field name="action" ref="hr_contract_category_act_window"/>
            <field name="sequence" eval="26"/>
        </record>

    </data>
</openerp>
