<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="l10n_br_account_payment_cobranca_payment_term_form" model="ir.ui.view">
        <field name="name">l10n_br_account_product.payment.term.form</field>
        <field name="model">account.payment.term</field>
        <field name="inherit_id" ref="account.view_payment_term_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']/parent::group" position="after">
                <group col="2">
                    <field name="payment_mode_selection"/>
                    <field name="has_interest"
                           attrs="{'invisible': [('payment_mode_selection', 'not in', ('cartao'))]}"/>
                    <field name="interest_rate"
                           attrs="{'invisible': ['|',('payment_mode_selection', 'not in', ('cartao')) , ('has_interest', '=', False)]}"/>
                    <field name="interest_account_id"
                           attrs="{'required': True,
                           'invisible': ['|',('payment_mode_selection', 'not in', ('cartao')) , ('has_interest', '=', False)]}"/>
                </group>
            </xpath>
        </field>
    </record>

</odoo>
