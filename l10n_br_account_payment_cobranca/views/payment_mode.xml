<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="cnab_view_payment_mode_form_inherit_l10n_br_payment"
            model="ir.ui.view">
        <field name="name">cnab.payment.mode.l10n_br_payment.form.inherit
        </field>
        <field name="model">account.payment.mode</field>
        <field name="inherit_id"
               ref="l10n_br_account_payment_mode.view_payment_mode_form_inherit_l10n_br_payment"/>
        <field name="priority" eval="16"/>
        <field name="arch" type="xml">
            <field name="internal_sequence_id" position="after">
                <group>
                    <field name="condicao_emissao_papeleta"/>
                    <field name="cnab_percent_interest"/>
                    <field name="comunicacao_2"/>
                </group>

            </field>
            <group name="payment_order_create_defaults" position="after">
                <group string="CNAB">
                    <field name="tipo_servico"/>
                    <field name="forma_lancamento"/>
                    <field name="codigo_convenio"/>
                    <field name="codigo_finalidade_doc"/>
                    <field name="codigo_finalidade_ted"/>
                    <field name="codigo_finalidade_complementar"/>
                    <field name="aviso_ao_favorecido"/>
                </group>
                <group string="Boleto">
                    <field name="boleto_type"/>
                    <field name="boleto_convenio"/>
                    <field name="boleto_carteira"/>
                    <field name="boleto_modalidade"/>
                    <field name="boleto_variacao"/>
                    <field name="boleto_cnab_code"/>
                    <field name="boleto_aceite"/>
                    <field name="boleto_especie"/>
                    <field name="boleto_protesto"/>
                    <field name="boleto_protesto_prazo"/>
                </group>
            </group>
        </field>
    </record>
</odoo>
