<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="account_invoice_api_form" model="ir.ui.view">
        <field name="name">account.invoice.api.form</field>
        <field name="model">account.invoice.api.confirm</field>
        <field name="arch" type="xml">
            <form string="Registrar faturas via API">
                <div class="oe_title">
                    <h1>
                        <label for="environment"/>
                        <field name="environment" readonly="1"/>
                    </h1>
                </div>
                <p class="oe_grey">
                    Você está prestes a registrar uma faturamente diretamente
                    com o Banco. Verifique se o ambiente selecionado está de
                    acordo com a operação que deseja realizar.
                </p>

                <separator string="Faturas para processamento"/>
                <field name="invoice_ids" readonly="1"/>

                <footer>
                    <button string="Confirmar Registro via API" name="api_register_confirm" type="object" default_focus="1" class="btn-primary"/>
                    <button string="Cancelar" class="btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="account_invoice_api_action" model="ir.actions.act_window">
        <field name="name">Registrar faturas via API</field>
        <field name="res_model">account.invoice.api.confirm</field>
        <field name="view_type">form</field>
        <field name="view_id" ref="account_invoice_api_form"/>
        <field name="target">new</field>
    </record>

    <act_window id="action_account_invoice_api_register"
        multi="True"
        key2="client_action_multi" name="Registrar faturas via API"
        res_model="account.invoice.api.confirm" src_model="account.invoice"
        view_mode="form" target="new" view_type="form" />

    <!-- Inherit Form View to Modify it -->
    <record id="view_l10n_br_account_invoice_form_inherit" model="ir.ui.view">
        <field name="name">view.l10n_br_account.invoice.form.form.inherit
        </field>
        <field name="model">account.invoice</field>
        <field name="inherit_id"
               ref="l10n_br_account.view_l10n_br_account_invoice_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='move_id']" position="after">
                <field name="state_cnab"/>
                <field name="nosso_numero"/>
            </xpath>
            <header position="inside">
                <field name="eval_state_cnab" invisible="1"/>
                <button name="%(account_invoice_api_action)d"
                        string="Registrar Boleto via API" type="action"
                        groups="base.group_user"
                        class="oe_highlight" style="background-color:red; text-color:white;"
                        attrs="{'invisible': ['|',
                        ('state', '!=', 'open'),
                        ('eval_state_cnab', 'in', ('added_paid', 'accepted', 'done', 'accepted_hml'))
                        ]}"
                />
            </header>

            <field name="payment_mode_id" position="after">
                <field name="eval_state_cnab" attrs="{'invisible': [('eval_state_cnab', '=', False)]}"/>
                <field name="eval_situacao_pagamento" attrs="{'invisible': [('eval_situacao_pagamento', '=', False)]}"/>
            </field>

            <notebook position="inside">
                <page string="Instruções de Cobrança">
                    <group>
                        <separator string="Instruções do Modo de Pagamento" />
                        <field name="eval_payment_mode_instrucoes" nolabel="1" colspan="4"
                               attrs="{'invisible': [('eval_payment_mode_instrucoes', '=', False)]}"/>

                        <separator string="Instruções Adicionais"/>
                        <field name="instrucoes" class="oe_inline" nolabel="=1" colspan="4"/>
                    </group>
                </page>
                <page string="Operações Bancárias Via API">
                    <field name="bank_api_operation_ids" class="oe_inline" readonly="True"/>
                </page>
            </notebook>
        </field>
    </record>

     <record id="invoice_tree_inherit" model="ir.ui.view">
        <field name="name">invoice.tree.inherit</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_tree"/>
        <field name="arch" type="xml">
            <field name="state" position="after">
                <field name="eval_state_cnab"/>
                <field name="eval_situacao_pagamento"/>
            </field>
        </field>
    </record>

    <record id="view_account_invoice_filter_inherit" model="ir.ui.view">
        <field name="name">view.account.invoice.filter.inherit</field>
        <field name="model">account.invoice</field>
        <field name="type">search</field>
        <field name="inherit_id" ref="account.view_account_invoice_filter"/>
        <field name="arch" type="xml">
            <field name="journal_id" position="after">
                <field name="eval_state_cnab"/>
                <field name="eval_situacao_pagamento"/>
            </field>
            <field name="partner_id" position="before">
                <separator string="Estado CNAB"/>
                <group expand="0" string="Estado CNAB">
                    <filter name="eval_state_cnab" string="CNAB Inicial"
                            domain="[('eval_state_cnab', '=', 'draft')]"/>
                    <filter name="eval_state_cnab" string="CNAB Adicionado à Ordem de Pagamento"
                            domain="[('eval_state_cnab', '=', 'added')]"/>
                    <filter name="eval_state_cnab" string="CNAB Adicionado para Baixa"
                            domain="[('eval_state_cnab', '=', 'added_paid')]"/>
                    <filter name="eval_state_cnab" string="CNAB Exportado"
                            domain="[('eval_state_cnab', '=', 'exported')]"/>
                    <filter name="eval_state_cnab" string="CNAB Erro ao Exportar"
                            domain="[('eval_state_cnab', '=', 'exporting_error')]"/>
                    <filter name="eval_state_cnab" string="CNAB Aceito no Banco"
                            domain="[('eval_state_cnab', '=', 'accepted')]"/>
                    <filter name="eval_state_cnab" string="CNAB Aceito no Banco em HML"
                            domain="[('eval_state_cnab', '=', 'accepted_hml')]"/>
                    <filter name="eval_state_cnab" string="CNAB Não Aceito no Banco"
                            domain="[('eval_state_cnab', '=', 'not_accepted')]"/>
                </group>

                <separator string="Situação do Pagamento"/>
                <group expand="0" string="Situação Pagamento">
                    <filter name="eval_situacao_pagamento" string="Pagamento - Inicial"
                            domain="[('eval_situacao_pagamento', '=', 'draft')]"/>
                    <filter name="eval_situacao_pagamento" string="Pagamento - Aberto"
                            domain="[('eval_situacao_pagamento', '=', 'aberta')]"/>
                    <filter name="eval_situacao_pagamento" string="Pagamento - Pago"
                            domain="[('eval_situacao_pagamento', '=', 'paga')]"/>
                    <filter name="eval_situacao_pagamento" string="Pagamento - Liquidado"
                            domain="[('eval_situacao_pagamento', '=', 'liquidada')]"/>
                    <filter name="eval_situacao_pagamento" string="Pagamento - Baixa Simples"
                            domain="[('eval_situacao_pagamento', '=', 'baixa')]"/>
                    <filter name="eval_situacao_pagamento" string="Pagamento - Baixa por Liquidação"
                            domain="[('eval_situacao_pagamento', '=', 'baixa_liquidacao')]"/>
                </group>
            </field>
            <filter name="group_by_partner_id" position="after">
                <filter name="eval_situacao_pagamento" string="Situação Pagamento"
                        context="{'group_by': 'eval_situacao_pagamento'}"/>
                <filter name="eval_state_cnab" string="Situação CNAB"
                        context="{'group_by': 'eval_state_cnab'}"/>
            </filter>
        </field>
    </record>
</odoo>
