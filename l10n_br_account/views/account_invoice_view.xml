    <record id="account.action_vendor_bill_template" model="ir.actions.act_window">
        <field name="context">{'default_type': 'in_invoice', 'type': 'in_invoice', 'journal_type': 'purchase', 'default_issuer': 'partner', 'default_fiscal_operation_type': 'in'}</field>
    </record>

    <record id="invoice_supplier_form" model="ir.ui.view">
        <field name="name">l10n_br_account.invoice.supplier.form</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_supplier_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form/sheet/group" position="after">
                <group name="l10n_br_fiscal">
                    <field name="id" invisible="1"/>
                    <field name="document_electronic" invisible="1"/>
                    <field name="fiscal_operation_type" invisible="1"/>
                    <field name="document_section" invisible="1"/>
                    <field name="number" invisible="1"/>
                    <field name="edoc_purpose" invisible="1"/>
                    <field name="ind_final" invisible="1"/>
                    <field name="ind_pres" invisible="1"/>
                </group>
            </xpath>
            <field name="payment_term_id" position="after">
                <field name="document_type_id"/>
                <field name="fiscal_operation_id" attrs="{'invisible': [('document_type_id', '=', False)]}"/>
                <field name="issuer" attrs="{'invisible': [('document_type_id', '=', False)]}"/>
                <field name="document_serie_id" attrs="{'invisible': ['|', ('document_type_id', '=', False), ('issuer', '=', 'partner')]}"/>
                <field name="document_serie" attrs="{'invisible': ['|', ('document_type_id', '=', False), ('issuer', '=', 'company')], 'required': [('issuer', '=', 'partner')]}"/>
                <field name="number" readonly="0" force_sale="1" attrs="{'invisible': ['|', ('document_type_id', '=', False), ('issuer', '=', 'company')]}"/>
                <field name="key" attrs="{'invisible': [('document_electronic', '=', False)]}"/>
            </field>
            <xpath expr="//field[@name='invoice_line_ids']/tree" position="attributes">
                <attribute name="editable"/>
            </xpath>
            <xpath expr="//field[@name='invoice_line_ids']" position="attributes">
                <attribute name="context">{'default_company_id': company_id, 'default_partner_id': partner_id, 'default_fiscal_operation_type': fiscal_operation_type, 'default_fiscal_operation_id': fiscal_operation_id}</attribute>
            </xpath>
        </field>
    </record>

    <record id="invoice_line_form" model="ir.ui.view">
        <field name="name">l10n_br_account.invoice.line.form</field>
        <field name="model">account.invoice.line</field>
        <field name="inherit_id" ref="account.view_invoice_line_form"/>
        <field name="arch" type="xml">
            <field name="invoice_line_tax_ids" position="replace">
                <group>
                    <field name="fiscal_operation_id" required="1"/>
                    <field name="fiscal_operation_line_id" required="1"/>
                    <field name="cfop_id" invisible="1"/>
                </group>
                <group name="fiscal_fields" invisible="1">
                    <field name="fiscal_operation_type" invisible="1" readonly="1"/>
                    <field name="fiscal_genre_code" invisible="1"/>
                    <field name="tax_framework" invisible="1"/>
                    <field name="partner_id" invisible="1"/>
                    <field name="company_id" invisible="1"/>
                </group>
            </field>
            <field name="name" position="after">
                <notebook>
                    <page name="fiscal_taxes" string="Taxes"/>
                    <page name="others" string="Others">
                        <group>
                            <field name="freight_value"/>
                            <field name="insurance_value"/>
                            <field name="other_costs_value"/>
                        </group>
                    </page>
                    <page name="fiscal_line_extra_info" string="Extra Info"/>
                    <page name="accounting" string="Accounting">
                        <group>
                            <field name="invoice_line_tax_ids" context="{'type': invoice_type}" domain="[('type_tax_use','!=','none'),('company_id', '=', company_id)]" widget="many2many_tags" options="{'no_create': True}"/>
                        </group>
                    </page>
                </notebook>
            </field>
        </field>
    </record>

</odoo>
