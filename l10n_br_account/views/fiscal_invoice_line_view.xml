<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <record id="fiscal_invoice_line_form" model="ir.ui.view">
    <field name="name">l10n_br_account.invoice.line.form</field>
    <field name="model">account.invoice.line</field>
    <field name="inherit_id" ref="l10n_br_fiscal.document_line_form"/>
    <field name="mode">primary</field>
    <field name="arch" type="xml">
      <xpath expr="//group[@name='fiscal_infors']" position="after">
          <group name="accounting_fields" string="Accounting" groups="account.group_account_user">
              <field domain="[('company_id', '=', company_id)]" name="account_id" groups="account.group_account_user"/>
              <field domain="[('company_id', '=', company_id)]" name="account_analytic_id" groups="analytic.group_analytic_accounting"/>
              <field name="analytic_tag_ids" widget="many2many_tags" groups="analytic.group_analytic_tags" options="{'color_field': 'color'}"/>
          </group>
      </xpath>
      <xpath expr="//page[@name='fiscal_line_extra_info']" position="after">
          <field name="invoice_type" invisible="1"/>
          <page name="accounting" string="Accounting">
              <group>
                  <field name="invoice_line_tax_ids" widget="many2many_tags" options="{'no_create': True}" context="{'type': invoice_type}" domain="[('type_tax_use','!=','none'),('company_id', '=', company_id)]"/>
              </group>
          </page>
      </xpath>
    </field>
  </record>

</odoo>
