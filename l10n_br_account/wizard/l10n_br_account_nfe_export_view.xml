<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>

		<record id="view_l10n_br_account_nfe_export" model="ir.ui.view">
			<field name="name">l10n_br_account.nfe_export</field>
			<field name="model">l10n_br_account.nfe_export</field>
			<field name="arch" type="xml">
				<form string="Exportar Nota Fiscal" version="7.0">
					<field invisible="1" name="state"/>
					<field name="name" invisible="1" />
					<group>
						<group states="init">
							<field name="company_id" widget="selection" />
							<field name="file_type" />
							<field name="nfe_environment" />
						</group>
						<group states="done">
							<field name="file" filename="name" />
						</group>
					</group>
						<footer states="init">
							<button name="nfe_export" string="Exportar" type="object" class="oe_highlight" /> ou
	                        <button special="cancel" string="Cancel" type="object" class="oe_link"/>
                    	</footer>
	                    <footer states="done">
	                        <button special="cancel" string="Close" type="object"/>
	                    </footer>
				</form>
			</field>
		</record>

		<record id="action_view_l10n_br_account_nfe_export" model="ir.actions.act_window">
			<field name="name">Exportar Nota Fiscal</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">l10n_br_account.nfe_export</field>
			<field name="view_type">form</field>
			<field name="view_mode">form</field>
			<field name="target">new</field>
		</record>

		<menuitem name="Exportar Nota Fiscal" action="action_view_l10n_br_account_nfe_export"
			id="menu_view_l10n_br_account_nfe_export" parent="account.menu_finance_periodical_processing"
			sequence="2" />

	</data>
</openerp>
