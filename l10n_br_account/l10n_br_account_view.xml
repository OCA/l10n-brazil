	<data>
	
		<menuitem icon="terp-crm" id="menu_l10n_br_account" name="Localização Brasil" web_icon_hover="images/l10n_br.png" web_icon="images/l10n_br-hover.png"/>
		<menuitem id="menu_l10n_br_account_configuration" name="Configuração" parent="menu_l10n_br_account" sequence="0"/>

		<record model="ir.ui.view" id="view_l10n_br_account_cfop_form">
			<field name="name">l10n_br_account.cfop.name</field>
			<field name="model">l10n_br_account.cfop</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="CFOP">
					<field name="code" select="1"/>
					<field name="name" select="1" />
					<field name="small_name" select="2" />
					<field name="parent_id" select="2"/>
					<field name="type" select="2"/>
					<newline/>
					<field name="description" select="2" />
				</form>
			</field>
		</record>

		<record id="view_l10n_br_account_cfop_search" model="ir.ui.view">
	            <field name="name">l10n_br_account.cfop.search</field>
	            <field name="model">l10n_br_account.cfop</field>
	            <field name="type">search</field>
	            <field name="arch" type="xml">
	                <search string="CFOP">
	                   <filter string="Entrada" icon="terp-accessories-archiver+" domain="[('type', '=', 'output')]" />
	                   <filter string="Saída" icon="terp-accessories-archiver-minus" domain="[('type','=','input')]"/>
	                   <separator orientation="vertical"/>
	                   <field name="code"/>
	                   <field name="name"/>
	                   <field name="small_name"/>
	                   <newline/>
	                   <group  expand='0' string='Agrupar Por...' groups="base.group_extended">
	                       <filter string='Tipo' icon="terp-stock_symbol-selection" domain="[]" context="{'group_by' : 'type'}" />
	                   </group>
	                </search>
	            </field>
	        </record>

