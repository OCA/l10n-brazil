<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!-- Custom workflow for e-doc! -->
        <record id="act_transmit" model="workflow.activity">
            <field name="wkf_id" ref="account.wkf"/>
            <field name="name">transmitted</field>
            <field name="action">action_date_assign()
action_move_create()
action_number()
action_transmit()</field>
            <field name="kind">function</field>
        </record>

        <record id="account.act_open" model="workflow.activity">
            <field name="wkf_id" ref="account.wkf"/>
            <field name="name">open</field>
            <field name="action">invoice_validate()</field>
            <field name="kind">function</field>
        </record>

        <record id="tras_transmit_open" model="workflow.transition">
            <field name="act_from" ref="act_transmit"/>
            <field name="act_to" ref="account.act_open"/>
            <field name="condition">edoc_authorized</field>
            <field name="signal"></field>
        </record>

        <record id="account.pro2_to_open" model="workflow.transition">
            <field name="act_from" ref="account.act_proforma2"/>
            <field name="act_to" ref="act_transmit"/>
            <field name="signal">invoice_open</field>
        </record>

        <record id="account.t4" model="workflow.transition">
            <field name="act_from" ref="account.act_draft"/>
            <field name="act_to" ref="act_transmit"/>
            <field name="signal">invoice_open</field>
        </record>

    </data>
</openerp>
