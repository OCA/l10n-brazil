<odoo>

    <record model="ir.ui.view" id="l10n_br_pix_config_form_view">
        <field name="name">l10n_br_pix.config.form (in l10n_br_pix)</field>
        <field name="model">l10n_br_pix.config</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <!-- TODO -->
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object"
                                class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button"
                                options='{"terminology": "archive"}'/>
                        </button>
                    </div>
                    <group>
                        <field name="name"/>
                        <field name="journal_id"/>
                    </group>
                    <group>
                        <field name="pix_auth_cert"/>
                        <field name="pix_auth_key"/>
                        <field name="environment"/>
                        <field name="production_endpoint"/>
                        <field name="test_endpoint"/>
                    </group>
                    <field name="pix_key_ids"/>
                </sheet>
                <div class="oe_chatter"></div>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="l10n_br_pix_config_search_view">
        <field name="name">l10n_br_pix.config.search (in l10n_br_pix)</field>
        <field name="model">l10n_br_pix.config</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="journal_id"/>
            </search>
        </field>
    </record>

    <record model="ir.ui.view" id="l10n_br_pix_config_tree_view">
        <field name="name">l10n_br_pix.config.tree (in l10n_br_pix)</field>
        <field name="model">l10n_br_pix.config</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="journal_id"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="l10n_br_pix_config_act_window">
        <field name="name">L10n_br_pix Config</field> <!-- TODO -->
        <field name="res_model">l10n_br_pix.config</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>
    <record model="ir.ui.menu" id="l10n_br_pix_config_menu">
        <field name="name">Config</field>
        <field name="parent_id" ref="l10n_br_pix_menu"/>
        <field name="action" ref="l10n_br_pix_config_act_window"/>
        <field name="sequence" eval="999"/>
    </record>

</odoo>
