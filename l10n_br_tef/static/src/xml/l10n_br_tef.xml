<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-extend="Paymentline">
        <t t-jquery=".paymentline-input" t-operation="append">
            <t t-if="['CD01', 'CC01'].indexOf(line.cashregister.journal.code) > -1">
                <span class="payment-terminal-transaction-start">
                    <button>Start transaction</button>
                </span>
            </t>
        </t>
    </t>

    <t t-name="PinPadStatusWidget">
        <div class="oe_status connected js_synch oe_hidden">
            <i class='fa fa-fw fal fa-credit-card icon_connected' style="color: green;"/>
        </div>
        <div class="oe_status disconnected js_synch">
            <i class='fa fa-fw fal fa-credit-card icon_disconnected' style="color: red;"/>
        </div>
    </t>

    <t t-name="StatusPagamentoPopUp">
        <div class="modal-dialog">
          <div class="popup popup-select-variant statusPagamentoPopUp">
              <div class="modal-content">
                <div class="modal-header">
                    <p class="message"><t t-esc=" widget.message" /></p>
                </div>
                <div class="modal-body">

                    <p class="comment"><t t-esc=" widget.comment" /></p>
                </div>
              </div>
          </div>
        </div>
    </t>

    <t t-name="CancelamentoCompraPopup">
        <div class="modal-dialog">
            <div class="popup popup-confirm cancelamentoCompraPopup">
                <div class="modal-content">
                <div class="modal-header">
                    <h class="message">Cancellation of Purchases</h>
                </div>
                <div class="modal-body">
                    <p class="comment">User</p>
                    <input class ="CancelamentoCompraPopup_usuario" type="text" placeholder="lojista"/>

                    <p class="comment">Password</p>
                    <input class="CancelamentoCompraPopup_senha" type="password" placeholder="123465"/>

                    <p class="comment">Transaction Date</p>
                    <input class="CancelamentoCompraPopup_data" type="date"/>

                    <p class="comment">Document Number</p>
                    <input class="CancelamentoCompraPopup_documento" type="number" placeholder="111"/>

                    <p class="comment">Transaction Value</p>
                    <input class="CancelamentoCompraPopup_valor" type="number" placeholder="10.25"/>

                </div>
                <div class="footer">
                    <div class="button btn-report_data">
                        OK
                    </div>
                    <div class="button btn-cancel-operation">
                        CANCEL
                    </div>
                </div>
              </div>
            </div>
        </div>
    </t>

    <t t-name="ConfirmaCancelamentoCompraPopup">
        <div class="modal-dialog">
            <div class="popup popup-confirm confirmaCancelamentoCompraPopup">
                <div class="modal-content">
                <div class="modal-header">
                    <p class="message"><t t-esc=" widget.message" /></p>
                </div>
                <div class="modal-body">
                    <p class="comment"><t t-esc=" widget.comment" /></p>
                </div>
                <div class="footer">
                    <div class="button btn-confirm-cancellation">
                        SIM
                    </div>
                    <div class="button btn-cancel-cancellation">
                        N√ÉO
                    </div>
                </div>
              </div>
            </div>
        </div>
    </t>

    <t t-extend="DebugWidget">
        <t t-jquery=".content" t-operation="append">
            <p class="category">TEF</p>
            <ul>
                <li class="status card_number">Card Number</li>
                <li>
                    <input class="card_number" type="text" placeholder="5442556260904012"/>
                </li>

                <li class="status expiring_date">Expiring Date</li>
                <li>
                    <input class="expiring_date" type="text" placeholder="05/21"/>
                </li>

                <li class="status security_code">Security Code</li>
                <li>
                    <input class="security_code" type="text" placeholder="510"/>
                </li>
            </ul>
        </t>
    </t>

    <t t-extend="PosOrderListButtonWidget">
        <t t-jquery=".paypad-button" t-operation="before">
           <button class="paypad-button btn-cancelar-pagamento">
                Cancel Purchases
           </button>
        </t>
    </t>

</templates>
