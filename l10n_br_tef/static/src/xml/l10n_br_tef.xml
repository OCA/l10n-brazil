<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-extend="Paymentline">
        <t t-jquery=".paymentline-input" t-operation="append">
            <t t-if="['CD01', 'CC01'].indexOf(line.cashregister.journal.code) > -1">
                <span class="payment-terminal-transaction-start">
                    <button>Start transaction</button>
                </span>
            </t>
        </t>
    </t>

    <t t-name="PinPadStatusWidget">
        <div class="oe_status connected js_synch">
            <i class='fa fa-fw fal fa-credit-card icon_connected' style="color: green;"/>
        </div>
        <div class="oe_status disconnected js_synch oe_hidden">
            <i class='fa fa-fw fal fa-credit-card icon_disconnected' style="color: red;"/>
        </div>
    </t>

    <t t-name="StatusPagamentoPopUp">
        <div class="modal-dialog">
          <div class="popup popup-select-variant statusPagamentoPopUp">
              <div class="modal-content">
                <div class="modal-header">
                    <p class="message"><t t-esc=" widget.message" /></p>
                </div>
                <div class="modal-body">

                    <p class="comment"><t t-esc=" widget.comment" /></p>
                </div>
              </div>
          </div>
        </div>
    </t>

    <t t-name="CancelamentoCompraPopup">
        <div class="modal-dialog">
            <div class="popup popup-confirm cancelamentoCompraPopup">
                <div class="modal-content">
                <div class="modal-header">
                    <h class="message">Cancelamento de Compras</h>
                </div>
                <div class="modal-body">
                    <p class="comment">Usuário de Acesso</p>
                    <input name="CancelamentoCompraPopup_usuario" type="text" placeholder="lojista"/>

                    <p class="comment">Senha de Acesso</p>
                    <input name="CancelamentoCompraPopup_senha" type="password" placeholder="123465"/>

                    <p class="comment">Data da Transação</p>
                    <input class="CancelamentoCompraPopup_data" type="text" placeholder="DD/mm/yy" maxlength="8"/>

                    <p class="comment">Número do Documento</p>
                    <input name="CancelamentoCompraPopup_documento" type="number" placeholder="111"/>

                    <p class="comment">Valor da Transação</p>
                    <input name="CancelamentoCompraPopup_valor" type="number" placeholder="10.25"/>

                </div>
                <div class="footer">
                    <div class="button btn-report_data">
                        OK
                    </div>
                    <div class="button btn-cancel-operation">
                        CANCELAR
                    </div>
                </div>
              </div>
            </div>
        </div>
    </t>

    <t t-extend="PosOrderListButtonWidget">
        <t t-jquery=".paypad-button" t-operation="before">
           <button class="paypad-button btn-cancelar-pagamento">
                Cancelar Compras
           </button>
        </t>
    </t>

</templates>
