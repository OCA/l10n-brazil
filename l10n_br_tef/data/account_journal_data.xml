<?xml version="1.0"?>

<openerp>
    <data>
        <record id="tef_credit_card" model="account.journal">
            <field name="name">Credit Card</field>
            <field name="code">CC01</field>
            <field name="type">purchase</field>
            <field name="sequence_id" ref="account.sequence_bank_journal"/>
            <field name="default_debit_account_id" ref="account.bnk"/>
            <field name="default_credit_account_id" ref="account.bnk"/>
            <field name="analytic_journal_id" ref="account.sit"/>
            <field name="user_id" ref="base.user_root"/>
        </record>

        <record id="tef_debit_card" model="account.journal">
            <field name="name">Debit Card</field>
            <field name="code">CD01</field>
            <field name="type">purchase</field>
            <field name="sequence_id" ref="account.sequence_bank_journal"/>
            <field name="default_debit_account_id" ref="account.bnk"/>
            <field name="default_credit_account_id" ref="account.bnk"/>
            <field name="analytic_journal_id" ref="account.sit"/>
            <field name="user_id" ref="base.user_root"/>
        </record>

        <record model="pos.config" id="point_of_sale.pos_config_main">
            <!--<field name="name">Main</field>-->
            <field name="iface_tef" eval="True"/>
            <field name="journal_ids" eval="[(6, 0, [ref('tef_credit_card'), ref('tef_debit_card')])]" />
        </record>

        <record id="account.check_journal" model="account.journal">
            <field name="payment_mode">check</field>
        </record>
    </data>
</openerp>

