<odoo>

    <record id="document_closure_wizard_form" model="ir.ui.view">
        <field name="name">l10n_br_fiscal.document.closure.wizard.form</field>
        <field name="model">l10n_br_fiscal.document.closure.wizard</field>
        <field name="arch" type="xml">
            <form string="Encerramento">
                <group>
                    <field name="company_id" invisible="1" />
                    <field name="country_id" invisible="1" />
                    <field name="state_id" string="Estado do Encerramento" />
                    <field name="city_id" string="Cidade do Encerramento" />
                </group>
                <footer>
                    <button name="doit" string="OK" class="btn-primary" type="object" />
                    <button string="Cancel" class="btn-default" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="document_closure_wizard_action" model="ir.actions.act_window">
        <field name="name">Encerramento</field>
        <field name="res_model">l10n_br_fiscal.document.closure.wizard</field>
        <field name="view_mode">form</field>
        <field name="context">{}</field>
        <field name="target">new</field>
    </record>

</odoo>
