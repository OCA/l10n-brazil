<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template id="report_damdfe_modal_aereo">
        <t t-call="web.html_container">
            <div class="row">
                <div class="col-6">
                    <span class="damdfe-modal-title">
                        Aeronave
                    </span>
                    <hr class="damdfe-separator" />
                    <div class="row">
                        <div class="col-6 damdfe-modal-header">
                            Marca de Nacionalidade
                        </div>
                        <div class="col-6 damdfe-modal-header">
                            Marca de Matrícula
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-6 damdfe-modal-field">
                            <span t-esc="modal_aereo_data['airplane_nationality']" />
                        </div>
                        <div class="col-6 damdfe-modal-field">
                            <span t-esc="modal_aereo_data['airplane_registration']" />
                        </div>
                    </div>
                </div>

                <div class="col-6">
                    <span class="damdfe-modal-title">
                        Voo
                    </span>
                    <hr class="damdfe-separator" />
                    <div class="row">
                        <div class="col-6 damdfe-modal-header">
                            Número
                        </div>
                        <div class="col-6 damdfe-modal-header">
                            Data
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-6 damdfe-modal-field">
                            <span t-esc="modal_aereo_data['flight_number']" />
                        </div>
                        <div class="col-6 damdfe-modal-field">
                            <span t-esc="modal_aereo_data['flight_date']" />
                        </div>
                    </div>
                </div>

                <div class="col-12" style="margin-top: 20px">
                    <span class="damdfe-modal-title">
                        Aeródromo
                    </span>
                    <hr class="damdfe-separator" />

                    <div class="row">
                        <div class="col-6 damdfe-modal-header">
                            Embarque
                        </div>
                        <div class="col-6 damdfe-modal-header">
                            Destino
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-6 damdfe-modal-field">
                            <span t-esc="modal_aereo_data['boarding_airfield']" />
                        </div>
                        <div class="col-6 damdfe-modal-field">
                            <span t-esc="modal_aereo_data['landing_airfield']" />
                        </div>
                    </div>
                </div>
            </div>

            <div class="row damdfe-load-info" t-if="contingency">
                <div class="col-12">
                    <span>
                        <strong>Informações da Composição da Carga</strong>
                    </span>
                    <hr class="damdfe-separator" />
                </div>

                <table
                    class="table table-hover damdfe-table"
                    style="margin-left: 15px !important;"
                >
                    <thead class="damdfe-table-header">
                        <tr>
                            <th
                                scope="col"
                            >Informações dos documentos discais vinculados ao manifesto</th>
                            <th scope="col">Informações da unidade de tranporte</th>
                            <th scope="col">Informações da unidade de carga</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="document_info['documents']" t-as="document">
                            <tr class="damdfe-table-item">
                                <td><t t-esc="document['key']" /></td>
                                <td>Aeronave</td>
                                <td>Outros</td>
                            </tr>
                        </t>
                    </tbody>
                </table>
            </div>
        </t>
    </template>
</odoo>
