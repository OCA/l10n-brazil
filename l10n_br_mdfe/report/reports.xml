<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="damdfe_qweb_paperformat" model="report.paperformat">
        <field name="name">DAMDFE qweb paper format</field>
        <field name="default" eval="True" />
        <field name="format">custom</field>
        <field name="page_height">297</field>
        <field name="page_width">210</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">0.5</field>
        <field name="margin_bottom">0.5</field>
        <field name="margin_left">0.5</field>
        <field name="margin_right">0.5</field>
        <field name="header_line" eval="False" />
        <field name="header_spacing">10</field>
        <field name="dpi">110</field>
    </record>

    <record id="action_print_damdfe" model="ir.actions.report">
        <field name="name">DAMDFE</field>
        <field name="model">l10n_br_fiscal.document</field>
        <field name="report_type">qweb-html</field>
        <field name="report_name">l10n_br_mdfe.report_damdfe</field>
        <field name="report_file">l10n_br_mdfe.danfe_mdfe</field>
        <field name="paperformat_id" ref="damdfe_qweb_paperformat" />
    </record>

</odoo>
