<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="view_product_template_from" model="ir.ui.view">
        <field name="name">product.template in (l10n_br_pos)</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="point_of_sale.product_template_form_view" />
        <field name="arch" type="xml">
            <group name="pos" position="after">
                <button
                    name="update_pos_fiscal_map"
                    type="object"
                    string="Update POS taxes"
                />
                <group>
                    <field
                        name="pos_fiscal_map_ids"
                        context="{'default_product_tmpl_id': id}"
                    >
                        <tree>
                            <field name="pos_config_id" string="POS" />
                            <field name="product_tmpl_id" string="Produt" />
                            <field
                                name="fiscal_tax_ids"
                                string="Taxes"
                                widget="many2many_tags"
                            />
                        </tree>
                    </field>
                </group>
            </group>
        </field>
    </record>

</odoo>
