<odoo>

    <record model="ir.ui.view" id="l10n_br_pos_cancel_reason_form">
        <field name="name">POS Cancel Reason</field>
        <field name="model">pos.cancel.reason</field>
        <field name="arch" type="xml">
            <form>
              <sheet>
                <div class="oe_title">
                    <label for="name" class="oe_edit_only" />
                    <h1>
                        <field name="name" class="oe_inline" />
                    </h1>
                </div>

                <group>
                    <field name="active" />
                    <field name="is_custom" />
                </group>
              </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="l10n_br_pos_cancel_reason_search">
        <field name="name">POS Cancel Reason Search</field>
        <field name="model">pos.cancel.reason</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" />
            </search>
        </field>
    </record>

    <record model="ir.ui.view" id="l10n_br_pos_cancel_reason_tree">
        <field name="name">POS Cancel Reason Tree</field>
        <field name="model">pos.cancel.reason</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="active" />
                <field name="is_custom" />
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="l10n_br_pos_cancel_reason_act_window">
        <field name="name">POS Cancel Reason</field>
        <field name="res_model">pos.cancel.reason</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>

    <record model="ir.ui.menu" id="l10n_br_pos_cancel_reason_menu">
        <field name="name">POS Cancel Reason</field>
        <field name="parent_id" ref="point_of_sale.pos_menu_products_configuration" />
        <field name="action" ref="l10n_br_pos_cancel_reason_act_window" />
        <field name="sequence" eval="16" />
    </record>

</odoo>
