<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="view_pos_config_form" model="ir.ui.view">
        <field name="name">pos.config.form (in l10n_br_pos)</field>
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="point_of_sale.pos_config_view_form" />
        <field name="arch" type="xml">
            <xpath
                expr="//div//label[@for='iface_customer_facing_display']/.."
                position="after"
            >
                <div class="row">
                    <label
                        string="Brasil Fiscal"
                        for="iface_fiscal_via_proxy"
                        class="col-lg-3 o_light_label"
                    />
                    <field name="iface_fiscal_via_proxy" />
                </div>
            </xpath>
            <xpath expr="//sheet" position="inside">
                <notebook>
                    <page name="l10n_br_pos_general_settings" string="General">
                        <group string="Consumer Info">
                            <field name="partner_id" />
                        </group>

                        <group string="Document Types">
                            <group>
                                <field
                                    string="Simplified Document"
                                    name="simplified_document_type_id"
                                />
                                <field
                                    string="Amount Limit"
                                    name="simplified_invoice_amount_limit"
                                />
                            </group>
                            <group>
                                <field
                                    string="Detailed Document"
                                    name="detailed_document_type_id"
                                />
                            </group>
                        </group>

                        <group string="Others">
                            <field name="additional_data" />
                        </group>
                    </page>

                    <page name="l10n_br_pos_taxes" string="Taxes">
                        <group string="Taxes">
                            <group>
                                <button
                                    name="update_pos_fiscal_map"
                                    type="object"
                                    string="Update Product Taxes"
                                />
                            </group>

                            <group>
                                <button
                                    type="action"
                                    id="product_pos_map_button"
                                    name="%(l10n_br_pos.l10n_br_pos_product_fiscal_map_act_window)d"
                                    context="{'search_pos_config_id': active_id}"
                                    string="View Tax Details by Product"
                                />
                            </group>
                        </group>

                        <group string="Sales">
                            <field name="out_pos_fiscal_operation_id" />
                            <field name="cfop_ids" widget="many2many_tags" />
                            <field
                                name="out_pos_fiscal_operation_line_ids"
                                widget="many2many_tags"
                            />
                        </group>

                        <group string="Devolution">
                            <field name="refund_pos_fiscal_operation_id" />
                        </group>
                    </page>
                </notebook>
            </xpath>
        </field>
    </record>
</odoo>
