<?xml version="1.0" encoding="UTF-8" ?>
<templates id="template" xml:space="preserve">

    <t t-name="StockScrapPopup" owl="1">
        <div role="dialog" class="modal-dialog">
            <div class="popup stock-scrap-popup">
                <header class="title">
                    STOCK SCRAP
                </header>
                <main class="body">
                    <div class="row">
                        <div class="fields">
                            <div class="stock-scrap-form">
                                <span class="field-label">Product: </span>
                                <select
                                    class="pos-input pos-input-select"
                                    name="state"
                                    style="width: 300px !important;"
                                    t-model="state.productId"
                                >
                                    <option
                                        t-foreach="sortedTemplates"
                                        t-as="tmpl"
                                        t-att-value="tmpl.id"
                                    >
                                        <t t-esc="tmpl.name" />
                                    </option>
                                </select>

                                <span class="field-label">Quantity: </span>
                                <input
                                    class="pos-input"
                                    type="number"
                                    t-model="state.productQty"
                                />
                            </div>

                            <div class="stock-scrap-form" t-if="state.productId">
                                <span class="field-label">Variant: </span>
                                <select
                                    class="pos-input pos-input-select"
                                    t-model="state.productVariantId"
                                >
                                    <option
                                        t-foreach="sortedVariants"
                                        t-as="var"
                                        t-att-value="var.id"
                                    >
                                        <t t-esc="var.display_name" />
                                    </option>
                                </select>
                            </div>

                            <div class="stock-scrap-form">
                                <span class="field-label">Scrap Reason: </span>
                                <select
                                    class="pos-input pos-input-select"
                                    t-model="state.scrapReasonId"
                                >
                                    <option />
                                    <option
                                        t-foreach="env.pos.scrap_reason_codes"
                                        t-as="code"
                                        t-att-value="code.id"
                                    >
                                        <t t-esc="code.name" />
                                    </option>
                                </select>
                            </div>

                            <div class="error-msg stock-scrap-form">
                                Please fill the necessary data.
                            </div>
                        </div>
                    </div>
                </main>
                <footer class="footer">
                    <div class="button" t-on-click="cancel()">Cancel</div>
                    <div class="button" t-on-click="createStockScrap()">Create</div>
                </footer>
            </div>
        </div>
    </t>

</templates>
