<odoo>

    <record model="ir.ui.view" id="account_invoice_form_view">
        <field name="name">account.invoice.form (in l10n_br_bank_api_inter)</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account_payment_order.invoice_form"/>
        <field name="arch" type="xml">
            <button name="preview_invoice" position="after">
                <button name="action_pdf_boleto" type="object" string="PDFs Boletos"
                        attrs="{'invisible': [('state', 'not in', ('open', 'in_payment', 'paid'))]}"
                />
            </button>
        </field>
    </record>


</odoo>
