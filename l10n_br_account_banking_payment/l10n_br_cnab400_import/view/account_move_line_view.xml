                     <group string="Agrupar por">
                         <filter name="period_id" string="Período" context="{'group_by': 'period_id'}"/>
                         <filter name="move_id" string="Fatura" context="{'group_by': 'move_id'}"/>
                         <!--<filter name="group_by_move_line_id" string="Fatura" context="{'group_by': 'move_line_id'}"/>-->
                         <!--<filter name="group_by_move_bank_id" string="Conta Bancária" context="{'group_by': 'bank_id'}"/>-->

                     </group>

                 </search>
            </field>
        </record>

