        <record model="ir.ui.view" id="payment_mode_base_form_view">
            <field name="name">payment.mode.form (in l10n_br_financial_payment_order)</field>
            <field name="model">payment.mode</field>
            <field name="priority">9999</field>
            <field name="mode">primary</field>
            <field name="arch" type="xml">
                <form string="Payment Mode">
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1><field name="name"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="bank_id"/>
                            <field name="tipo_servico" />
                            <field name="tipo_pagamento" />
                        </group>
                        <group>
                            <field name="company_id" widget='selection' groups="base.group_multi_company"/>
                            <field name="type" />
                        </group>
                    </group>

                    <group string="Campos que serÃ£o escondidos">
                        <field name="sale_ok" />
                        <field name="purchase_ok" />
                    </group>

                    <group name="group_grouping" string="Line grouping">
                        <field name="group_lines"/>
                    </group>

                    <group string="CNAB">
                        <group>
                            <field name="codigo_convenio"/>
                            <field name="codigo_instrucao_movimento"/>
                            <field name="codigo_finalidade_doc"/>
                            <field name="codigo_finalidade_ted"/>
                            <field name="codigo_finalidade_complementar"/>
                            <field name="aviso_ao_favorecido"/>
                        </group>
                        <group string="Sequencias">
                            <field name="sequencia_arquivo" required="1"/>
                            <field name="proximo_sequencia_arquivo" required="1"/>
                        </group>
                    </group>

                </form>
            </field>
        </record>

