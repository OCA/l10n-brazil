<data>

    <record model="ir.ui.view" id="payment_order_pagamento_form_view">
        <field name="name">payment.order.pagamento.form (in l10n_br_financial_payment_order)</field>
        <field name="model">payment.order</field>
        <field name="mode">primary</field>
        <field name="inherit_id" ref="payment_order_base_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//form[1]" position="attributes">
                <attribute name="string">Pagamento</attribute>
            </xpath>
            <xpath expr="//div[@name='botoes_superiores']" position="inside">
                <button class="oe_inline oe_stat_button oe_right" name="%(action_create_payslip_payment_order)d" string="Holerites" Help="Selecionar as linhas dos holerites que vao ser pagas"
                        type="action" attrs="{'invisible':[('state','=','done')]}" icon="fa-pencil-square-o" widget="statinfo"/>
            </xpath>
            <xpath expr="//form/group[@name='informacoes_especificas']" position="inside">
                <h1>TODO: Informações específicas</h1>
            </xpath>
            <field name="mode" position="after">
                <field name="tipo_de_folha" />
            </field>
        </field>
    </record>

