<openerp>
    <data>
        <record id="wkf" model="workflow">
            <field name="name">payment.line.basic</field>
            <field name="osv">payment.line</field>
            <field name="on_create">True</field>
        </record>

        <record id="act_draft" model="workflow.activity">
            <field name="wkf_id" ref="wkf"/>
            <field name="name">draft</field>
            <field name="flow_start">True</field>
            <field name="kind">function</field>
            <field name="action">write({'status': 'draft'})</field>
            <field name="split_mode">OR</field>
        </record>

        <record id="act_error" model="workflow.activity">
            <field name="wkf_id" ref="wkf"/>
            <field name="name">error</field>
            <field name="action">verify_error()</field>
            <field name="kind">function</field>
        </record>

        <!--Conferir se é possível cancelar -->
        <record id="act_cancel" model="workflow.activity">
            <field name="wkf_id" ref="wkf"/>
            <field name="name">cancel</field>
            <field name="action">cancel_sheet()</field>
            <field name="kind">function</field>
        </record>

        <record id="act_done" model="workflow.activity">
            <field name="wkf_id" ref="wkf"/>
            <field name="name">done</field>
            <field name="action">action_done()</field>
            <field name="kind">function</field>
            <field name="flow_stop">True</field>
        </record>

        <record id="act_done" model="workflow.activity">
            <field name="wkf_id" ref="wkf"/>
            <field name="name">done</field>
            <field name="action">action_paid()</field>
            <field name="kind">function</field>
            <field name="flow_stop">True</field>
        </record>

        <record id="t1" model="workflow.transition">
            <field name="act_from" ref="act_draft"/>
            <field name="act_to" ref="act_done"/>
            <field name="signal">action_done</field>
        </record>

        <record id="t2" model="workflow.transition">
            <field name="act_from" ref="act_draft"/>
            <field name="act_to" ref="act_cancel"/>
            <field name="signal">cancel_sheet</field>
        </record>

         <record id="t3" model="workflow.transition">
            <field name="act_from" ref="act_cancel"/>
            <field name="act_to" ref="act_draft"/>
            <field name="signal">draft</field>
        </record>

         <record id="t4" model="workflow.transition">
            <field name="act_from" ref="act_done"/>
            <field name="act_to" ref="act_cancel"/>
            <field name="signal">cancel_sheet</field>
        </record>

        <!--<record id="t5" model="workflow.transition">-->
            <!--<field name="act_from" ref="act_done"/>-->
            <!--<field name="act_to" ref="act_paid"/>-->
            <!--<field name="condition">check_done()</field>-->
        <!--</record>-->

    </data>
</openerp>
